[{"type":"paragraph text","chapterNumber":8,"verseNumber":1,"sectionNumber":1,"value":"Oh that you were like my brother, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":1,"sectionNumber":2,"value":"who nursed from the breasts of my mother! "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":1,"sectionNumber":3,"value":"If I found you outside, I would kiss you; "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":1,"sectionNumber":4,"value":"yes, and no one would despise me. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":2,"sectionNumber":1,"value":"I would lead you, bringing you into the house of my mother, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":2,"sectionNumber":2,"value":"who would instruct me. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":2,"sectionNumber":3,"value":"I would have you drink spiced wine, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":2,"sectionNumber":4,"value":"of the juice of my pomegranate. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":3,"sectionNumber":1,"value":"His left hand would be under my head. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":3,"sectionNumber":2,"value":"His right hand would embrace me. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":3,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":8,"verseNumber":4,"sectionNumber":1,"value":"I adjure you, daughters of Jerusalem, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":4,"sectionNumber":2,"value":"that you not stir up, nor awaken love, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":4,"sectionNumber":3,"value":"until it so desires. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":1,"value":"Who is this who comes up from the wilderness, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":2,"value":"leaning on her beloved? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":3,"value":"Under the apple tree I aroused you. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":4,"value":"There your mother conceived you. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":5,"value":"There she was in labor and bore you. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":1,"value":"Set me as a seal on your heart, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":2,"value":"as a seal on your arm; "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":3,"value":"for love is strong as death. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":4,"value":"Jealousy is as cruel as Sheol. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":5,"value":"Its flashes are flashes of fire, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":6,"value":"a very flame of Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":7,"sectionNumber":1,"value":"Many waters canâ€™t quench love, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":7,"sectionNumber":2,"value":"neither can floods drown it. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":7,"sectionNumber":3,"value":"If a man would give all the wealth of his house for love, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":7,"sectionNumber":4,"value":"he would be utterly scorned. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":8,"sectionNumber":1,"value":"We have a little sister. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":8,"sectionNumber":2,"value":"She has no breasts. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":8,"sectionNumber":3,"value":"What shall we do for our sister "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":8,"sectionNumber":4,"value":"in the day when she is to be spoken for? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":8,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":8,"verseNumber":9,"sectionNumber":1,"value":"If she is a wall, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":9,"sectionNumber":2,"value":"we will build on her a turret of silver. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":9,"sectionNumber":3,"value":"If she is a door, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":9,"sectionNumber":4,"value":"we will enclose her with boards of cedar. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":10,"sectionNumber":1,"value":"I am a wall, and my breasts like towers, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":10,"sectionNumber":2,"value":"then I was in his eyes like one who found peace. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":11,"sectionNumber":1,"value":"Solomon had a vineyard at Baal Hamon. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":11,"sectionNumber":2,"value":"He leased out the vineyard to keepers. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":11,"sectionNumber":3,"value":"Each was to bring a thousand shekels of silver for its fruit. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":12,"sectionNumber":1,"value":"My own vineyard is before me. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":12,"sectionNumber":2,"value":"The thousand are for you, Solomon, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":12,"sectionNumber":3,"value":"two hundred for those who tend its fruit. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":13,"sectionNumber":1,"value":"You who dwell in the gardens, with friends in attendance, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":13,"sectionNumber":2,"value":"let me hear your voice! "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":14,"sectionNumber":1,"value":"Come away, my beloved! "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":14,"sectionNumber":2,"value":"Be like a gazelle or a young stag on the mountains of spices! "},{"type":"line break"}]