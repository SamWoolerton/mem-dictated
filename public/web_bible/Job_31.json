[{"type":"line text","chapterNumber":31,"verseNumber":31,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":31,"verseNumber":1,"sectionNumber":1,"value":"“I made a covenant with my eyes, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":1,"sectionNumber":2,"value":"how then should I look lustfully at a young woman? "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":2,"sectionNumber":1,"value":"For what is the portion from God above, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":2,"sectionNumber":2,"value":"and the heritage from the Almighty on high? "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":3,"sectionNumber":1,"value":"Is it not calamity to the unrighteous, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":3,"sectionNumber":2,"value":"and disaster to the workers of iniquity? "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":4,"sectionNumber":1,"value":"Doesn’t he see my ways, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":4,"sectionNumber":2,"value":"and count all my steps? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":31,"verseNumber":4,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":31,"verseNumber":5,"sectionNumber":1,"value":"“If I have walked with falsehood, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":5,"sectionNumber":2,"value":"and my foot has hurried to deceit "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":6,"sectionNumber":1,"value":"(let me be weighed in an even balance, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":6,"sectionNumber":2,"value":"that God may know my integrity); "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":7,"sectionNumber":1,"value":"if my step has turned out of the way, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":7,"sectionNumber":2,"value":"if my heart walked after my eyes, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":7,"sectionNumber":3,"value":"if any defilement has stuck to my hands, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":8,"sectionNumber":1,"value":"then let me sow, and let another eat. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":8,"sectionNumber":2,"value":"Yes, let the produce of my field be rooted out. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":31,"verseNumber":8,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":31,"verseNumber":9,"sectionNumber":1,"value":"“If my heart has been enticed to a woman, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":9,"sectionNumber":2,"value":"and I have laid wait at my neighbor’s door, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":10,"sectionNumber":1,"value":"then let my wife grind for another, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":10,"sectionNumber":2,"value":"and let others sleep with her. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":11,"sectionNumber":1,"value":"For that would be a heinous crime. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":11,"sectionNumber":2,"value":"Yes, it would be an iniquity to be punished by the judges; "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":12,"sectionNumber":1,"value":"for it is a fire that consumes to destruction, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":12,"sectionNumber":2,"value":"and would root out all my increase. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":13,"sectionNumber":1,"value":"“If I have despised the cause of my male servant "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":13,"sectionNumber":2,"value":"or of my female servant, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":13,"sectionNumber":3,"value":"when they contended with me, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":14,"sectionNumber":1,"value":"what then will I do when God rises up? "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":14,"sectionNumber":2,"value":"When he visits, what will I answer him? "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":15,"sectionNumber":1,"value":"Didn’t he who made me in the womb make him? "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":15,"sectionNumber":2,"value":"Didn’t one fashion us in the womb? "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":16,"sectionNumber":1,"value":"“If I have withheld the poor from their desire, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":16,"sectionNumber":2,"value":"or have caused the eyes of the widow to fail, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":17,"sectionNumber":1,"value":"or have eaten my morsel alone, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":17,"sectionNumber":2,"value":"and the fatherless has not eaten of it "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":18,"sectionNumber":1,"value":"(no, from my youth he grew up with me as with a father, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":18,"sectionNumber":2,"value":"I have guided her from my mother’s womb); "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":19,"sectionNumber":1,"value":"if I have seen any perish for want of clothing, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":19,"sectionNumber":2,"value":"or that the needy had no covering; "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":20,"sectionNumber":1,"value":"if his heart hasn’t blessed me, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":20,"sectionNumber":2,"value":"if he hasn’t been warmed with my sheep’s fleece; "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":21,"sectionNumber":1,"value":"if I have lifted up my hand against the fatherless, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":21,"sectionNumber":2,"value":"because I saw my help in the gate, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":22,"sectionNumber":1,"value":"then let my shoulder fall from the shoulder blade, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":22,"sectionNumber":2,"value":"and my arm be broken from the bone. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":23,"sectionNumber":1,"value":"For calamity from God is a terror to me. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":23,"sectionNumber":2,"value":"Because of his majesty, I can do nothing. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":24,"sectionNumber":1,"value":"“If I have made gold my hope, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":24,"sectionNumber":2,"value":"and have said to the fine gold, ‘You are my confidence;’ "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":25,"sectionNumber":1,"value":"If I have rejoiced because my wealth was great, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":25,"sectionNumber":2,"value":"and because my hand had gotten much; "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":26,"sectionNumber":1,"value":"if I have seen the sun when it shined, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":26,"sectionNumber":2,"value":"or the moon moving in splendor, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":27,"sectionNumber":1,"value":"and my heart has been secretly enticed, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":27,"sectionNumber":2,"value":"and my hand threw a kiss from my mouth, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":28,"sectionNumber":1,"value":"this also would be an iniquity to be punished by the judges; "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":28,"sectionNumber":2,"value":"for I should have denied the God who is above. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":29,"sectionNumber":1,"value":"“If I have rejoiced at the destruction of him who hated me, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":29,"sectionNumber":2,"value":"or lifted up myself when evil found him "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":30,"sectionNumber":1,"value":"(yes, I have not allowed my mouth to sin "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":30,"sectionNumber":2,"value":"by asking his life with a curse); "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":31,"sectionNumber":1,"value":"if the men of my tent have not said, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":31,"sectionNumber":2,"value":"‘Who can find one who has not been filled with his meat?’ "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":32,"sectionNumber":1,"value":"(the foreigner has not camped in the street, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":32,"sectionNumber":2,"value":"but I have opened my doors to the traveler); "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":33,"sectionNumber":1,"value":"if like Adam I have covered my transgressions, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":33,"sectionNumber":2,"value":"by hiding my iniquity in my heart, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":34,"sectionNumber":1,"value":"because I feared the great multitude, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":34,"sectionNumber":2,"value":"and the contempt of families terrified me, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":34,"sectionNumber":3,"value":"so that I kept silence, and didn’t go out of the door— "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":35,"sectionNumber":1,"value":"oh that I had one to hear me! "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":35,"sectionNumber":2,"value":"Behold, here is my signature! Let the Almighty answer me! "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":35,"sectionNumber":3,"value":"Let the accuser write my indictment! "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":36,"sectionNumber":1,"value":"Surely I would carry it on my shoulder; "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":36,"sectionNumber":2,"value":"and I would bind it to me as a crown. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":37,"sectionNumber":1,"value":"I would declare to him the number of my steps. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":37,"sectionNumber":2,"value":"as a prince would I go near to him. "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":38,"sectionNumber":1,"value":"If my land cries out against me, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":38,"sectionNumber":2,"value":"and its furrows weep together; "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":39,"sectionNumber":1,"value":"if I have eaten its fruits without money, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":39,"sectionNumber":2,"value":"or have caused its owners to lose their life, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":40,"sectionNumber":1,"value":"let briers grow instead of wheat, "},{"type":"line break"},{"type":"line text","chapterNumber":31,"verseNumber":40,"sectionNumber":2,"value":"and stinkweed instead of barley.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":31,"verseNumber":40,"sectionNumber":3,"value":"The words of Job are ended. "},{"type":"paragraph end"},{"type":"paragraph start"}]