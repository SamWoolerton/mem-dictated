[{"type":"paragraph text","chapterNumber":34,"verseNumber":1,"sectionNumber":1,"value":"Moreover Elihu answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":34,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":34,"verseNumber":2,"sectionNumber":1,"value":"“Hear my words, you wise men. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":2,"sectionNumber":2,"value":"Give ear to me, you who have knowledge. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":3,"sectionNumber":1,"value":"For the ear tries words, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":3,"sectionNumber":2,"value":"as the palate tastes food. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":4,"sectionNumber":1,"value":"Let us choose for us that which is right. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":4,"sectionNumber":2,"value":"Let us know among ourselves what is good. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":5,"sectionNumber":1,"value":"For Job has said, ‘I am righteous, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":5,"sectionNumber":2,"value":"God has taken away my right: "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":6,"sectionNumber":1,"value":"Notwithstanding my right I am considered a liar. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":6,"sectionNumber":2,"value":"My wound is incurable, though I am without disobedience.’ "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":7,"sectionNumber":1,"value":"What man is like Job, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":7,"sectionNumber":2,"value":"who drinks scorn like water, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":8,"sectionNumber":1,"value":"Who goes in company with the workers of iniquity, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":8,"sectionNumber":2,"value":"and walks with wicked men? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":9,"sectionNumber":1,"value":"For he has said, ‘It profits a man nothing "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":9,"sectionNumber":2,"value":"that he should delight himself with God.’ "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":34,"verseNumber":9,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":34,"verseNumber":10,"sectionNumber":1,"value":"“Therefore listen to me, you men of understanding: "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":10,"sectionNumber":2,"value":"far be it from God, that he should do wickedness, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":10,"sectionNumber":3,"value":"from the Almighty, that he should commit iniquity. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":11,"sectionNumber":1,"value":"For the work of a man he will render to him, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":11,"sectionNumber":2,"value":"and cause every man to find according to his ways. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":12,"sectionNumber":1,"value":"Yes surely, God will not do wickedly, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":12,"sectionNumber":2,"value":"neither will the Almighty pervert justice. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":13,"sectionNumber":1,"value":"Who put him in charge of the earth? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":13,"sectionNumber":2,"value":"Or who has appointed him over the whole world? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":14,"sectionNumber":1,"value":"If he set his heart on himself, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":14,"sectionNumber":2,"value":"if he gathered to himself his spirit and his breath, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":15,"sectionNumber":1,"value":"all flesh would perish together, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":15,"sectionNumber":2,"value":"and man would turn again to dust. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":34,"verseNumber":15,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":34,"verseNumber":16,"sectionNumber":1,"value":"“If now you have understanding, hear this. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":16,"sectionNumber":2,"value":"Listen to the voice of my words. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":17,"sectionNumber":1,"value":"Should even one who hates justice govern? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":17,"sectionNumber":2,"value":"Will you condemn him who is righteous and mighty?— "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":18,"sectionNumber":1,"value":"Who says to a king, ‘Vile!’ "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":18,"sectionNumber":2,"value":"or to nobles, ‘Wicked!’? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":19,"sectionNumber":1,"value":"He doesn’t respect the persons of princes, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":19,"sectionNumber":2,"value":"nor respect the rich more than the poor; "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":19,"sectionNumber":3,"value":"for they all are the work of his hands. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":20,"sectionNumber":1,"value":"In a moment they die, even at midnight. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":20,"sectionNumber":2,"value":"The people are shaken and pass away. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":20,"sectionNumber":3,"value":"The mighty are taken away without a hand. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":34,"verseNumber":20,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":34,"verseNumber":21,"sectionNumber":1,"value":"“For his eyes are on the ways of a man. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":21,"sectionNumber":2,"value":"He sees all his goings. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":22,"sectionNumber":1,"value":"There is no darkness, nor thick gloom, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":22,"sectionNumber":2,"value":"where the workers of iniquity may hide themselves. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":23,"sectionNumber":1,"value":"For he doesn’t need to consider a man further, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":23,"sectionNumber":2,"value":"that he should go before God in judgment. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":24,"sectionNumber":1,"value":"He breaks mighty men in pieces in ways past finding out, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":24,"sectionNumber":2,"value":"and sets others in their place. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":25,"sectionNumber":1,"value":"Therefore he takes knowledge of their works. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":25,"sectionNumber":2,"value":"He overturns them in the night, so that they are destroyed. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":26,"sectionNumber":1,"value":"He strikes them as wicked men "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":26,"sectionNumber":2,"value":"in the open sight of others; "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":27,"sectionNumber":1,"value":"because they turned away from following him, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":27,"sectionNumber":2,"value":"and wouldn’t pay attention to any of his ways, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":28,"sectionNumber":1,"value":"so that they caused the cry of the poor to come to him. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":28,"sectionNumber":2,"value":"He heard the cry of the afflicted. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":29,"sectionNumber":1,"value":"When he gives quietness, who then can condemn? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":29,"sectionNumber":2,"value":"When he hides his face, who then can see him? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":29,"sectionNumber":3,"value":"He is over a nation or a man alike, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":30,"sectionNumber":1,"value":"that the godless man may not reign, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":30,"sectionNumber":2,"value":"that there be no one to ensnare the people. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":34,"verseNumber":30,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":34,"verseNumber":31,"sectionNumber":1,"value":"“For has any said to God, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":31,"sectionNumber":2,"value":"‘I am guilty, but I will not offend any more. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":32,"sectionNumber":1,"value":"Teach me that which I don’t see. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":32,"sectionNumber":2,"value":"If I have done iniquity, I will do it no more’? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":33,"sectionNumber":1,"value":"Shall his recompense be as you desire, that you refuse it? "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":33,"sectionNumber":2,"value":"For you must choose, and not I. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":33,"sectionNumber":3,"value":"Therefore speak what you know. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":34,"sectionNumber":1,"value":"Men of understanding will tell me, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":34,"sectionNumber":2,"value":"yes, every wise man who hears me: "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":35,"sectionNumber":1,"value":"‘Job speaks without knowledge. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":35,"sectionNumber":2,"value":"His words are without wisdom.’ "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":36,"sectionNumber":1,"value":"I wish that Job were tried to the end, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":36,"sectionNumber":2,"value":"because of his answering like wicked men. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":37,"sectionNumber":1,"value":"For he adds rebellion to his sin. "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":37,"sectionNumber":2,"value":"He claps his hands among us, "},{"type":"line break"},{"type":"line text","chapterNumber":34,"verseNumber":37,"sectionNumber":3,"value":"and multiplies his words against God.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"}]