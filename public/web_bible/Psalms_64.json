[{"type":"line text","chapterNumber":64,"verseNumber":11,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":64,"verseNumber":1,"sectionNumber":1,"value":"Hear my voice, God, in my complaint. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":1,"sectionNumber":2,"value":"Preserve my life from fear of the enemy. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":2,"sectionNumber":1,"value":"Hide me from the conspiracy of the wicked, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":2,"sectionNumber":2,"value":"from the noisy crowd of the ones doing evil; "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":3,"sectionNumber":1,"value":"who sharpen their tongue like a sword, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":3,"sectionNumber":2,"value":"and aim their arrows, deadly words, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":4,"sectionNumber":1,"value":"to shoot innocent men from ambushes. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":4,"sectionNumber":2,"value":"They shoot at him suddenly and fearlessly. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":1,"value":"They encourage themselves in evil plans. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":2,"value":"They talk about laying snares secretly. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":3,"value":"They say, “Who will see them?” "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":6,"sectionNumber":1,"value":"They plot injustice, saying, “We have made a perfect plan!” "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":6,"sectionNumber":2,"value":"Surely man’s mind and heart are cunning. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":7,"sectionNumber":1,"value":"But God will shoot at them. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":7,"sectionNumber":2,"value":"They will be suddenly struck down with an arrow. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":8,"sectionNumber":1,"value":"Their own tongues shall ruin them. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":8,"sectionNumber":2,"value":"All who see them will shake their heads. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":9,"sectionNumber":1,"value":"All mankind shall be afraid. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":9,"sectionNumber":2,"value":"They shall declare the work of God, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":9,"sectionNumber":3,"value":"and shall wisely ponder what he has done. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":10,"sectionNumber":1,"value":"The righteous shall be glad in Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":10,"sectionNumber":2,"value":"and shall take refuge in him. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":10,"sectionNumber":3,"value":"All the upright in heart shall praise him! "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"For the Chief Musician. A Psalm by David. A song."},{"type":"stanza start"}]