[{"type":"paragraph text","chapterNumber":12,"verseNumber":1,"sectionNumber":1,"value":"Ephraim feeds on wind, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":12,"verseNumber":1,"sectionNumber":2,"value":"and chases the east wind. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":1,"sectionNumber":3,"value":"He continually multiplies lies and desolation. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":1,"sectionNumber":4,"value":"They make a covenant with Assyria, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":1,"sectionNumber":5,"value":"and oil is carried into Egypt. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":2,"sectionNumber":1,"value":"Yahweh also has a controversy with Judah, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":2,"sectionNumber":2,"value":"and will punish Jacob according to his ways; "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":2,"sectionNumber":3,"value":"according to his deeds he will repay him. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":3,"sectionNumber":1,"value":"In the womb he took his brother by the heel; "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":3,"sectionNumber":2,"value":"and in his manhood he contended with God. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":4,"sectionNumber":1,"value":"Indeed, he struggled with the angel, and prevailed; "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":4,"sectionNumber":2,"value":"he wept, and made supplication to him. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":4,"sectionNumber":3,"value":"He found him at Bethel, and there he spoke with us, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":5,"sectionNumber":1,"value":"even Yahweh, the God of Armies; "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":5,"sectionNumber":2,"value":"Yahweh is his name of renown! "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":6,"sectionNumber":1,"value":"Therefore turn to your God. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":6,"sectionNumber":2,"value":"Keep kindness and justice, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":6,"sectionNumber":3,"value":"and wait continually for your God. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":12,"verseNumber":6,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":12,"verseNumber":7,"sectionNumber":1,"value":"A merchant has dishonest scales in his hand. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":7,"sectionNumber":2,"value":"He loves to defraud. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":8,"sectionNumber":1,"value":"Ephraim said, “Surely I have become rich, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":8,"sectionNumber":2,"value":"I have found myself wealth. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":8,"sectionNumber":3,"value":"In all my wealth they won’t find in me any iniquity that is sin.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":12,"verseNumber":8,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":12,"verseNumber":9,"sectionNumber":1,"value":"“But I am Yahweh your God from the land of Egypt. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":9,"sectionNumber":2,"value":"I will yet again make you dwell in tents, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":9,"sectionNumber":3,"value":"as in the days of the solemn feast. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":10,"sectionNumber":1,"value":"I have also spoken to the prophets, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":10,"sectionNumber":2,"value":"and I have multiplied visions; "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":10,"sectionNumber":3,"value":"and by the ministry of the prophets I have used parables. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":11,"sectionNumber":1,"value":"If Gilead is wicked, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":11,"sectionNumber":2,"value":"surely they are worthless. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":11,"sectionNumber":3,"value":"In Gilgal they sacrifice bulls. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":11,"sectionNumber":4,"value":"Indeed, their altars are like heaps in the furrows of the field. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":12,"sectionNumber":1,"value":"Jacob fled into the country of Aram, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":12,"sectionNumber":2,"value":"and Israel served to get a wife, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":12,"sectionNumber":3,"value":"and for a wife he tended flocks and herds. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":13,"sectionNumber":1,"value":"By a prophet Yahweh brought Israel up out of Egypt, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":13,"sectionNumber":2,"value":"and by a prophet he was preserved. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":14,"sectionNumber":1,"value":"Ephraim has bitterly provoked anger. "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":14,"sectionNumber":2,"value":"Therefore his blood will be left on him, "},{"type":"line break"},{"type":"line text","chapterNumber":12,"verseNumber":14,"sectionNumber":3,"value":"and his Lord will repay his contempt. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]