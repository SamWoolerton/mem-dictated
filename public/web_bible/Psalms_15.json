[{"type":"line text","chapterNumber":15,"verseNumber":7,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":15,"verseNumber":1,"sectionNumber":1,"value":"Yahweh, who shall dwell in your sanctuary? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":1,"sectionNumber":2,"value":"Who shall live on your holy hill? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":2,"sectionNumber":1,"value":"He who walks blamelessly and does what is right, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":2,"sectionNumber":2,"value":"and speaks truth in his heart; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":3,"sectionNumber":1,"value":"he who doesn’t slander with his tongue, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":3,"sectionNumber":2,"value":"nor does evil to his friend, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":3,"sectionNumber":3,"value":"nor casts slurs against his fellow man; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":4,"sectionNumber":1,"value":"in whose eyes a vile man is despised, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":4,"sectionNumber":2,"value":"but who honors those who fear Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":4,"sectionNumber":3,"value":"he who keeps an oath even when it hurts, and doesn’t change; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":5,"sectionNumber":1,"value":"he who doesn’t lend out his money for usury, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":5,"sectionNumber":2,"value":"nor take a bribe against the innocent. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":15,"verseNumber":5,"sectionNumber":3,"value":"He who does these things shall never be shaken. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"A Poem by David."},{"type":"stanza start"}]