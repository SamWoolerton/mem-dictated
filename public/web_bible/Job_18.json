[{"type":"paragraph text","chapterNumber":18,"verseNumber":1,"sectionNumber":1,"value":"Then Bildad the Shuhite answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":18,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":18,"verseNumber":2,"sectionNumber":1,"value":"“How long will you hunt for words? "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":2,"sectionNumber":2,"value":"Consider, and afterwards we will speak. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":3,"sectionNumber":1,"value":"Why are we counted as animals, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":3,"sectionNumber":2,"value":"which have become unclean in your sight? "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":4,"sectionNumber":1,"value":"You who tear yourself in your anger, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":4,"sectionNumber":2,"value":"will the earth be forsaken for you? "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":4,"sectionNumber":3,"value":"Or will the rock be removed out of its place? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":18,"verseNumber":4,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":18,"verseNumber":5,"sectionNumber":1,"value":"“Yes, the light of the wicked will be put out. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":5,"sectionNumber":2,"value":"The spark of his fire won’t shine. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":6,"sectionNumber":1,"value":"The light will be dark in his tent. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":6,"sectionNumber":2,"value":"His lamp above him will be put out. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":7,"sectionNumber":1,"value":"The steps of his strength will be shortened. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":7,"sectionNumber":2,"value":"His own counsel will cast him down. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":8,"sectionNumber":1,"value":"For he is cast into a net by his own feet, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":8,"sectionNumber":2,"value":"and he wanders into its mesh. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":9,"sectionNumber":1,"value":"A snare will take him by the heel. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":9,"sectionNumber":2,"value":"A trap will catch him. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":10,"sectionNumber":1,"value":"A noose is hidden for him in the ground, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":10,"sectionNumber":2,"value":"a trap for him on the path. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":11,"sectionNumber":1,"value":"Terrors will make him afraid on every side, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":11,"sectionNumber":2,"value":"and will chase him at his heels. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":12,"sectionNumber":1,"value":"His strength will be famished. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":12,"sectionNumber":2,"value":"Calamity will be ready at his side. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":13,"sectionNumber":1,"value":"The members of his body will be devoured. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":13,"sectionNumber":2,"value":"The firstborn of death will devour his members. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":14,"sectionNumber":1,"value":"He will be rooted out of the security of his tent. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":14,"sectionNumber":2,"value":"He will be brought to the king of terrors. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":15,"sectionNumber":1,"value":"There will dwell in his tent that which is none of his. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":15,"sectionNumber":2,"value":"Sulfur will be scattered on his habitation. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":16,"sectionNumber":1,"value":"His roots will be dried up beneath. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":16,"sectionNumber":2,"value":"His branch will be cut off above. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":17,"sectionNumber":1,"value":"His memory will perish from the earth. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":17,"sectionNumber":2,"value":"He will have no name in the street. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":18,"sectionNumber":1,"value":"He will be driven from light into darkness, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":18,"sectionNumber":2,"value":"and chased out of the world. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":19,"sectionNumber":1,"value":"He will have neither son nor grandson among his people, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":19,"sectionNumber":2,"value":"nor any remaining where he lived. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":20,"sectionNumber":1,"value":"Those who come after will be astonished at his day, "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":20,"sectionNumber":2,"value":"as those who went before were frightened. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":21,"sectionNumber":1,"value":"Surely such are the dwellings of the unrighteous. "},{"type":"line break"},{"type":"line text","chapterNumber":18,"verseNumber":21,"sectionNumber":2,"value":"This is the place of him who doesn’t know God.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]