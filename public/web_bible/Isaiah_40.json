[{"type":"paragraph text","chapterNumber":40,"verseNumber":1,"sectionNumber":1,"value":"“Comfort, comfort my people,” says your God.  "},{"type":"paragraph text","chapterNumber":40,"verseNumber":2,"sectionNumber":1,"value":"“Speak comfortably to Jerusalem; and call out to her that her warfare is accomplished, that her iniquity is pardoned, that she has received of Yahweh’s hand double for all her sins.” "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":2,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":3,"sectionNumber":1,"value":"The voice of one who calls out, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":3,"sectionNumber":2,"value":"“Prepare the way of Yahweh in the wilderness! "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":3,"sectionNumber":3,"value":"Make a level highway in the desert for our God. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":4,"sectionNumber":1,"value":"Every valley shall be exalted, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":4,"sectionNumber":2,"value":"and every mountain and hill shall be made low. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":4,"sectionNumber":3,"value":"The uneven shall be made level, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":4,"sectionNumber":4,"value":"and the rough places a plain. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":5,"sectionNumber":1,"value":"Yahweh’s glory shall be revealed, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":5,"sectionNumber":2,"value":"and all flesh shall see it together; "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":5,"sectionNumber":3,"value":"for the mouth of Yahweh has spoken it.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":5,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":6,"sectionNumber":1,"value":"The voice of one saying, “Cry!” "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":6,"sectionNumber":2,"value":"One said, “What shall I cry?” "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":6,"sectionNumber":3,"value":"“All flesh is like grass, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":6,"sectionNumber":4,"value":"and all its glory is like the flower of the field. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":7,"sectionNumber":1,"value":"The grass withers, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":7,"sectionNumber":2,"value":"the flower fades, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":7,"sectionNumber":3,"value":"because Yahweh’s breath blows on it. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":7,"sectionNumber":4,"value":"Surely the people are like grass. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":8,"sectionNumber":1,"value":"The grass withers, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":8,"sectionNumber":2,"value":"the flower fades; "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":8,"sectionNumber":3,"value":"but the word of our God stands forever.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":8,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":9,"sectionNumber":1,"value":"You who tell good news to Zion, go up on a high mountain. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":9,"sectionNumber":2,"value":"You who tell good news to Jerusalem, lift up your voice with strength! "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":9,"sectionNumber":3,"value":"Lift it up! Don’t be afraid! "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":9,"sectionNumber":4,"value":"Say to the cities of Judah, “Behold, your God!” "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":10,"sectionNumber":1,"value":"Behold, the Lord Yahweh will come as a mighty one, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":10,"sectionNumber":2,"value":"and his arm will rule for him. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":10,"sectionNumber":3,"value":"Behold, his reward is with him, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":10,"sectionNumber":4,"value":"and his recompense before him. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":11,"sectionNumber":1,"value":"He will feed his flock like a shepherd. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":11,"sectionNumber":2,"value":"He will gather the lambs in his arm, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":11,"sectionNumber":3,"value":"and carry them in his bosom. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":11,"sectionNumber":4,"value":"He will gently lead those who have their young. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":11,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":12,"sectionNumber":1,"value":"Who has measured the waters in the hollow of his hand, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":12,"sectionNumber":2,"value":"and marked off the sky with his span, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":12,"sectionNumber":3,"value":"and calculated the dust of the earth in a measuring basket, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":12,"sectionNumber":4,"value":"and weighed the mountains in scales, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":12,"sectionNumber":5,"value":"and the hills in a balance? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":13,"sectionNumber":1,"value":"Who has directed Yahweh’s Spirit, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":13,"sectionNumber":2,"value":"or has taught him as his counselor? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":14,"sectionNumber":1,"value":"Who did he take counsel with, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":14,"sectionNumber":2,"value":"and who instructed him, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":14,"sectionNumber":3,"value":"and taught him in the path of justice, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":14,"sectionNumber":4,"value":"and taught him knowledge, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":14,"sectionNumber":5,"value":"and showed him the way of understanding? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":15,"sectionNumber":1,"value":"Behold, the nations are like a drop in a bucket, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":15,"sectionNumber":2,"value":"and are regarded as a speck of dust on a balance. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":15,"sectionNumber":3,"value":"Behold, he lifts up the islands like a very little thing. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":16,"sectionNumber":1,"value":"Lebanon is not sufficient to burn, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":16,"sectionNumber":2,"value":"nor its animals sufficient for a burnt offering. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":17,"sectionNumber":1,"value":"All the nations are like nothing before him. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":17,"sectionNumber":2,"value":"They are regarded by him as less than nothing, and vanity. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":17,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":18,"sectionNumber":1,"value":"To whom then will you liken God? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":18,"sectionNumber":2,"value":"Or what likeness will you compare to him? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":19,"sectionNumber":1,"value":"A workman has cast an image, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":19,"sectionNumber":2,"value":"and the goldsmith overlays it with gold, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":19,"sectionNumber":3,"value":"and casts silver chains for it. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":20,"sectionNumber":1,"value":"He who is too impoverished for such an offering chooses a tree that will not rot. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":20,"sectionNumber":2,"value":"He seeks a skillful workman to set up a carved image for him that will not be moved. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":20,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":21,"sectionNumber":1,"value":"Haven’t you known? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":21,"sectionNumber":2,"value":"Haven’t you heard? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":21,"sectionNumber":3,"value":"Haven’t you been told from the beginning? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":21,"sectionNumber":4,"value":"Haven’t you understood from the foundations of the earth? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":22,"sectionNumber":1,"value":"It is he who sits above the circle of the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":22,"sectionNumber":2,"value":"and its inhabitants are like grasshoppers; "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":22,"sectionNumber":3,"value":"who stretches out the heavens like a curtain, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":22,"sectionNumber":4,"value":"and spreads them out like a tent to dwell in, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":23,"sectionNumber":1,"value":"who brings princes to nothing, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":23,"sectionNumber":2,"value":"who makes the judges of the earth meaningless. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":24,"sectionNumber":1,"value":"They are planted scarcely. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":24,"sectionNumber":2,"value":"They are sown scarcely. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":24,"sectionNumber":3,"value":"Their stock has scarcely taken root in the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":24,"sectionNumber":4,"value":"He merely blows on them, and they wither, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":24,"sectionNumber":5,"value":"and the whirlwind takes them away as stubble. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":24,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":25,"sectionNumber":1,"value":"“To whom then will you liken me? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":25,"sectionNumber":2,"value":"Who is my equal?” says the Holy One. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":1,"value":"Lift up your eyes on high, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":2,"value":"and see who has created these, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":3,"value":"who brings out their army by number. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":4,"value":"He calls them all by name. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":5,"value":"by the greatness of his might, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":6,"value":"and because he is strong in power, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":7,"value":"not one is lacking. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":40,"verseNumber":26,"sectionNumber":8,"value":" "},{"type":"line text","chapterNumber":40,"verseNumber":27,"sectionNumber":1,"value":"Why do you say, Jacob, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":27,"sectionNumber":2,"value":"and speak, Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":27,"sectionNumber":3,"value":"“My way is hidden from Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":27,"sectionNumber":4,"value":"and the justice due me is disregarded by my God?” "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":28,"sectionNumber":1,"value":"Haven’t you known? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":28,"sectionNumber":2,"value":"Haven’t you heard? "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":28,"sectionNumber":3,"value":"The everlasting God, Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":28,"sectionNumber":4,"value":"the Creator of the ends of the earth, doesn’t faint. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":28,"sectionNumber":5,"value":"He isn’t weary. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":28,"sectionNumber":6,"value":"His understanding is unsearchable. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":29,"sectionNumber":1,"value":"He gives power to the weak. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":29,"sectionNumber":2,"value":"He increases the strength of him who has no might. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":30,"sectionNumber":1,"value":"Even the youths faint and get weary, "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":30,"sectionNumber":2,"value":"and the young men utterly fall; "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":31,"sectionNumber":1,"value":"but those who wait for Yahweh will renew their strength. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":31,"sectionNumber":2,"value":"They will mount up with wings like eagles. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":31,"sectionNumber":3,"value":"They will run, and not be weary. "},{"type":"line break"},{"type":"line text","chapterNumber":40,"verseNumber":31,"sectionNumber":4,"value":"They will walk, and not faint. "},{"type":"line break"}]