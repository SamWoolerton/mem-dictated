[{"type":"paragraph text","chapterNumber":19,"verseNumber":1,"sectionNumber":1,"value":"Then Job answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":19,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":19,"verseNumber":2,"sectionNumber":1,"value":"“How long will you torment me, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":2,"sectionNumber":2,"value":"and crush me with words? "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":3,"sectionNumber":1,"value":"You have reproached me ten times. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":3,"sectionNumber":2,"value":"You aren’t ashamed that you attack me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":4,"sectionNumber":1,"value":"If it is true that I have erred, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":4,"sectionNumber":2,"value":"my error remains with myself. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":5,"sectionNumber":1,"value":"If indeed you will magnify yourselves against me, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":5,"sectionNumber":2,"value":"and plead against me my reproach, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":6,"sectionNumber":1,"value":"know now that God has subverted me, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":6,"sectionNumber":2,"value":"and has surrounded me with his net. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":19,"verseNumber":6,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":19,"verseNumber":7,"sectionNumber":1,"value":"“Behold, I cry out of wrong, but I am not heard. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":7,"sectionNumber":2,"value":"I cry for help, but there is no justice. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":8,"sectionNumber":1,"value":"He has walled up my way so that I can’t pass, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":8,"sectionNumber":2,"value":"and has set darkness in my paths. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":9,"sectionNumber":1,"value":"He has stripped me of my glory, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":9,"sectionNumber":2,"value":"and taken the crown from my head. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":10,"sectionNumber":1,"value":"He has broken me down on every side, and I am gone. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":10,"sectionNumber":2,"value":"He has plucked my hope up like a tree. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":11,"sectionNumber":1,"value":"He has also kindled his wrath against me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":11,"sectionNumber":2,"value":"He counts me among his adversaries. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":12,"sectionNumber":1,"value":"His troops come on together, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":12,"sectionNumber":2,"value":"build a siege ramp against me, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":12,"sectionNumber":3,"value":"and encamp around my tent. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":19,"verseNumber":12,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":19,"verseNumber":13,"sectionNumber":1,"value":"“He has put my brothers far from me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":13,"sectionNumber":2,"value":"My acquaintances are wholly estranged from me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":14,"sectionNumber":1,"value":"My relatives have gone away. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":14,"sectionNumber":2,"value":"My familiar friends have forgotten me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":15,"sectionNumber":1,"value":"Those who dwell in my house and my maids consider me a stranger. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":15,"sectionNumber":2,"value":"I am an alien in their sight. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":16,"sectionNumber":1,"value":"I call to my servant, and he gives me no answer. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":16,"sectionNumber":2,"value":"I beg him with my mouth. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":17,"sectionNumber":1,"value":"My breath is offensive to my wife. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":17,"sectionNumber":2,"value":"I am loathsome to the children of my own mother. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":18,"sectionNumber":1,"value":"Even young children despise me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":18,"sectionNumber":2,"value":"If I arise, they speak against me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":19,"sectionNumber":1,"value":"All my familiar friends abhor me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":19,"sectionNumber":2,"value":"They whom I loved have turned against me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":20,"sectionNumber":1,"value":"My bones stick to my skin and to my flesh. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":20,"sectionNumber":2,"value":"I have escaped by the skin of my teeth. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":19,"verseNumber":20,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":19,"verseNumber":21,"sectionNumber":1,"value":"“Have pity on me. Have pity on me, you my friends; "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":21,"sectionNumber":2,"value":"for the hand of God has touched me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":22,"sectionNumber":1,"value":"Why do you persecute me as God, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":22,"sectionNumber":2,"value":"and are not satisfied with my flesh? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":19,"verseNumber":22,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":19,"verseNumber":23,"sectionNumber":1,"value":"“Oh that my words were now written! "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":23,"sectionNumber":2,"value":"Oh that they were inscribed in a book! "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":24,"sectionNumber":1,"value":"That with an iron pen and lead "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":24,"sectionNumber":2,"value":"they were engraved in the rock forever! "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":25,"sectionNumber":1,"value":"But as for me, I know that my Redeemer lives. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":25,"sectionNumber":2,"value":"In the end, he will stand upon the earth. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":26,"sectionNumber":1,"value":"After my skin is destroyed, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":26,"sectionNumber":2,"value":"then I will see God in my flesh, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":27,"sectionNumber":1,"value":"whom I, even I, will see on my side. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":27,"sectionNumber":2,"value":"My eyes will see, and not as a stranger. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":19,"verseNumber":27,"sectionNumber":3,"value":"“My heart is consumed within me. "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":28,"sectionNumber":1,"value":"If you say, ‘How we will persecute him!’ "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":28,"sectionNumber":2,"value":"because the root of the matter is found in me, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":29,"sectionNumber":1,"value":"be afraid of the sword, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":29,"sectionNumber":2,"value":"for wrath brings the punishments of the sword, "},{"type":"line break"},{"type":"line text","chapterNumber":19,"verseNumber":29,"sectionNumber":3,"value":"that you may know there is a judgment.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]