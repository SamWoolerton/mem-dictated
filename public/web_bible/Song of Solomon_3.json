[{"type":"paragraph text","chapterNumber":3,"verseNumber":1,"sectionNumber":1,"value":"By night on my bed, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":2,"value":"I sought him whom my soul loves. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":3,"value":"I sought him, but I didn’t find him. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":1,"value":"I will get up now, and go about the city; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":2,"value":"in the streets and in the squares I will seek him whom my soul loves. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":3,"value":"I sought him, but I didn’t find him. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":1,"value":"The watchmen who go about the city found me; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":2,"value":"“Have you seen him whom my soul loves?” "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":1,"value":"I had scarcely passed from them, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":2,"value":"when I found him whom my soul loves. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":3,"value":"I held him, and would not let him go, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":4,"value":"until I had brought him into my mother’s house, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":5,"value":"into the room of her who conceived me. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":1,"value":"I adjure you, daughters of Jerusalem, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":2,"value":"by the roes, or by the hinds of the field, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":3,"value":"that you not stir up nor awaken love, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":4,"value":"until it so desires. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":1,"value":"Who is this who comes up from the wilderness like pillars of smoke, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":2,"value":"perfumed with myrrh and frankincense, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":3,"value":"with all spices of the merchant? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":1,"value":"Behold, it is Solomon’s carriage! "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":2,"value":"Sixty mighty men are around it, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":3,"value":"of the mighty men of Israel. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":1,"value":"They all handle the sword, and are expert in war. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":2,"value":"Every man has his sword on his thigh, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":3,"value":"because of fear in the night. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":1,"value":"King Solomon made himself a carriage "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":2,"value":"of the wood of Lebanon. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":1,"value":"He made its pillars of silver, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":2,"value":"its bottom of gold, its seat of purple, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":3,"value":"the middle of it being paved with love, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":4,"value":"from the daughters of Jerusalem. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":1,"value":"Go out, you daughters of Zion, and see king Solomon, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":2,"value":"with the crown with which his mother has crowned him, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":3,"value":"in the day of his weddings, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":4,"value":"in the day of the gladness of his heart. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]