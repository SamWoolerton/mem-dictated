[{"type":"paragraph text","chapterNumber":2,"verseNumber":1,"sectionNumber":1,"value":"“Say to your brothers, ‘My people!’ "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":2,"value":"and to your sisters, ‘My loved one!’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":1,"value":"Contend with your mother! "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":2,"value":"Contend, for she is not my wife, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":3,"value":"neither am I her husband; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":4,"value":"and let her put away her prostitution from her face, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":5,"value":"and her adulteries from between her breasts; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":1,"value":"Lest I strip her naked, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":2,"value":"and make her bare as in the day that she was born, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":3,"value":"and make her like a wilderness, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":4,"value":"and set her like a dry land, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":5,"value":"and kill her with thirst. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":1,"value":"Indeed, on her children I will have no mercy; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":2,"value":"for they are children of unfaithfulness; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":1,"value":"For their mother has played the prostitute. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":2,"value":"She who conceived them has done shamefully; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":3,"value":"for she said, ‘I will go after my lovers, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":4,"value":"who give me my bread and my water, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":5,"value":"my wool and my flax, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":6,"value":"my oil and my drink.’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":"Therefore behold, I will hedge up your way with thorns, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":2,"value":"and I will build a wall against her, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":3,"value":"that she can’t find her way. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":1,"value":"She will follow after her lovers, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":2,"value":"but she won’t overtake them; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":3,"value":"and she will seek them, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":4,"value":"but won’t find them. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":5,"value":"Then she will say, ‘I will go and return to my first husband; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":6,"value":"for then was it better with me than now.’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":1,"value":"For she didn’t know that I gave her the grain, the new wine, and the oil, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":2,"value":"and multiplied to her silver and gold, which they used for Baal. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":1,"value":"Therefore I will take back my grain in its time, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":2,"value":"and my new wine in its season, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":3,"value":"and will pluck away my wool and my flax which should have covered her nakedness. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":1,"value":"Now I will uncover her lewdness in the sight of her lovers, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":2,"value":"and no one will deliver her out of my hand. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":1,"value":"I will also cause all her celebrations to cease: "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":2,"value":"her feasts, her new moons, her Sabbaths, and all her solemn assemblies. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":1,"value":"I will lay waste her vines and her fig trees, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":2,"value":"about which she has said, ‘These are my wages that my lovers have given me; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":3,"value":"and I will make them a forest,’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":4,"value":"and the animals of the field shall eat them. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":1,"value":"I will visit on her the days of the Baals, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":2,"value":"to which she burned incense, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":3,"value":"when she decked herself with her earrings and her jewels, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":4,"value":"and went after her lovers, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":5,"value":"and forgot me,” says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":1,"value":"“Therefore behold, I will allure her, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":2,"value":"and bring her into the wilderness, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":3,"value":"and speak tenderly to her. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":1,"value":"I will give her vineyards from there, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":2,"value":"and the valley of Achor for a door of hope; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":3,"value":"and she will respond there, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":4,"value":"as in the days of her youth, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":5,"value":"and as in the day when she came up out of the land of Egypt. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":1,"value":"It will be in that day,” says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":2,"value":"“that you will call me ‘my husband,’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":3,"value":"and no longer call me ‘my master.’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":1,"value":"For I will take away the names of the Baals out of her mouth, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":2,"value":"and they will no longer be mentioned by name. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":1,"value":"In that day I will make a covenant for them with the animals of the field, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":2,"value":"and with the birds of the sky, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":3,"value":"and with the creeping things of the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":4,"value":"I will break the bow, the sword, and the battle out of the land, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":5,"value":"and will make them lie down safely. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":1,"value":"I will betroth you to me forever. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":2,"value":"Yes, I will betroth you to me in righteousness, in justice, in loving kindness, and in compassion. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":1,"value":"I will even betroth you to me in faithfulness; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":2,"value":"and you shall know Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":1,"value":"It will happen in that day, I will respond,” says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":2,"value":"“I will respond to the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":3,"value":"and they will respond to the earth; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":1,"value":"and the earth will respond to the grain, and the new wine, and the oil; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":2,"value":"and they will respond to Jezreel. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":1,"value":"I will sow her to me in the earth; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":2,"value":"and I will have mercy on her who had not obtained mercy; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":3,"value":"and I will tell those who were not my people, ‘You are my people;’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":4,"value":"and they will say, ‘My God!’ ” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]