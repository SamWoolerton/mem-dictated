[{"type":"paragraph text","chapterNumber":20,"verseNumber":1,"sectionNumber":1,"value":"Then Zophar the Naamathite answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":20,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":20,"verseNumber":2,"sectionNumber":1,"value":"“Therefore my thoughts answer me, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":2,"sectionNumber":2,"value":"even by reason of my haste that is in me. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":3,"sectionNumber":1,"value":"I have heard the reproof which puts me to shame. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":3,"sectionNumber":2,"value":"The spirit of my understanding answers me. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":4,"sectionNumber":1,"value":"Don’t you know this from old time, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":4,"sectionNumber":2,"value":"since man was placed on earth, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":5,"sectionNumber":1,"value":"that the triumphing of the wicked is short, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":5,"sectionNumber":2,"value":"the joy of the godless but for a moment? "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":6,"sectionNumber":1,"value":"Though his height mount up to the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":6,"sectionNumber":2,"value":"and his head reach to the clouds, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":7,"sectionNumber":1,"value":"yet he will perish forever like his own dung. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":7,"sectionNumber":2,"value":"Those who have seen him will say, ‘Where is he?’ "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":8,"sectionNumber":1,"value":"He will fly away as a dream, and will not be found. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":8,"sectionNumber":2,"value":"Yes, he will be chased away like a vision of the night. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":9,"sectionNumber":1,"value":"The eye which saw him will see him no more, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":9,"sectionNumber":2,"value":"neither will his place see him any more. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":10,"sectionNumber":1,"value":"His children will seek the favor of the poor. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":10,"sectionNumber":2,"value":"His hands will give back his wealth. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":11,"sectionNumber":1,"value":"His bones are full of his youth, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":11,"sectionNumber":2,"value":"but youth will lie down with him in the dust. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":20,"verseNumber":11,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":20,"verseNumber":12,"sectionNumber":1,"value":"“Though wickedness is sweet in his mouth, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":12,"sectionNumber":2,"value":"though he hide it under his tongue, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":13,"sectionNumber":1,"value":"though he spare it, and will not let it go, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":13,"sectionNumber":2,"value":"but keep it still within his mouth; "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":14,"sectionNumber":1,"value":"yet his food in his bowels is turned. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":14,"sectionNumber":2,"value":"It is cobra venom within him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":15,"sectionNumber":1,"value":"He has swallowed down riches, and he will vomit them up again. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":15,"sectionNumber":2,"value":"God will cast them out of his belly. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":16,"sectionNumber":1,"value":"He will suck cobra venom. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":16,"sectionNumber":2,"value":"The viper’s tongue will kill him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":17,"sectionNumber":1,"value":"He will not look at the rivers, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":17,"sectionNumber":2,"value":"the flowing streams of honey and butter. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":18,"sectionNumber":1,"value":" He will restore that for which he labored, and will not swallow it down. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":18,"sectionNumber":2,"value":"He will not rejoice according to the substance that he has gotten. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":19,"sectionNumber":1,"value":"For he has oppressed and forsaken the poor. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":19,"sectionNumber":2,"value":"He has violently taken away a house, and he will not build it up. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":20,"verseNumber":19,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":20,"verseNumber":20,"sectionNumber":1,"value":"“Because he knew no quietness within him, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":20,"sectionNumber":2,"value":"he will not save anything of that in which he delights. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":21,"sectionNumber":1,"value":"There was nothing left that he didn’t devour, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":21,"sectionNumber":2,"value":"therefore his prosperity will not endure. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":22,"sectionNumber":1,"value":"In the fullness of his sufficiency, distress will overtake him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":22,"sectionNumber":2,"value":"The hand of everyone who is in misery will come on him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":23,"sectionNumber":1,"value":"When he is about to fill his belly, God will cast the fierceness of his wrath on him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":23,"sectionNumber":2,"value":"It will rain on him while he is eating. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":24,"sectionNumber":1,"value":"He will flee from the iron weapon. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":24,"sectionNumber":2,"value":"The bronze arrow will strike him through. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":25,"sectionNumber":1,"value":"He draws it out, and it comes out of his body. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":25,"sectionNumber":2,"value":"Yes, the glittering point comes out of his liver. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":25,"sectionNumber":3,"value":"Terrors are on him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":26,"sectionNumber":1,"value":"All darkness is laid up for his treasures. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":26,"sectionNumber":2,"value":"An unfanned fire will devour him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":26,"sectionNumber":3,"value":"It will consume that which is left in his tent. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":27,"sectionNumber":1,"value":"The heavens will reveal his iniquity. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":27,"sectionNumber":2,"value":"The earth will rise up against him. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":28,"sectionNumber":1,"value":"The increase of his house will depart. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":28,"sectionNumber":2,"value":"They will rush away in the day of his wrath. "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":29,"sectionNumber":1,"value":"This is the portion of a wicked man from God, "},{"type":"line break"},{"type":"line text","chapterNumber":20,"verseNumber":29,"sectionNumber":2,"value":"the heritage appointed to him by God.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]