[{"type":"paragraph text","chapterNumber":8,"verseNumber":1,"sectionNumber":1,"value":"Then Bildad the Shuhite answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":8,"verseNumber":2,"sectionNumber":1,"value":"“How long will you speak these things? "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":2,"sectionNumber":2,"value":"Shall the words of your mouth be a mighty wind? "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":3,"sectionNumber":1,"value":"Does God pervert justice? "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":3,"sectionNumber":2,"value":"Or does the Almighty pervert righteousness? "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":4,"sectionNumber":1,"value":"If your children have sinned against him, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":4,"sectionNumber":2,"value":"he has delivered them into the hand of their disobedience. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":1,"value":"If you want to seek God diligently, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":5,"sectionNumber":2,"value":"make your supplication to the Almighty. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":1,"value":"If you were pure and upright, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":2,"value":"surely now he would awaken for you, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":6,"sectionNumber":3,"value":"and make the habitation of your righteousness prosperous. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":7,"sectionNumber":1,"value":"Though your beginning was small, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":7,"sectionNumber":2,"value":"yet your latter end would greatly increase. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":7,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":8,"verseNumber":8,"sectionNumber":1,"value":"“Please inquire of past generations. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":8,"sectionNumber":2,"value":"Find out about the learning of their fathers. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":9,"sectionNumber":1,"value":"(For we are but of yesterday, and know nothing, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":9,"sectionNumber":2,"value":"because our days on earth are a shadow.) "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":10,"sectionNumber":1,"value":"Shall they not teach you, tell you, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":10,"sectionNumber":2,"value":"and utter words out of their heart? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":10,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":8,"verseNumber":11,"sectionNumber":1,"value":"“Can the papyrus grow up without mire? "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":11,"sectionNumber":2,"value":"Can the rushes grow without water? "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":12,"sectionNumber":1,"value":"While it is yet in its greenness, not cut down, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":12,"sectionNumber":2,"value":"it withers before any other reed. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":13,"sectionNumber":1,"value":"So are the paths of all who forget God. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":13,"sectionNumber":2,"value":"The hope of the godless man will perish, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":14,"sectionNumber":1,"value":"Whose confidence will break apart, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":14,"sectionNumber":2,"value":"Whose trust is a spider’s web. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":15,"sectionNumber":1,"value":"He will lean on his house, but it will not stand. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":15,"sectionNumber":2,"value":"He will cling to it, but it will not endure. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":16,"sectionNumber":1,"value":"He is green before the sun. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":16,"sectionNumber":2,"value":"His shoots go out along his garden. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":17,"sectionNumber":1,"value":"His roots are wrapped around the rock pile. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":17,"sectionNumber":2,"value":"He sees the place of stones. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":18,"sectionNumber":1,"value":"If he is destroyed from his place, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":18,"sectionNumber":2,"value":"then it will deny him, saying, ‘I have not seen you.’ "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":19,"sectionNumber":1,"value":"Behold, this is the joy of his way: "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":19,"sectionNumber":2,"value":"out of the earth, others will spring. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":8,"verseNumber":19,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":8,"verseNumber":20,"sectionNumber":1,"value":"“Behold, God will not cast away a blameless man, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":20,"sectionNumber":2,"value":"neither will he uphold the evildoers. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":21,"sectionNumber":1,"value":"He will still fill your mouth with laughter, "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":21,"sectionNumber":2,"value":"your lips with shouting. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":22,"sectionNumber":1,"value":"Those who hate you will be clothed with shame. "},{"type":"line break"},{"type":"line text","chapterNumber":8,"verseNumber":22,"sectionNumber":2,"value":"The tent of the wicked will be no more.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]