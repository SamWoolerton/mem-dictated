[{"type":"line text","chapterNumber":44,"verseNumber":28,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":1,"sectionNumber":1,"value":"Yet listen now, Jacob my servant, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":1,"sectionNumber":2,"value":"and Israel, whom I have chosen. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":2,"sectionNumber":1,"value":"This is what Yahweh who made you, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":2,"sectionNumber":2,"value":"and formed you from the womb, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":2,"sectionNumber":3,"value":"who will help you says: "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":2,"sectionNumber":4,"value":"“Don’t be afraid, Jacob my servant; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":2,"sectionNumber":5,"value":"and you, Jeshurun, whom I have chosen. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":3,"sectionNumber":1,"value":"For I will pour water on him who is thirsty, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":3,"sectionNumber":2,"value":"and streams on the dry ground. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":3,"sectionNumber":3,"value":"I will pour my Spirit on your descendants, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":3,"sectionNumber":4,"value":"and my blessing on your offspring: "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":4,"sectionNumber":1,"value":"and they will spring up among the grass, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":4,"sectionNumber":2,"value":"as willows by the watercourses. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":5,"sectionNumber":1,"value":"One will say, ‘I am Yahweh’s;’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":5,"sectionNumber":2,"value":"and another will be called by the name of Jacob; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":5,"sectionNumber":3,"value":"and another will write with his hand ‘to Yahweh,’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":5,"sectionNumber":4,"value":"and honor the name of Israel.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":44,"verseNumber":5,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":6,"sectionNumber":1,"value":"This is what Yahweh, the King of Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":6,"sectionNumber":2,"value":"and his Redeemer, Yahweh of Armies, says: "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":6,"sectionNumber":3,"value":"“I am the first, and I am the last; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":6,"sectionNumber":4,"value":"and besides me there is no God. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":7,"sectionNumber":1,"value":"Who is like me? "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":7,"sectionNumber":2,"value":"Who will call, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":7,"sectionNumber":3,"value":"and will declare it, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":7,"sectionNumber":4,"value":"and set it in order for me, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":7,"sectionNumber":5,"value":"since I established the ancient people? "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":7,"sectionNumber":6,"value":"Let them declare the things that are coming, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":7,"sectionNumber":7,"value":"and that will happen. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":1,"value":"Don’t fear, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":2,"value":"neither be afraid. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":3,"value":"Haven’t I declared it to you long ago, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":4,"value":"and shown it? "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":5,"value":"You are my witnesses. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":6,"value":"Is there a God besides me? "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":7,"value":"Indeed, there is not. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":8,"value":"I don’t know any other Rock.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":44,"verseNumber":8,"sectionNumber":9,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":9,"sectionNumber":1,"value":"Everyone who makes a carved image is vain. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":9,"sectionNumber":2,"value":"The things that they delight in will not profit. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":9,"sectionNumber":3,"value":"Their own witnesses don’t see, nor know, that they may be disappointed. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":10,"sectionNumber":1,"value":"Who has fashioned a god, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":10,"sectionNumber":2,"value":"or molds an image that is profitable for nothing? "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":11,"sectionNumber":1,"value":"Behold, all his fellows will be disappointed; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":11,"sectionNumber":2,"value":"and the workmen are mere men. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":11,"sectionNumber":3,"value":"Let them all be gathered together. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":11,"sectionNumber":4,"value":"Let them stand up. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":11,"sectionNumber":5,"value":"They will fear. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":11,"sectionNumber":6,"value":"They will be put to shame together. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":44,"verseNumber":11,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":1,"value":"The blacksmith takes an ax, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":2,"value":"works in the coals, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":3,"value":"fashions it with hammers, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":4,"value":"and works it with his strong arm. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":5,"value":"He is hungry, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":6,"value":"and his strength fails; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":7,"value":"he drinks no water, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":12,"sectionNumber":8,"value":"and is faint. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":13,"sectionNumber":1,"value":"The carpenter stretches out a line. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":13,"sectionNumber":2,"value":"He marks it out with a pencil. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":13,"sectionNumber":3,"value":"He shapes it with planes. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":13,"sectionNumber":4,"value":"He marks it out with compasses, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":13,"sectionNumber":5,"value":"and shapes it like the figure of a man, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":13,"sectionNumber":6,"value":"with the beauty of a man, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":13,"sectionNumber":7,"value":"to reside in a house. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":14,"sectionNumber":1,"value":"He cuts down cedars for himself, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":14,"sectionNumber":2,"value":"and takes the cypress and the oak, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":14,"sectionNumber":3,"value":"and strengthens for himself one among the trees of the forest. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":14,"sectionNumber":4,"value":"He plants a cypress tree, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":14,"sectionNumber":5,"value":"and the rain nourishes it. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":15,"sectionNumber":1,"value":"Then it will be for a man to burn; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":15,"sectionNumber":2,"value":"and he takes some of it, and warms himself. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":15,"sectionNumber":3,"value":"Yes, he burns it, and bakes bread. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":15,"sectionNumber":4,"value":"Yes, he makes a god, and worships it; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":15,"sectionNumber":5,"value":"he makes it a carved image, and falls down to it. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":16,"sectionNumber":1,"value":"He burns part of it in the fire. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":16,"sectionNumber":2,"value":"With part of it, he eats meat. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":16,"sectionNumber":3,"value":"He roasts a roast, and is satisfied. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":16,"sectionNumber":4,"value":"Yes, he warms himself, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":16,"sectionNumber":5,"value":"and says, “Aha! I am warm. I have seen the fire.” "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":17,"sectionNumber":1,"value":"The rest of it he makes into a god, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":17,"sectionNumber":2,"value":"even his engraved image. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":17,"sectionNumber":3,"value":"He bows down to it and worships, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":17,"sectionNumber":4,"value":"and prays to it, and says, “Deliver me; for you are my god!” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":44,"verseNumber":17,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":18,"sectionNumber":1,"value":"They don’t know, neither do they consider: "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":18,"sectionNumber":2,"value":"for he has shut their eyes, that they can’t see; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":18,"sectionNumber":3,"value":"and their hearts, that they can’t understand. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":19,"sectionNumber":1,"value":"No one thinks, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":19,"sectionNumber":2,"value":"neither is there knowledge nor understanding to say, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":19,"sectionNumber":3,"value":"“I have burned part of it in the fire. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":19,"sectionNumber":4,"value":"Yes, I have also baked bread on its coals. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":19,"sectionNumber":5,"value":"I have roasted meat and eaten it. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":19,"sectionNumber":6,"value":"Shall I make the rest of it into an abomination? "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":19,"sectionNumber":7,"value":"Shall I bow down to a tree trunk?” "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":20,"sectionNumber":1,"value":"He feeds on ashes. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":20,"sectionNumber":2,"value":"A deceived heart has turned him aside; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":20,"sectionNumber":3,"value":"and he can’t deliver his soul, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":20,"sectionNumber":4,"value":"nor say, “Isn’t there a lie in my right hand?” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":44,"verseNumber":20,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":21,"sectionNumber":1,"value":"Remember these things, Jacob and Israel; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":21,"sectionNumber":2,"value":"for you are my servant. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":21,"sectionNumber":3,"value":"I have formed you. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":21,"sectionNumber":4,"value":"You are my servant. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":21,"sectionNumber":5,"value":"Israel, you will not be forgotten by me. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":22,"sectionNumber":1,"value":"I have blotted out, as a thick cloud, your transgressions, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":22,"sectionNumber":2,"value":"and, as a cloud, your sins. "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":22,"sectionNumber":3,"value":"Return to me, for I have redeemed you. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":44,"verseNumber":22,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":23,"sectionNumber":1,"value":"Sing, you heavens, for Yahweh has done it! "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":23,"sectionNumber":2,"value":"Shout, you lower parts of the earth! "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":23,"sectionNumber":3,"value":"Break out into singing, you mountains, O forest, all of your trees, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":23,"sectionNumber":4,"value":"for Yahweh has redeemed Jacob, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":23,"sectionNumber":5,"value":"and will glorify himself in Israel. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":44,"verseNumber":23,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":44,"verseNumber":24,"sectionNumber":1,"value":"Yahweh, your Redeemer, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":24,"sectionNumber":2,"value":"and he who formed you from the womb says: "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":24,"sectionNumber":3,"value":"“I am Yahweh, who makes all things; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":24,"sectionNumber":4,"value":"who alone stretches out the heavens; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":24,"sectionNumber":5,"value":"who spreads out the earth by myself; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":25,"sectionNumber":1,"value":"who frustrates the signs of the liars, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":25,"sectionNumber":2,"value":"and makes diviners mad; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":25,"sectionNumber":3,"value":"who turns wise men backward, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":25,"sectionNumber":4,"value":"and makes their knowledge foolish; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":26,"sectionNumber":1,"value":"who confirms the word of his servant, "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":26,"sectionNumber":2,"value":"and performs the counsel of his messengers; "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":26,"sectionNumber":3,"value":"who says of Jerusalem, ‘She will be inhabited;’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":26,"sectionNumber":4,"value":"and of the cities of Judah, ‘They will be built,’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":26,"sectionNumber":5,"value":"and ‘I will raise up its waste places;’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":27,"sectionNumber":1,"value":"who says to the deep, ‘Be dry,’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":27,"sectionNumber":2,"value":"and ‘I will dry up your rivers;’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":28,"sectionNumber":1,"value":"Who says of Cyrus, ‘He is my shepherd, and shall perform all my pleasure,’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":28,"sectionNumber":2,"value":"even saying of Jerusalem, ‘She will be built;’ "},{"type":"line break"},{"type":"line text","chapterNumber":44,"verseNumber":28,"sectionNumber":3,"value":"and of the temple, ‘Your foundation will be laid.’ ” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]