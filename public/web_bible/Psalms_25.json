[{"type":"line text","chapterNumber":25,"verseNumber":10,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":25,"verseNumber":1,"sectionNumber":1,"value":"To you, Yahweh, I lift up my soul. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":2,"sectionNumber":1,"value":"My God, I have trusted in you. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":2,"sectionNumber":2,"value":"Don’t let me be shamed. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":2,"sectionNumber":3,"value":"Don’t let my enemies triumph over me. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":3,"sectionNumber":1,"value":"Yes, no one who waits for you will be shamed. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":3,"sectionNumber":2,"value":"They will be shamed who deal treacherously without cause. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":25,"verseNumber":3,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":25,"verseNumber":4,"sectionNumber":1,"value":"Show me your ways, Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":4,"sectionNumber":2,"value":"Teach me your paths. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":5,"sectionNumber":1,"value":"Guide me in your truth, and teach me, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":5,"sectionNumber":2,"value":"For you are the God of my salvation, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":5,"sectionNumber":3,"value":"I wait for you all day long. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":6,"sectionNumber":1,"value":"Yahweh, remember your tender mercies and your loving kindness, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":6,"sectionNumber":2,"value":"for they are from old times. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":7,"sectionNumber":1,"value":"Don’t remember the sins of my youth, nor my transgressions. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":7,"sectionNumber":2,"value":"Remember me according to your loving kindness, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":7,"sectionNumber":3,"value":"for your goodness’ sake, Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":8,"sectionNumber":1,"value":"Good and upright is Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":8,"sectionNumber":2,"value":"therefore he will instruct sinners in the way. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":9,"sectionNumber":1,"value":"He will guide the humble in justice. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":9,"sectionNumber":2,"value":"He will teach the humble his way. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":10,"sectionNumber":1,"value":"All the paths of Yahweh are loving kindness and truth "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":10,"sectionNumber":2,"value":"to such as keep his covenant and his testimonies. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":11,"sectionNumber":1,"value":"For your name’s sake, Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":11,"sectionNumber":2,"value":"pardon my iniquity, for it is great. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":12,"sectionNumber":1,"value":"What man is he who fears Yahweh? "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":12,"sectionNumber":2,"value":"He shall instruct him in the way that he shall choose. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":13,"sectionNumber":1,"value":"His soul will dwell at ease. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":13,"sectionNumber":2,"value":"His offspring will inherit the land. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":14,"sectionNumber":1,"value":"The friendship of Yahweh is with those who fear him. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":14,"sectionNumber":2,"value":"He will show them his covenant. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":25,"verseNumber":14,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":25,"verseNumber":15,"sectionNumber":1,"value":"My eyes are ever on Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":15,"sectionNumber":2,"value":"for he will pluck my feet out of the net. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":16,"sectionNumber":1,"value":"Turn to me, and have mercy on me, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":16,"sectionNumber":2,"value":"for I am desolate and afflicted. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":17,"sectionNumber":1,"value":"The troubles of my heart are enlarged. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":17,"sectionNumber":2,"value":"Oh bring me out of my distresses. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":18,"sectionNumber":1,"value":"Consider my affliction and my travail. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":18,"sectionNumber":2,"value":"Forgive all my sins. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":19,"sectionNumber":1,"value":"Consider my enemies, for they are many. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":19,"sectionNumber":2,"value":"They hate me with cruel hatred. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":20,"sectionNumber":1,"value":"Oh keep my soul, and deliver me. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":20,"sectionNumber":2,"value":"Let me not be disappointed, for I take refuge in you. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":21,"sectionNumber":1,"value":"Let integrity and uprightness preserve me, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":21,"sectionNumber":2,"value":"for I wait for you. "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":22,"sectionNumber":1,"value":"Redeem Israel, God, "},{"type":"line break"},{"type":"line text","chapterNumber":25,"verseNumber":22,"sectionNumber":2,"value":"out of all his troubles. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"By David."},{"type":"stanza start"}]