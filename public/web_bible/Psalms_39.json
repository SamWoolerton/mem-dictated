[{"type":"line text","chapterNumber":39,"verseNumber":22,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":39,"verseNumber":1,"sectionNumber":1,"value":"I said, “I will watch my ways, so that I don’t sin with my tongue. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":1,"sectionNumber":2,"value":"I will keep my mouth with a bridle while the wicked is before me.” "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":2,"sectionNumber":1,"value":"I was mute with silence. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":2,"sectionNumber":2,"value":"I held my peace, even from good. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":2,"sectionNumber":3,"value":"My sorrow was stirred. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":3,"sectionNumber":1,"value":"My heart was hot within me. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":3,"sectionNumber":2,"value":"While I meditated, the fire burned. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":3,"sectionNumber":3,"value":"I spoke with my tongue: "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":4,"sectionNumber":1,"value":"“Yahweh, show me my end, "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":4,"sectionNumber":2,"value":"what is the measure of my days. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":4,"sectionNumber":3,"value":"Let me know how frail I am. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":5,"sectionNumber":1,"value":"Behold, you have made my days hand widths. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":5,"sectionNumber":2,"value":"My lifetime is as nothing before you. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":5,"sectionNumber":3,"value":"Surely every man stands as a breath.” "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":6,"sectionNumber":1,"value":"“Surely every man walks like a shadow. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":6,"sectionNumber":2,"value":"Surely they busy themselves in vain. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":6,"sectionNumber":3,"value":"He heaps up, and doesn’t know who shall gather. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":7,"sectionNumber":1,"value":"Now, Lord, what do I wait for? "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":7,"sectionNumber":2,"value":"My hope is in you. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":8,"sectionNumber":1,"value":"Deliver me from all my transgressions. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":8,"sectionNumber":2,"value":"Don’t make me the reproach of the foolish. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":9,"sectionNumber":1,"value":"I was mute. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":9,"sectionNumber":2,"value":"I didn’t open my mouth, "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":9,"sectionNumber":3,"value":"because you did it. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":10,"sectionNumber":1,"value":"Remove your scourge away from me. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":10,"sectionNumber":2,"value":"I am overcome by the blow of your hand. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":11,"sectionNumber":1,"value":"When you rebuke and correct man for iniquity, "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":11,"sectionNumber":2,"value":"you consume his wealth like a moth. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":11,"sectionNumber":3,"value":"Surely every man is but a breath.” "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":12,"sectionNumber":1,"value":"“Hear my prayer, Yahweh, and give ear to my cry. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":12,"sectionNumber":2,"value":"Don’t be silent at my tears. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":12,"sectionNumber":3,"value":"For I am a stranger with you, "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":12,"sectionNumber":4,"value":"a foreigner, as all my fathers were. "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":13,"sectionNumber":1,"value":"Oh spare me, that I may recover strength, "},{"type":"line break"},{"type":"line text","chapterNumber":39,"verseNumber":13,"sectionNumber":2,"value":"before I go away and exist no more.” "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"For the Chief Musician. A Psalm by David."},{"type":"stanza start"}]