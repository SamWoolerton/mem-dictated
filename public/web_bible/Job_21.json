[{"type":"paragraph text","chapterNumber":21,"verseNumber":1,"sectionNumber":1,"value":"Then Job answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":21,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":21,"verseNumber":2,"sectionNumber":1,"value":"“Listen diligently to my speech. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":2,"sectionNumber":2,"value":"Let this be your consolation. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":3,"sectionNumber":1,"value":"Allow me, and I also will speak; "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":3,"sectionNumber":2,"value":"After I have spoken, mock on. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":4,"sectionNumber":1,"value":"As for me, is my complaint to man? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":4,"sectionNumber":2,"value":"Why shouldn’t I be impatient? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":5,"sectionNumber":1,"value":"Look at me, and be astonished. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":5,"sectionNumber":2,"value":"Lay your hand on your mouth. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":6,"sectionNumber":1,"value":"When I remember, I am troubled. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":6,"sectionNumber":2,"value":"Horror takes hold of my flesh. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":21,"verseNumber":6,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":21,"verseNumber":7,"sectionNumber":1,"value":"“Why do the wicked live, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":7,"sectionNumber":2,"value":"become old, yes, and grow mighty in power? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":8,"sectionNumber":1,"value":"Their child is established with them in their sight, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":8,"sectionNumber":2,"value":"their offspring before their eyes. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":9,"sectionNumber":1,"value":"Their houses are safe from fear, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":9,"sectionNumber":2,"value":"neither is the rod of God upon them. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":10,"sectionNumber":1,"value":"Their bulls breed without fail. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":10,"sectionNumber":2,"value":"Their cows calve, and don’t miscarry. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":11,"sectionNumber":1,"value":"They send out their little ones like a flock. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":11,"sectionNumber":2,"value":"Their children dance. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":12,"sectionNumber":1,"value":"They sing to the tambourine and harp, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":12,"sectionNumber":2,"value":"and rejoice at the sound of the pipe. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":13,"sectionNumber":1,"value":"They spend their days in prosperity. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":13,"sectionNumber":2,"value":"In an instant they go down to Sheol. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":14,"sectionNumber":1,"value":"They tell God, ‘Depart from us, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":14,"sectionNumber":2,"value":"for we don’t want to know about your ways. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":15,"sectionNumber":1,"value":"What is the Almighty, that we should serve him? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":15,"sectionNumber":2,"value":"What profit should we have, if we pray to him?’ "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":16,"sectionNumber":1,"value":"Behold, their prosperity is not in their hand. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":16,"sectionNumber":2,"value":"The counsel of the wicked is far from me. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":21,"verseNumber":16,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":21,"verseNumber":17,"sectionNumber":1,"value":"“How often is it that the lamp of the wicked is put out, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":17,"sectionNumber":2,"value":"that their calamity comes on them, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":17,"sectionNumber":3,"value":"that God distributes sorrows in his anger? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":18,"sectionNumber":1,"value":"How often is it that they are as stubble before the wind, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":18,"sectionNumber":2,"value":"as chaff that the storm carries away? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":19,"sectionNumber":1,"value":"You say, ‘God lays up his iniquity for his children.’ "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":19,"sectionNumber":2,"value":"Let him recompense it to himself, that he may know it. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":20,"sectionNumber":1,"value":"Let his own eyes see his destruction. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":20,"sectionNumber":2,"value":"Let him drink of the wrath of the Almighty. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":21,"sectionNumber":1,"value":"For what does he care for his house after him, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":21,"sectionNumber":2,"value":"when the number of his months is cut off? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":21,"verseNumber":21,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":21,"verseNumber":22,"sectionNumber":1,"value":"“Shall any teach God knowledge, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":22,"sectionNumber":2,"value":"since he judges those who are high? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":23,"sectionNumber":1,"value":"One dies in his full strength, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":23,"sectionNumber":2,"value":"being wholly at ease and quiet. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":24,"sectionNumber":1,"value":"His pails are full of milk. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":24,"sectionNumber":2,"value":"The marrow of his bones is moistened. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":25,"sectionNumber":1,"value":"Another dies in bitterness of soul, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":25,"sectionNumber":2,"value":"and never tastes of good. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":26,"sectionNumber":1,"value":"They lie down alike in the dust. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":26,"sectionNumber":2,"value":"The worm covers them. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":21,"verseNumber":26,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":21,"verseNumber":27,"sectionNumber":1,"value":"“Behold, I know your thoughts, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":27,"sectionNumber":2,"value":"the plans with which you would wrong me. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":28,"sectionNumber":1,"value":"For you say, ‘Where is the house of the prince? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":28,"sectionNumber":2,"value":"Where is the tent in which the wicked lived?’ "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":29,"sectionNumber":1,"value":"Haven’t you asked wayfaring men? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":29,"sectionNumber":2,"value":"Don’t you know their evidences, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":30,"sectionNumber":1,"value":"that the evil man is reserved to the day of calamity, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":30,"sectionNumber":2,"value":"That they are led out to the day of wrath? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":31,"sectionNumber":1,"value":"Who will declare his way to his face? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":31,"sectionNumber":2,"value":"Who will repay him what he has done? "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":32,"sectionNumber":1,"value":"Yet he will be borne to the grave. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":32,"sectionNumber":2,"value":"Men will keep watch over the tomb. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":33,"sectionNumber":1,"value":"The clods of the valley will be sweet to him. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":33,"sectionNumber":2,"value":"All men will draw after him, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":33,"sectionNumber":3,"value":"as there were innumerable before him. "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":34,"sectionNumber":1,"value":"So how can you comfort me with nonsense, "},{"type":"line break"},{"type":"line text","chapterNumber":21,"verseNumber":34,"sectionNumber":2,"value":"because in your answers there remains only falsehood?” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]