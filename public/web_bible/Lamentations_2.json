[{"type":"paragraph text","chapterNumber":2,"verseNumber":1,"sectionNumber":1,"value":"How has the Lord covered the daughter of Zion with a cloud in his anger! "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":2,"value":"He has cast the beauty of Israel down from heaven to the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":3,"value":"and hasn’t remembered his footstool in the day of his anger. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":1,"value":"The Lord has swallowed up all the dwellings of Jacob "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":2,"value":"without pity. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":3,"value":"He has thrown down in his wrath the strongholds of the daughter of Judah. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":4,"value":"He has brought them down to the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":5,"value":"He has profaned the kingdom and its princes. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":1,"value":"He has cut off all the horn of Israel in fierce anger. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":2,"value":"He has drawn back his right hand from before the enemy. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":3,"value":"He has burned up Jacob like a flaming fire, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":4,"value":"which devours all around. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":1,"value":"He has bent his bow like an enemy. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":2,"value":"He has stood with his right hand as an adversary. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":3,"value":"Has killed all that were pleasant to the eye. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":4,"value":"In the tent of the daughter of Zion, he has poured out his wrath like fire. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":1,"value":"The Lord has become as an enemy. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":2,"value":"He has swallowed up Israel. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":3,"value":"He has swallowed up all her palaces. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":4,"value":"He has destroyed his strongholds. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":5,"value":"He has multiplied mourning and lamentation in the daughter of Judah. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":"He has violently taken away his tabernacle, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":2,"value":"as if it were of a garden. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":3,"value":"He has destroyed his place of assembly. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":4,"value":"Yahweh has caused solemn assembly and Sabbath to be forgotten in Zion. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":5,"value":"In the indignation of his anger, he has despised the king and the priest. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":1,"value":"The Lord has cast off his altar. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":2,"value":"He has abhorred his sanctuary. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":3,"value":"He has given the walls of her palaces into the hand of the enemy. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":4,"value":"They have made a noise in Yahweh’s house, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":5,"value":"as in the day of a solemn assembly. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":1,"value":"Yahweh has purposed to destroy the wall of the daughter of Zion. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":2,"value":"He has stretched out the line. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":3,"value":"He has not withdrawn his hand from destroying; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":4,"value":"He has made the rampart and wall lament. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":5,"value":"They languish together. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":1,"value":"Her gates have sunk into the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":2,"value":"He has destroyed and broken her bars. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":3,"value":"Her king and her princes are among the nations where the law is not. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":4,"value":"Yes, her prophets find no vision from Yahweh. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":1,"value":"The elders of the daughter of Zion sit on the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":2,"value":"They keep silence. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":3,"value":"They have cast up dust on their heads. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":4,"value":"They have clothed themselves with sackcloth. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":5,"value":"The virgins of Jerusalem hang down their heads to the ground. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":1,"value":"My eyes fail with tears. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":2,"value":"My heart is troubled. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":3,"value":"My liver is poured on the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":4,"value":"because of the destruction of the daughter of my people, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":5,"value":"because the young children and the infants swoon in the streets of the city. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":1,"value":"They ask their mothers, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":2,"value":"“Where is grain and wine?” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":3,"value":"when they swoon as the wounded in the streets of the city, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":4,"value":"when their soul is poured out into their mothers’ bosom. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":1,"value":"What shall I testify to you? "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":2,"value":"What shall I liken to you, daughter of Jerusalem? "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":3,"value":"What shall I compare to you, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":4,"value":"that I may comfort you, virgin daughter of Zion? "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":5,"value":"For your breach is as big as the sea. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":6,"value":"Who can heal you? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":1,"value":"Your prophets have seen false and foolish visions for you. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":2,"value":"They have not uncovered your iniquity, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":3,"value":"to reverse your captivity, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":4,"value":"but have seen for you false revelations and causes of banishment. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":1,"value":"All that pass by clap their hands at you. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":2,"value":"They hiss and wag their head at the daughter of Jerusalem, saying, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":3,"value":"“Is this the city that men called ‘The perfection of beauty, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":4,"value":"the joy of the whole earth’?” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":1,"value":"All your enemies have opened their mouth wide against you. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":2,"value":"They hiss and gnash their teeth. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":3,"value":"They say, “We have swallowed her up. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":4,"value":"Certainly this is the day that we looked for. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":5,"value":"We have found it. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":6,"value":"We have seen it.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":1,"value":"Yahweh has done that which he planned. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":2,"value":"He has fulfilled his word that he commanded in the days of old. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":3,"value":"He has thrown down, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":4,"value":"and has not pitied. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":5,"value":"He has caused the enemy to rejoice over you. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":6,"value":"He has exalted the horn of your adversaries. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":1,"value":"Their heart cried to the Lord. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":2,"value":"O wall of the daughter of Zion, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":3,"value":"let tears run down like a river day and night. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":4,"value":"Give yourself no relief. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":5,"value":"Don’t let the your eyes rest. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":1,"value":"Arise, cry out in the night, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":2,"value":"at the beginning of the watches! "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":3,"value":"Pour out your heart like water before the face of the Lord. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":4,"value":"Lift up your hands toward him for the life of your young children, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":5,"value":"who faint for hunger at the head of every street. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":1,"value":"“Look, Yahweh, and see to whom you have done thus! "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":2,"value":"Should the women eat their offspring, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":3,"value":"the children that they held and bounced on their knees? "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":4,"value":"Should the priest and the prophet be killed in the sanctuary of the Lord? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":1,"value":"“The youth and the old man lie on the ground in the streets. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":2,"value":"My virgins and my young men have fallen by the sword. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":3,"value":"You have killed them in the day of your anger. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":4,"value":"You have slaughtered, and not pitied. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":1,"value":"“You have called, as in the day of a solemn assembly, my terrors on every side. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":2,"value":"There was no one that escaped or remained in the day of Yahweh’s anger. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":3,"value":"My enemy has consumed those whom I have cared for and brought up. "},{"type":"line break"}]