[{"type":"paragraph text","chapterNumber":11,"verseNumber":1,"sectionNumber":1,"value":"“When Israel was a child, then I loved him, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":11,"verseNumber":1,"sectionNumber":2,"value":"and called my son out of Egypt. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":2,"sectionNumber":1,"value":"They called to them, so they went from them. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":2,"sectionNumber":2,"value":"They sacrificed to the Baals, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":2,"sectionNumber":3,"value":"and burned incense to engraved images. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":3,"sectionNumber":1,"value":"Yet I taught Ephraim to walk. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":3,"sectionNumber":2,"value":"I took them by his arms; "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":3,"sectionNumber":3,"value":"but they didn’t know that I healed them. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":4,"sectionNumber":1,"value":"I drew them with cords of a man, with ties of love; "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":4,"sectionNumber":2,"value":"and I was to them like those who lift up the yoke on their necks; "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":4,"sectionNumber":3,"value":"and I bent down to him and I fed him. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":11,"verseNumber":4,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":11,"verseNumber":5,"sectionNumber":1,"value":"“They won’t return into the land of Egypt; "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":5,"sectionNumber":2,"value":"but the Assyrian will be their king, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":5,"sectionNumber":3,"value":"because they refused to repent. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":6,"sectionNumber":1,"value":"The sword will fall on their cities, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":6,"sectionNumber":2,"value":"and will destroy the bars of their gates, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":6,"sectionNumber":3,"value":"and will put an end to their plans. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":7,"sectionNumber":1,"value":"My people are determined to turn from me. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":7,"sectionNumber":2,"value":"Though they call to the Most High, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":7,"sectionNumber":3,"value":"he certainly won’t exalt them. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":11,"verseNumber":7,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":11,"verseNumber":8,"sectionNumber":1,"value":"“How can I give you up, Ephraim? "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":8,"sectionNumber":2,"value":"How can I hand you over, Israel? "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":8,"sectionNumber":3,"value":"How can I make you like Admah? "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":8,"sectionNumber":4,"value":"How can I make you like Zeboiim? "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":8,"sectionNumber":5,"value":"My heart is turned within me, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":8,"sectionNumber":6,"value":"my compassion is aroused. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":9,"sectionNumber":1,"value":"I will not execute the fierceness of my anger. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":9,"sectionNumber":2,"value":"I will not return to destroy Ephraim: "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":9,"sectionNumber":3,"value":"for I am God, and not man; the Holy One among you; "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":9,"sectionNumber":4,"value":"and I will not come in wrath. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":10,"sectionNumber":1,"value":"They will walk after Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":10,"sectionNumber":2,"value":"who will roar like a lion; "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":10,"sectionNumber":3,"value":"for he will roar, and the children will come trembling from the west. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":11,"sectionNumber":1,"value":"They will come trembling like a bird out of Egypt, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":11,"sectionNumber":2,"value":"and like a dove out of the land of Assyria; "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":11,"sectionNumber":3,"value":"and I will settle them in their houses,” says Yahweh. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":11,"verseNumber":11,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":11,"verseNumber":12,"sectionNumber":1,"value":"Ephraim surrounds me with falsehood, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":12,"sectionNumber":2,"value":"and the house of Israel with deceit. "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":12,"sectionNumber":3,"value":"Judah still strays from God, "},{"type":"line break"},{"type":"line text","chapterNumber":11,"verseNumber":12,"sectionNumber":4,"value":"and is unfaithful to the Holy One. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]