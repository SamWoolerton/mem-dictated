[{"type":"paragraph text","chapterNumber":4,"verseNumber":1,"sectionNumber":1,"value":"Then Eliphaz the Temanite answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":4,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":4,"verseNumber":2,"sectionNumber":1,"value":"“If someone ventures to talk with you, will you be grieved? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":2,"sectionNumber":2,"value":"But who can withhold himself from speaking? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":3,"sectionNumber":1,"value":"Behold, you have instructed many, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":3,"sectionNumber":2,"value":"you have strengthened the weak hands. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":4,"sectionNumber":1,"value":"Your words have supported him who was falling, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":4,"sectionNumber":2,"value":"You have made firm the feeble knees. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":5,"sectionNumber":1,"value":"But now it has come to you, and you faint. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":5,"sectionNumber":2,"value":"It touches you, and you are troubled. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":6,"sectionNumber":1,"value":"Isn’t your piety your confidence? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":6,"sectionNumber":2,"value":"Isn’t the integrity of your ways your hope? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":4,"verseNumber":6,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":4,"verseNumber":7,"sectionNumber":1,"value":"“Remember, now, whoever perished, being innocent? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":7,"sectionNumber":2,"value":"Or where were the upright cut off? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":8,"sectionNumber":1,"value":"According to what I have seen, those who plow iniquity, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":8,"sectionNumber":2,"value":"and sow trouble, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":8,"sectionNumber":3,"value":"reap the same. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":9,"sectionNumber":1,"value":"By the breath of God they perish. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":9,"sectionNumber":2,"value":"By the blast of his anger are they consumed. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":10,"sectionNumber":1,"value":"The roaring of the lion, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":10,"sectionNumber":2,"value":"and the voice of the fierce lion, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":10,"sectionNumber":3,"value":"the teeth of the young lions, are broken. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":11,"sectionNumber":1,"value":"The old lion perishes for lack of prey. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":11,"sectionNumber":2,"value":"The cubs of the lioness are scattered abroad. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":4,"verseNumber":11,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":4,"verseNumber":12,"sectionNumber":1,"value":"“Now a thing was secretly brought to me. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":12,"sectionNumber":2,"value":"My ear received a whisper of it. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":13,"sectionNumber":1,"value":"In thoughts from the visions of the night, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":13,"sectionNumber":2,"value":"when deep sleep falls on men, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":14,"sectionNumber":1,"value":"fear came on me, and trembling, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":14,"sectionNumber":2,"value":"which made all my bones shake. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":15,"sectionNumber":1,"value":"Then a spirit passed before my face. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":15,"sectionNumber":2,"value":"The hair of my flesh stood up. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":16,"sectionNumber":1,"value":"It stood still, but I couldn’t discern its appearance. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":16,"sectionNumber":2,"value":"A form was before my eyes. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":16,"sectionNumber":3,"value":"Silence, then I heard a voice, saying, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":17,"sectionNumber":1,"value":"‘Shall mortal man be more just than God? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":17,"sectionNumber":2,"value":"Shall a man be more pure than his Maker? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":18,"sectionNumber":1,"value":"Behold, he puts no trust in his servants. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":18,"sectionNumber":2,"value":"He charges his angels with error. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":19,"sectionNumber":1,"value":"How much more, those who dwell in houses of clay, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":19,"sectionNumber":2,"value":"whose foundation is in the dust, "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":19,"sectionNumber":3,"value":"who are crushed before the moth! "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":20,"sectionNumber":1,"value":"Between morning and evening they are destroyed. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":20,"sectionNumber":2,"value":"They perish forever without any regarding it. "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":21,"sectionNumber":1,"value":"Isn’t their tent cord plucked up within them? "},{"type":"line break"},{"type":"line text","chapterNumber":4,"verseNumber":21,"sectionNumber":2,"value":"They die, and that without wisdom.’ "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"}]