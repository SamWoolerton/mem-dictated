[{"type":"line text","chapterNumber":16,"verseNumber":5,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":16,"verseNumber":1,"sectionNumber":1,"value":"Preserve me, God, for I take refuge in you. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":2,"sectionNumber":1,"value":"My soul, you have said to Yahweh, “You are my Lord. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":2,"sectionNumber":2,"value":"Apart from you I have no good thing.” "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":3,"sectionNumber":1,"value":"As for the saints who are in the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":3,"sectionNumber":2,"value":"they are the excellent ones in whom is all my delight. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":16,"verseNumber":3,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":16,"verseNumber":4,"sectionNumber":1,"value":"Their sorrows shall be multiplied who give gifts to another god. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":4,"sectionNumber":2,"value":"Their drink offerings of blood I will not offer, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":4,"sectionNumber":3,"value":"nor take their names on my lips. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":5,"sectionNumber":1,"value":"Yahweh assigned my portion and my cup. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":5,"sectionNumber":2,"value":"You made my lot secure. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":16,"verseNumber":5,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":16,"verseNumber":6,"sectionNumber":1,"value":"The lines have fallen to me in pleasant places. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":6,"sectionNumber":2,"value":"Yes, I have a good inheritance. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":7,"sectionNumber":1,"value":"I will bless Yahweh, who has given me counsel. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":7,"sectionNumber":2,"value":"Yes, my heart instructs me in the night seasons. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":8,"sectionNumber":1,"value":"I have set Yahweh always before me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":8,"sectionNumber":2,"value":"Because he is at my right hand, I shall not be moved. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":9,"sectionNumber":1,"value":"Therefore my heart is glad, and my tongue rejoices. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":9,"sectionNumber":2,"value":"My body shall also dwell in safety. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":10,"sectionNumber":1,"value":"For you will not leave my soul in Sheol, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":10,"sectionNumber":2,"value":"neither will you allow your holy one to see corruption. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":11,"sectionNumber":1,"value":"You will show me the path of life. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":11,"sectionNumber":2,"value":"In your presence is fullness of joy. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":11,"sectionNumber":3,"value":"In your right hand there are pleasures forever more. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"A Prayer by David."},{"type":"stanza start"}]