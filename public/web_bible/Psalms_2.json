[{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":1,"value":"Why do the nations rage, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":2,"value":"and the peoples plot a vain thing? "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":1,"value":"The kings of the earth take a stand, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":2,"value":"and the rulers take counsel together, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":3,"value":"against Yahweh, and against his Anointed, saying, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":1,"value":"“Let’s break their bonds apart, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":2,"value":"and cast their cords from us.” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":1,"value":"He who sits in the heavens will laugh. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":2,"value":"The Lord will have them in derision. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":1,"value":"Then he will speak to them in his anger, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":2,"value":"and terrify them in his wrath: "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":"“Yet I have set my King on my holy hill of Zion.” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":1,"value":"I will tell of the decree: "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":2,"value":"Yahweh said to me, “You are my son. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":3,"value":"Today I have become your father. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":1,"value":"Ask of me, and I will give the nations for your inheritance, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":2,"value":"the uttermost parts of the earth for your possession. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":1,"value":"You shall break them with a rod of iron. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":2,"value":"You shall dash them in pieces like a potter’s vessel.” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":1,"value":"Now therefore be wise, you kings. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":2,"value":"Be instructed, you judges of the earth. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":1,"value":"Serve Yahweh with fear, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":2,"value":"and rejoice with trembling. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":1,"value":"Give sincere homage to the Son, lest he be angry, and you perish on the way, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":2,"value":"for his wrath will soon be kindled. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":3,"value":"Blessed are all those who take refuge in him. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"A Psalm by David, when he fled from Absalom his son."},{"type":"stanza start"}]