[{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":1,"value":"Blow the trumpet in Zion, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":2,"value":"and sound an alarm in my holy mountain! "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":3,"value":"Let all the inhabitants of the land tremble, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":4,"value":"for the day of Yahweh comes, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":5,"value":"for it is close at hand: "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":1,"value":"A day of darkness and gloominess, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":2,"value":"a day of clouds and thick darkness. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":3,"value":"As the dawn spreading on the mountains, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":4,"value":"a great and strong people; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":5,"value":"there has never been the like, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":6,"value":"neither will there be any more after them, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":7,"value":"even to the years of many generations. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":1,"value":"A fire devours before them, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":2,"value":"and behind them, a flame burns. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":3,"value":"The land is as the garden of Eden before them, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":4,"value":"and behind them, a desolate wilderness. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":5,"value":"Yes, and no one has escaped them. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":1,"value":"Their appearance is as the appearance of horses, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":2,"value":"and they run as horsemen. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":1,"value":"Like the noise of chariots on the tops of the mountains, they leap, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":2,"value":"like the noise of a flame of fire that devours the stubble, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":3,"value":"like a strong people set in battle array. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":"At their presence the peoples are in anguish. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":2,"value":"All faces have grown pale. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":1,"value":"They run like mighty men. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":2,"value":"They climb the wall like warriors. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":3,"value":"They each march in his line, and they don’t swerve off course. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":1,"value":"Neither does one jostle another; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":2,"value":"they march everyone in his path, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":3,"value":"and they burst through the defenses, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":4,"value":"and don’t break ranks. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":1,"value":"They rush on the city. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":2,"value":"They run on the wall. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":3,"value":"They climb up into the houses. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":4,"value":"They enter in at the windows like thieves. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":1,"value":"The earth quakes before them. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":2,"value":"The heavens tremble. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":3,"value":"The sun and the moon are darkened, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":4,"value":"and the stars withdraw their shining. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":1,"value":"Yahweh thunders his voice before his army; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":2,"value":"for his forces are very great; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":3,"value":"for he is strong who obeys his command; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":4,"value":"for the day of Yahweh is great and very awesome, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":5,"value":"and who can endure it? "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":1,"value":"“Yet even now,” says Yahweh, “turn to me with all your heart, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":2,"value":"and with fasting, and with weeping, and with mourning.” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":1,"value":"Tear your heart, and not your garments, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":2,"value":"and turn to Yahweh, your God; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":3,"value":"for he is gracious and merciful, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":4,"value":"slow to anger, and abundant in loving kindness, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":5,"value":"and relents from sending calamity. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":1,"value":"Who knows? He may turn and relent, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":2,"value":"and leave a blessing behind him, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":3,"value":"even a meal offering and a drink offering to Yahweh, your God. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":1,"value":"Blow the trumpet in Zion! "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":2,"value":"Sanctify a fast. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":3,"value":"Call a solemn assembly. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":1,"value":"Gather the people. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":2,"value":"Sanctify the assembly. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":3,"value":"Assemble the elders. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":4,"value":"Gather the children, and those who nurse from breasts. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":5,"value":"Let the bridegroom go out of his room, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":6,"value":"and the bride out of her room. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":1,"value":"Let the priests, the ministers of Yahweh, weep between the porch and the altar, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":2,"value":"and let them say, “Spare your people, Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":3,"value":"and don’t give your heritage to reproach, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":4,"value":"that the nations should rule over them. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":5,"value":"Why should they say among the peoples, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":6,"value":"‘Where is their God?’ ” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":1,"value":"Then Yahweh was jealous for his land, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":2,"value":"And had pity on his people. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":1,"value":"Yahweh answered his people, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":2,"value":"“Behold, I will send you grain, new wine, and oil, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":3,"value":"and you will be satisfied with them; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":4,"value":"and I will no more make you a reproach among the nations. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":1,"value":"But I will remove the northern army far away from you, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":2,"value":"and will drive it into a barren and desolate land, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":3,"value":"its front into the eastern sea, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":4,"value":"and its back into the western sea; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":5,"value":"and its stench will come up, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":6,"value":"and its bad smell will rise.” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":7,"value":"Surely he has done great things. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":1,"value":"Land, don’t be afraid. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":2,"value":"Be glad and rejoice, for Yahweh has done great things. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":1,"value":"Don’t be afraid, you animals of the field; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":2,"value":"for the pastures of the wilderness spring up, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":3,"value":"for the tree bears its fruit. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":4,"value":"The fig tree and the vine yield their strength. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":1,"value":"“Be glad then, you children of Zion, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":2,"value":"and rejoice in Yahweh, your God; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":3,"value":"for he gives you the early rain in just measure, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":4,"value":"and he causes the rain to come down for you, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":5,"value":"the early rain and the latter rain, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":23,"sectionNumber":6,"value":"as before. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":24,"sectionNumber":1,"value":"The threshing floors will be full of wheat, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":24,"sectionNumber":2,"value":"and the vats will overflow with new wine and oil. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":25,"sectionNumber":1,"value":"I will restore to you the years that the swarming locust has eaten, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":25,"sectionNumber":2,"value":"the great locust, the grasshopper, and the caterpillar, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":25,"sectionNumber":3,"value":"my great army, which I sent among you. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":26,"sectionNumber":1,"value":"You will have plenty to eat, and be satisfied, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":26,"sectionNumber":2,"value":"and will praise the name of Yahweh, your God, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":26,"sectionNumber":3,"value":"who has dealt wondrously with you; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":26,"sectionNumber":4,"value":"and my people will never again be disappointed. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":27,"sectionNumber":1,"value":"You will know that I am among Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":27,"sectionNumber":2,"value":"and that I am Yahweh, your God, and there is no one else; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":27,"sectionNumber":3,"value":"and my people will never again be disappointed. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":27,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":28,"sectionNumber":1,"value":"“It will happen afterward, that I will pour out my Spirit on all flesh; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":28,"sectionNumber":2,"value":"and your sons and your daughters will prophesy. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":28,"sectionNumber":3,"value":"Your old men will dream dreams. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":28,"sectionNumber":4,"value":"Your young men will see visions. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":29,"sectionNumber":1,"value":"And also on the servants and on the handmaids in those days, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":29,"sectionNumber":2,"value":"I will pour out my Spirit. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":30,"sectionNumber":1,"value":"I will show wonders in the heavens and in the earth: "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":30,"sectionNumber":2,"value":"blood, fire, and pillars of smoke. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":31,"sectionNumber":1,"value":"The sun will be turned into darkness, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":31,"sectionNumber":2,"value":"and the moon into blood, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":31,"sectionNumber":3,"value":"before the great and terrible day of Yahweh comes. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":32,"sectionNumber":1,"value":"It will happen that whoever will call on Yahweh’s name shall be saved; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":32,"sectionNumber":2,"value":"for in Mount Zion and in Jerusalem there will be those who escape, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":32,"sectionNumber":3,"value":"as Yahweh has said, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":32,"sectionNumber":4,"value":"and among the remnant, those whom Yahweh calls. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"}]