[{"type":"paragraph text","chapterNumber":15,"verseNumber":1,"sectionNumber":1,"value":"Then Eliphaz the Temanite answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":15,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":15,"verseNumber":2,"sectionNumber":1,"value":"“Should a wise man answer with vain knowledge, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":2,"sectionNumber":2,"value":"and fill himself with the east wind? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":3,"sectionNumber":1,"value":"Should he reason with unprofitable talk, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":3,"sectionNumber":2,"value":"or with speeches with which he can do no good? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":4,"sectionNumber":1,"value":"Yes, you do away with fear, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":4,"sectionNumber":2,"value":"and hinder devotion before God. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":5,"sectionNumber":1,"value":"For your iniquity teaches your mouth, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":5,"sectionNumber":2,"value":"and you choose the language of the crafty. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":6,"sectionNumber":1,"value":"Your own mouth condemns you, and not I. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":6,"sectionNumber":2,"value":"Yes, your own lips testify against you. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":15,"verseNumber":6,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":15,"verseNumber":7,"sectionNumber":1,"value":"“Are you the first man who was born? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":7,"sectionNumber":2,"value":"Or were you brought out before the hills? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":8,"sectionNumber":1,"value":"Have you heard the secret counsel of God? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":8,"sectionNumber":2,"value":"Do you limit wisdom to yourself? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":9,"sectionNumber":1,"value":"What do you know that we don’t know? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":9,"sectionNumber":2,"value":"What do you understand which is not in us? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":10,"sectionNumber":1,"value":"With us are both the gray-headed and the very aged men, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":10,"sectionNumber":2,"value":"much elder than your father. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":11,"sectionNumber":1,"value":"Are the consolations of God too small for you, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":11,"sectionNumber":2,"value":"even the word that is gentle toward you? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":12,"sectionNumber":1,"value":"Why does your heart carry you away? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":12,"sectionNumber":2,"value":"Why do your eyes flash, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":13,"sectionNumber":1,"value":"That you turn your spirit against God, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":13,"sectionNumber":2,"value":"and let such words go out of your mouth? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":14,"sectionNumber":1,"value":"What is man, that he should be clean? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":14,"sectionNumber":2,"value":"What is he who is born of a woman, that he should be righteous? "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":15,"sectionNumber":1,"value":"Behold, he puts no trust in his holy ones. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":15,"sectionNumber":2,"value":"Yes, the heavens are not clean in his sight; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":16,"sectionNumber":1,"value":"how much less one who is abominable and corrupt, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":16,"sectionNumber":2,"value":"a man who drinks iniquity like water! "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":15,"verseNumber":16,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":15,"verseNumber":17,"sectionNumber":1,"value":"“I will show you, listen to me; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":17,"sectionNumber":2,"value":"that which I have seen I will declare "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":18,"sectionNumber":1,"value":"(which wise men have told by their fathers, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":18,"sectionNumber":2,"value":"and have not hidden it; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":19,"sectionNumber":1,"value":"to whom alone the land was given, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":19,"sectionNumber":2,"value":"and no stranger passed among them): "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":20,"sectionNumber":1,"value":"the wicked man writhes in pain all his days, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":20,"sectionNumber":2,"value":"even the number of years that are laid up for the oppressor. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":21,"sectionNumber":1,"value":"A sound of terrors is in his ears. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":21,"sectionNumber":2,"value":"In prosperity the destroyer will come on him. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":22,"sectionNumber":1,"value":"He doesn’t believe that he will return out of darkness. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":22,"sectionNumber":2,"value":"He is waited for by the sword. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":23,"sectionNumber":1,"value":"He wanders abroad for bread, saying, ‘Where is it?’ "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":23,"sectionNumber":2,"value":"He knows that the day of darkness is ready at his hand. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":24,"sectionNumber":1,"value":"Distress and anguish make him afraid. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":24,"sectionNumber":2,"value":"They prevail against him, as a king ready to the battle. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":25,"sectionNumber":1,"value":"Because he has stretched out his hand against God, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":25,"sectionNumber":2,"value":"and behaves himself proudly against the Almighty, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":26,"sectionNumber":1,"value":"he runs at him with a stiff neck, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":26,"sectionNumber":2,"value":"with the thick shields of his bucklers, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":27,"sectionNumber":1,"value":"because he has covered his face with his fatness, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":27,"sectionNumber":2,"value":"and gathered fat on his thighs. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":28,"sectionNumber":1,"value":"He has lived in desolate cities, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":28,"sectionNumber":2,"value":"in houses which no one inhabited, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":28,"sectionNumber":3,"value":"which were ready to become heaps. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":29,"sectionNumber":1,"value":"He will not be rich, neither will his substance continue, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":29,"sectionNumber":2,"value":"neither will their possessions be extended on the earth. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":30,"sectionNumber":1,"value":"He will not depart out of darkness. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":30,"sectionNumber":2,"value":"The flame will dry up his branches. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":30,"sectionNumber":3,"value":"He will go away by the breath of God’s mouth. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":31,"sectionNumber":1,"value":"Let him not trust in emptiness, deceiving himself; "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":31,"sectionNumber":2,"value":"for emptiness will be his reward. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":32,"sectionNumber":1,"value":"It will be accomplished before his time. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":32,"sectionNumber":2,"value":"His branch will not be green. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":33,"sectionNumber":1,"value":"He will shake off his unripe grape as the vine, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":33,"sectionNumber":2,"value":"and will cast off his flower as the olive tree. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":34,"sectionNumber":1,"value":"For the company of the godless will be barren, "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":34,"sectionNumber":2,"value":"and fire will consume the tents of bribery. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":35,"sectionNumber":1,"value":"They conceive mischief, and produce iniquity. "},{"type":"line break"},{"type":"line text","chapterNumber":15,"verseNumber":35,"sectionNumber":2,"value":"Their heart prepares deceit.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"}]