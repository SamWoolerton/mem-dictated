[{"type":"paragraph text","chapterNumber":2,"verseNumber":1,"sectionNumber":1,"value":"This is what Isaiah the son of Amoz saw concerning Judah and Jerusalem. "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":1,"value":"It shall happen in the latter days, that the mountain of Yahweh’s house shall be established on the top of the mountains, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":2,"value":"and shall be raised above the hills; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":3,"value":"and all nations shall flow to it. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":1,"value":"Many peoples shall go and say, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":2,"value":"“Come, let’s go up to the mountain of Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":3,"value":"to the house of the God of Jacob; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":4,"value":"and he will teach us of his ways, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":5,"value":"and we will walk in his paths.” "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":6,"value":"For the law shall go out of Zion, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":7,"value":"and Yahweh’s word from Jerusalem. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":1,"value":"He will judge between the nations, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":2,"value":"and will decide concerning many peoples. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":3,"value":"They shall beat their swords into plowshares, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":4,"value":"and their spears into pruning hooks. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":5,"value":"Nation shall not lift up sword against nation, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":6,"value":"neither shall they learn war any more. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":1,"value":"House of Jacob, come, and let’s walk in the light of Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":"For you have forsaken your people, the house of Jacob, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":2,"value":"because they are filled from the east, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":3,"value":"with those who practice divination like the Philistines, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":4,"value":"and they clasp hands with the children of foreigners. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":1,"value":"Their land is full of silver and gold, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":2,"value":"neither is there any end of their treasures. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":3,"value":"Their land also is full of horses, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":4,"value":"neither is there any end of their chariots. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":1,"value":"Their land also is full of idols. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":2,"value":"They worship the work of their own hands, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":3,"value":"that which their own fingers have made. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":1,"value":"Man is brought low, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":2,"value":"and mankind is humbled; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":3,"value":"therefore don’t forgive them. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":1,"value":"Enter into the rock, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":2,"value":"and hide in the dust, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":3,"value":"from before the terror of Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":4,"value":"and from the glory of his majesty. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":1,"value":"The lofty looks of man will be brought low, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":2,"value":"the arrogance of men will be bowed down, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":3,"value":"and Yahweh alone will be exalted in that day. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":1,"value":"For there will be a day of Yahweh of Armies for all that is proud and arrogant, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":2,"value":"and for all that is lifted up; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":3,"value":"and it shall be brought low: "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":1,"value":"for all the cedars of Lebanon, that are high and lifted up, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":2,"value":"for all the oaks of Bashan, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":1,"value":"for all the high mountains, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":2,"value":"for all the hills that are lifted up, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":1,"value":"for every lofty tower, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":2,"value":"for every fortified wall, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":1,"value":"for all the ships of Tarshish, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":2,"value":"and for all pleasant imagery. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":1,"value":"The loftiness of man shall be bowed down, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":2,"value":"and the arrogance of men shall be brought low; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":3,"value":"and Yahweh alone shall be exalted in that day. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":1,"value":"The idols shall utterly pass away. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":1,"value":"Men shall go into the caves of the rocks, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":2,"value":"and into the holes of the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":3,"value":"from before the terror of Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":4,"value":"and from the glory of his majesty, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":5,"value":"when he arises to shake the earth mightily. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":1,"value":"In that day, men shall cast away their idols of silver "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":2,"value":"and their idols of gold, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":3,"value":"which have been made for themselves to worship, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":4,"value":"to the moles and to the bats, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":1,"value":"to go into the caverns of the rocks, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":2,"value":"and into the clefts of the ragged rocks, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":3,"value":"from before the terror of Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":4,"value":"and from the glory of his majesty, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":5,"value":"when he arises to shake the earth mightily. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":1,"value":"Stop trusting in man, whose breath is in his nostrils; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":2,"value":"for of what account is he? "},{"type":"line break"}]