[{"type":"paragraph text","chapterNumber":56,"verseNumber":1,"sectionNumber":1,"value":"Yahweh says, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":56,"verseNumber":1,"sectionNumber":2,"value":"“Maintain justice "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":1,"sectionNumber":3,"value":"and do what is right, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":1,"sectionNumber":4,"value":"for my salvation is near "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":1,"sectionNumber":5,"value":"and my righteousness will soon be revealed. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":2,"sectionNumber":1,"value":"Blessed is the man who does this, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":2,"sectionNumber":2,"value":"and the son of man who holds it fast; "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":2,"sectionNumber":3,"value":"who keeps the Sabbath without profaning it "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":2,"sectionNumber":4,"value":"and keeps his hand from doing any evil.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":56,"verseNumber":2,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":56,"verseNumber":3,"sectionNumber":1,"value":"Let no foreigner who has joined himself to Yahweh speak, saying, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":3,"sectionNumber":2,"value":"“Yahweh will surely separate me from his people.” "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":3,"sectionNumber":3,"value":"Do not let the eunuch say, “Behold, I am a dry tree.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":56,"verseNumber":3,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":56,"verseNumber":4,"sectionNumber":1,"value":"For Yahweh says, “To the eunuchs who keep my Sabbaths, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":4,"sectionNumber":2,"value":"choose the things that please me, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":4,"sectionNumber":3,"value":"and hold fast to my covenant, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":5,"sectionNumber":1,"value":"I will give them in my house and within my walls a memorial and a name better than of sons and of daughters. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":5,"sectionNumber":2,"value":"I will give them an everlasting name that will not be cut off. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":56,"verseNumber":5,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":56,"verseNumber":6,"sectionNumber":1,"value":"Also the foreigners who join themselves to Yahweh "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":6,"sectionNumber":2,"value":"to serve him, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":6,"sectionNumber":3,"value":"and to love Yahweh’s name, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":6,"sectionNumber":4,"value":"to be his servants, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":6,"sectionNumber":5,"value":"everyone who keeps the Sabbath from profaning it, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":6,"sectionNumber":6,"value":"and holds fast my covenant, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":7,"sectionNumber":1,"value":"I will bring these to my holy mountain, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":7,"sectionNumber":2,"value":"and make them joyful in my house of prayer. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":7,"sectionNumber":3,"value":"Their burnt offerings and their sacrifices will be accepted on my altar; "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":7,"sectionNumber":4,"value":"for my house will be called a house of prayer for all peoples.” "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":8,"sectionNumber":1,"value":"The Lord Yahweh, who gathers the outcasts of Israel, says, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":8,"sectionNumber":2,"value":"“I will yet gather others to him, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":8,"sectionNumber":3,"value":"in addition to his own who are gathered.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":56,"verseNumber":8,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":56,"verseNumber":9,"sectionNumber":1,"value":"All you animals of the field, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":9,"sectionNumber":2,"value":"come to devour, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":9,"sectionNumber":3,"value":"all you animals in the forest. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":10,"sectionNumber":1,"value":"His watchmen are blind. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":10,"sectionNumber":2,"value":"They are all without knowledge. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":10,"sectionNumber":3,"value":"They are all mute dogs. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":10,"sectionNumber":4,"value":"They can’t bark— "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":10,"sectionNumber":5,"value":"dreaming, lying down, loving to slumber. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":11,"sectionNumber":1,"value":"Yes, the dogs are greedy. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":11,"sectionNumber":2,"value":"They can never have enough. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":11,"sectionNumber":3,"value":"They are shepherds who can’t understand. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":11,"sectionNumber":4,"value":"They have all turned to their own way, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":11,"sectionNumber":5,"value":"each one to his gain, from every quarter. "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":12,"sectionNumber":1,"value":"“Come,” say they, “I will get wine, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":12,"sectionNumber":2,"value":"and we will fill ourselves with strong drink; "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":12,"sectionNumber":3,"value":"and tomorrow will be as today, "},{"type":"line break"},{"type":"line text","chapterNumber":56,"verseNumber":12,"sectionNumber":4,"value":"great beyond measure.” "},{"type":"line break"}]