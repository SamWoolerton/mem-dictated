[{"type":"line text","chapterNumber":14,"verseNumber":28,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":14,"verseNumber":1,"sectionNumber":1,"value":"“Man, who is born of a woman, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":1,"sectionNumber":2,"value":"is of few days, and full of trouble. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":2,"sectionNumber":1,"value":"He grows up like a flower, and is cut down. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":2,"sectionNumber":2,"value":"He also flees like a shadow, and doesn’t continue. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":1,"value":"Do you open your eyes on such a one, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":2,"value":"and bring me into judgment with you? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":4,"sectionNumber":1,"value":"Who can bring a clean thing out of an unclean? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":4,"sectionNumber":2,"value":"Not one. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":5,"sectionNumber":1,"value":"Seeing his days are determined, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":5,"sectionNumber":2,"value":"the number of his months is with you, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":5,"sectionNumber":3,"value":"and you have appointed his bounds that he can’t pass; "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":6,"sectionNumber":1,"value":"Look away from him, that he may rest, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":6,"sectionNumber":2,"value":"until he accomplishes, as a hireling, his day. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":14,"verseNumber":6,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":14,"verseNumber":7,"sectionNumber":1,"value":"“For there is hope for a tree if it is cut down, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":7,"sectionNumber":2,"value":"that it will sprout again, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":7,"sectionNumber":3,"value":"that the tender branch of it will not cease. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":8,"sectionNumber":1,"value":"Though its root grows old in the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":8,"sectionNumber":2,"value":"and its stock dies in the ground, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":9,"sectionNumber":1,"value":"yet through the scent of water it will bud, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":9,"sectionNumber":2,"value":"and sprout boughs like a plant. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":10,"sectionNumber":1,"value":"But man dies, and is laid low. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":10,"sectionNumber":2,"value":"Yes, man gives up the spirit, and where is he? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":11,"sectionNumber":1,"value":"As the waters fail from the sea, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":11,"sectionNumber":2,"value":"and the river wastes and dries up, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":12,"sectionNumber":1,"value":"so man lies down and doesn’t rise. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":12,"sectionNumber":2,"value":"Until the heavens are no more, they will not awake, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":12,"sectionNumber":3,"value":"nor be roused out of their sleep. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":14,"verseNumber":12,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":14,"verseNumber":13,"sectionNumber":1,"value":"“Oh that you would hide me in Sheol, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":13,"sectionNumber":2,"value":"that you would keep me secret until your wrath is past, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":13,"sectionNumber":3,"value":"that you would appoint me a set time and remember me! "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":14,"sectionNumber":1,"value":"If a man dies, will he live again? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":14,"sectionNumber":2,"value":"I would wait all the days of my warfare, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":14,"sectionNumber":3,"value":"until my release should come. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":15,"sectionNumber":1,"value":"You would call, and I would answer you. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":15,"sectionNumber":2,"value":"You would have a desire for the work of your hands. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":16,"sectionNumber":1,"value":"But now you count my steps. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":16,"sectionNumber":2,"value":"Don’t you watch over my sin? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":17,"sectionNumber":1,"value":"My disobedience is sealed up in a bag. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":17,"sectionNumber":2,"value":"You fasten up my iniquity. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":14,"verseNumber":17,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":1,"value":"“But the mountain falling comes to nothing. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":2,"value":"The rock is removed out of its place; "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":1,"value":"The waters wear the stones. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":2,"value":"The torrents of it wash away the dust of the earth. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":3,"value":"So you destroy the hope of man. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":20,"sectionNumber":1,"value":"You forever prevail against him, and he departs. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":20,"sectionNumber":2,"value":"You change his face, and send him away. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":21,"sectionNumber":1,"value":"His sons come to honor, and he doesn’t know it. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":21,"sectionNumber":2,"value":"They are brought low, but he doesn’t perceive it of them. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":22,"sectionNumber":1,"value":"But his flesh on him has pain, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":22,"sectionNumber":2,"value":"and his soul within him mourns.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"}]