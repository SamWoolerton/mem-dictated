[{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":49,"verseNumber":1,"sectionNumber":1,"value":"Hear this, all you peoples. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":1,"sectionNumber":2,"value":"Listen, all you inhabitants of the world, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":1,"value":"both low and high, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":2,"value":"rich and poor together. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":1,"value":"My mouth will speak words of wisdom. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":2,"value":"My heart will utter understanding. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":4,"sectionNumber":1,"value":"I will incline my ear to a proverb. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":4,"sectionNumber":2,"value":"I will solve my riddle on the harp. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":1,"value":"Why should I fear in the days of evil, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":2,"value":"when iniquity at my heels surrounds me? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":6,"sectionNumber":1,"value":"Those who trust in their wealth, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":6,"sectionNumber":2,"value":"and boast in the multitude of their riches— "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":7,"sectionNumber":1,"value":"none of them can by any means redeem his brother, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":7,"sectionNumber":2,"value":"nor give God a ransom for him. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":8,"sectionNumber":1,"value":"For the redemption of their life is costly, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":8,"sectionNumber":2,"value":"no payment is ever enough, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":9,"sectionNumber":1,"value":"that he should live on forever, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":9,"sectionNumber":2,"value":"that he should not see corruption. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":1,"value":"For he sees that wise men die; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":2,"value":"likewise the fool and the senseless perish, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":3,"value":"and leave their wealth to others. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":11,"sectionNumber":1,"value":"Their inward thought is that their houses will endure forever, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":11,"sectionNumber":2,"value":"and their dwelling places to all generations. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":11,"sectionNumber":3,"value":"They name their lands after themselves. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":12,"sectionNumber":1,"value":"But man, despite his riches, doesn’t endure. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":12,"sectionNumber":2,"value":"He is like the animals that perish. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":12,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":49,"verseNumber":13,"sectionNumber":1,"value":"This is the destiny of those who are foolish, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":13,"sectionNumber":2,"value":"and of those who approve their sayings. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":1,"value":"They are appointed as a flock for Sheol. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":2,"value":"Death shall be their shepherd. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":3,"value":"The upright shall have dominion over them in the morning. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":4,"value":"Their beauty shall decay in Sheol, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":5,"value":"far from their mansion. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":15,"sectionNumber":1,"value":"But God will redeem my soul from the power of Sheol, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":15,"sectionNumber":2,"value":"for he will receive me. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":1,"value":"Don’t be afraid when a man is made rich, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":2,"value":"when the glory of his house is increased; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":17,"sectionNumber":1,"value":"for when he dies he will carry nothing away. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":17,"sectionNumber":2,"value":"His glory won’t descend after him. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":18,"sectionNumber":1,"value":"Though while he lived he blessed his soul— "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":18,"sectionNumber":2,"value":"and men praise you when you do well for yourself— "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":1,"value":"he shall go to the generation of his fathers. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":2,"value":"They shall never see the light. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":20,"sectionNumber":1,"value":"A man who has riches without understanding, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":20,"sectionNumber":2,"value":"is like the animals that perish. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"A Psalm by Asaph."},{"type":"stanza start"}]