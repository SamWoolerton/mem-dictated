[{"type":"paragraph text","chapterNumber":10,"verseNumber":1,"sectionNumber":1,"value":"The proverbs of Solomon. "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":10,"verseNumber":1,"sectionNumber":2,"value":"A wise son makes a glad father; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":1,"sectionNumber":3,"value":"but a foolish son brings grief to his mother. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":1,"value":"Treasures of wickedness profit nothing, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":2,"value":"but righteousness delivers from death. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":3,"sectionNumber":1,"value":"Yahweh will not allow the soul of the righteous to go hungry, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":3,"sectionNumber":2,"value":"but he thrusts away the desire of the wicked. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":4,"sectionNumber":1,"value":"He becomes poor who works with a lazy hand, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":4,"sectionNumber":2,"value":"but the hand of the diligent brings wealth. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":5,"sectionNumber":1,"value":"He who gathers in summer is a wise son, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":5,"sectionNumber":2,"value":"but he who sleeps during the harvest is a son who causes shame. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":1,"value":"Blessings are on the head of the righteous, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":2,"value":"but violence covers the mouth of the wicked. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":7,"sectionNumber":1,"value":"The memory of the righteous is blessed, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":7,"sectionNumber":2,"value":"but the name of the wicked will rot. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":8,"sectionNumber":1,"value":"The wise in heart accept commandments, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":8,"sectionNumber":2,"value":"but a chattering fool will fall. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":9,"sectionNumber":1,"value":"He who walks blamelessly walks surely, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":9,"sectionNumber":2,"value":"but he who perverts his ways will be found out. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":10,"sectionNumber":1,"value":"One winking with the eye causes sorrow, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":10,"sectionNumber":2,"value":"but a chattering fool will fall. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":11,"sectionNumber":1,"value":"The mouth of the righteous is a spring of life, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":11,"sectionNumber":2,"value":"but violence covers the mouth of the wicked. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":12,"sectionNumber":1,"value":"Hatred stirs up strife, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":12,"sectionNumber":2,"value":"but love covers all wrongs. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":13,"sectionNumber":1,"value":"Wisdom is found on the lips of him who has discernment, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":13,"sectionNumber":2,"value":"but a rod is for the back of him who is void of understanding. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":14,"sectionNumber":1,"value":"Wise men lay up knowledge, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":14,"sectionNumber":2,"value":"but the mouth of the foolish is near ruin. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":15,"sectionNumber":1,"value":"The rich man’s wealth is his strong city. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":15,"sectionNumber":2,"value":"The destruction of the poor is their poverty. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":16,"sectionNumber":1,"value":"The labor of the righteous leads to life. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":16,"sectionNumber":2,"value":"The increase of the wicked leads to sin. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":17,"sectionNumber":1,"value":"He is in the way of life who heeds correction, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":17,"sectionNumber":2,"value":"but he who forsakes reproof leads others astray. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":18,"sectionNumber":1,"value":"He who hides hatred has lying lips. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":18,"sectionNumber":2,"value":"He who utters a slander is a fool. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":19,"sectionNumber":1,"value":"In the multitude of words there is no lack of disobedience, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":19,"sectionNumber":2,"value":"but he who restrains his lips does wisely. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":20,"sectionNumber":1,"value":"The tongue of the righteous is like choice silver. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":20,"sectionNumber":2,"value":"The heart of the wicked is of little worth. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":21,"sectionNumber":1,"value":"The lips of the righteous feed many, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":21,"sectionNumber":2,"value":"but the foolish die for lack of understanding. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":22,"sectionNumber":1,"value":"Yahweh’s blessing brings wealth, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":22,"sectionNumber":2,"value":"and he adds no trouble to it. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":23,"sectionNumber":1,"value":"It is a fool’s pleasure to do wickedness, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":23,"sectionNumber":2,"value":"but wisdom is a man of understanding’s pleasure. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":24,"sectionNumber":1,"value":"What the wicked fear, will overtake them, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":24,"sectionNumber":2,"value":"but the desire of the righteous will be granted. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":25,"sectionNumber":1,"value":"When the whirlwind passes, the wicked is no more; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":25,"sectionNumber":2,"value":"but the righteous stand firm forever. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":26,"sectionNumber":1,"value":"As vinegar to the teeth, and as smoke to the eyes, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":26,"sectionNumber":2,"value":"so is the sluggard to those who send him. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":27,"sectionNumber":1,"value":"The fear of Yahweh prolongs days, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":27,"sectionNumber":2,"value":"but the years of the wicked shall be shortened. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":28,"sectionNumber":1,"value":"The prospect of the righteous is joy, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":28,"sectionNumber":2,"value":"but the hope of the wicked will perish. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":29,"sectionNumber":1,"value":"The way of Yahweh is a stronghold to the upright, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":29,"sectionNumber":2,"value":"but it is a destruction to the workers of iniquity. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":30,"sectionNumber":1,"value":"The righteous will never be removed, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":30,"sectionNumber":2,"value":"but the wicked will not dwell in the land. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":31,"sectionNumber":1,"value":"The mouth of the righteous produces wisdom, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":31,"sectionNumber":2,"value":"but the perverse tongue will be cut off. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":32,"sectionNumber":1,"value":"The lips of the righteous know what is acceptable, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":32,"sectionNumber":2,"value":"but the mouth of the wicked is perverse. "},{"type":"line break"}]