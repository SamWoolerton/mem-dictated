[{"type":"paragraph text","chapterNumber":47,"verseNumber":1,"sectionNumber":1,"value":"Yahweh’s word that came to Jeremiah the prophet concerning the Philistines, before Pharaoh struck Gaza. "},{"type":"paragraph end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":47,"verseNumber":2,"sectionNumber":1,"value":"Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":2,"value":"“Behold, waters rise up out of the north, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":3,"value":"and will become an overflowing stream, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":4,"value":"and will overflow the land and all that is therein, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":5,"value":"the city and those who dwell therein. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":6,"value":"The men will cry, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":7,"value":"and all the inhabitants of the land will wail. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":1,"value":"At the noise of the stamping of the hoofs of his strong ones, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":2,"value":"at the rushing of his chariots, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":3,"value":"at the rumbling of his wheels, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":4,"value":"the fathers don’t look back to their children "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":5,"value":"for feebleness of hands; "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":4,"sectionNumber":1,"value":"because of the day that comes to destroy all the Philistines, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":4,"sectionNumber":2,"value":"to cut off from Tyre and Sidon every helper who remains; "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":4,"sectionNumber":3,"value":"for Yahweh will destroy the Philistines, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":4,"sectionNumber":4,"value":"the remnant of the isle of Caphtor. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":1,"value":"Baldness has come on Gaza; "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":2,"value":"Ashkelon is brought to nothing, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":3,"value":"the remnant of their valley: "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":4,"value":"how long will you cut yourself? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":1,"value":"“ ‘You sword of Yahweh, how long will it be before you are quiet? "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":2,"value":"Put yourself back into your scabbard; "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":3,"value":"rest, and be still.’ "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":1,"value":"“How can you be quiet, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":2,"value":"since Yahweh has given you a command? "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":3,"value":"Against Ashkelon, and against the seashore, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":4,"value":"there has he appointed it.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]