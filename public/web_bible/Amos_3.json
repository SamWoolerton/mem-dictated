[{"type":"paragraph text","chapterNumber":3,"verseNumber":1,"sectionNumber":1,"value":"Hear this word that Yahweh has spoken against you, children of Israel, against the whole family which I brought up out of the land of Egypt, saying: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":1,"value":"“I have only chosen you of all the families of the earth. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":2,"value":"Therefore I will punish you for all of your sins.” "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":1,"value":"Do two walk together, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":2,"value":"unless they have agreed? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":1,"value":"Will a lion roar in the thicket, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":2,"value":"when he has no prey? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":3,"value":"Does a young lion cry out of his den, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":4,"value":"if he has caught nothing? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":1,"value":"Can a bird fall in a trap on the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":2,"value":"where no snare is set for him? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":3,"value":"Does a snare spring up from the ground, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":4,"value":"when there is nothing to catch? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":1,"value":"Does the trumpet alarm sound in a city, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":2,"value":"without the people being afraid? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":3,"value":"Does evil happen to a city, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":4,"value":"and Yahweh hasn’t done it? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":1,"value":"Surely the Lord Yahweh will do nothing, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":2,"value":"unless he reveals his secret to his servants the prophets. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":1,"value":"The lion has roared. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":2,"value":"Who will not fear? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":3,"value":"The Lord Yahweh has spoken. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":4,"value":"Who can but prophesy? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":1,"value":"Proclaim in the palaces at Ashdod, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":2,"value":"and in the palaces in the land of Egypt, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":3,"value":"and say, “Assemble yourselves on the mountains of Samaria, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":4,"value":"and see what unrest is in her, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":5,"value":"and what oppression is among them.” "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":1,"value":"“Indeed they don’t know to do right,” says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":2,"value":"“Who hoard plunder and loot in their palaces.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":3,"verseNumber":11,"sectionNumber":1,"value":"Therefore the Lord Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":2,"value":"“An adversary will overrun the land; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":3,"value":"and he will pull down your strongholds, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":4,"value":"and your fortresses will be plundered.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":3,"verseNumber":12,"sectionNumber":1,"value":"Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":2,"value":"“As the shepherd rescues out of the mouth of the lion two legs, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":3,"value":"or a piece of an ear, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":4,"value":"so shall the children of Israel be rescued who sit in Samaria on the corner of a couch, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":5,"value":"and on the silken cushions of a bed.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":3,"verseNumber":13,"sectionNumber":1,"value":"“Listen, and testify against the house of Jacob,” says the Lord Yahweh, the God of Armies. "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":13,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":14,"sectionNumber":1,"value":"“For in the day that I visit the transgressions of Israel on him, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":14,"sectionNumber":2,"value":"I will also visit the altars of Bethel; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":14,"sectionNumber":3,"value":"and the horns of the altar will be cut off, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":14,"sectionNumber":4,"value":"and fall to the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":15,"sectionNumber":1,"value":"I will strike the winter house with the summer house; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":15,"sectionNumber":2,"value":"and the houses of ivory will perish, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":15,"sectionNumber":3,"value":"and the great houses will have an end,” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":3,"verseNumber":15,"sectionNumber":4,"value":"says Yahweh. "},{"type":"paragraph end"},{"type":"paragraph start"}]