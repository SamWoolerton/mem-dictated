[{"type":"line text","chapterNumber":50,"verseNumber":26,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":50,"verseNumber":1,"sectionNumber":1,"value":"Yahweh says, “Where is the bill of your mother’s divorce, with which I have put her away? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":1,"sectionNumber":2,"value":"Or to which of my creditors have I sold you? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":1,"sectionNumber":3,"value":"Behold, you were sold for your iniquities, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":1,"sectionNumber":4,"value":"and your mother was put away for your transgressions. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":2,"sectionNumber":1,"value":"Why, when I came, was there no one? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":2,"sectionNumber":2,"value":"When I called, why was there no one to answer? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":2,"sectionNumber":3,"value":"Is my hand shortened at all, that it can’t redeem? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":2,"sectionNumber":4,"value":"Or have I no power to deliver? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":2,"sectionNumber":5,"value":"Behold, at my rebuke I dry up the sea. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":2,"sectionNumber":6,"value":"I make the rivers a wilderness. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":2,"sectionNumber":7,"value":"Their fish stink because there is no water, and die of thirst. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":3,"sectionNumber":1,"value":"I clothe the heavens with blackness. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":3,"sectionNumber":2,"value":"I make sackcloth their covering.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":50,"verseNumber":3,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":50,"verseNumber":4,"sectionNumber":1,"value":"The Lord Yahweh has given me the tongue of those who are taught, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":4,"sectionNumber":2,"value":"that I may know how to sustain with words him who is weary. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":4,"sectionNumber":3,"value":"He awakens morning by morning, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":4,"sectionNumber":4,"value":"he awakens my ear to hear as those who are taught. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":5,"sectionNumber":1,"value":"The Lord Yahweh has opened my ear. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":5,"sectionNumber":2,"value":"I was not rebellious. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":5,"sectionNumber":3,"value":"I have not turned back. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":6,"sectionNumber":1,"value":"I gave my back to those who beat me, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":6,"sectionNumber":2,"value":"and my cheeks to those who plucked off the hair. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":6,"sectionNumber":3,"value":"I didn’t hide my face from shame and spitting. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":7,"sectionNumber":1,"value":"For the Lord Yahweh will help me. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":7,"sectionNumber":2,"value":"Therefore I have not been confounded. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":7,"sectionNumber":3,"value":"Therefore I have set my face like a flint, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":7,"sectionNumber":4,"value":"and I know that I won’t be disappointed. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":8,"sectionNumber":1,"value":"He who justifies me is near. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":8,"sectionNumber":2,"value":"Who will bring charges against me? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":8,"sectionNumber":3,"value":"Let us stand up together. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":8,"sectionNumber":4,"value":"Who is my adversary? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":8,"sectionNumber":5,"value":"Let him come near to me. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":9,"sectionNumber":1,"value":"Behold, the Lord Yahweh will help me! "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":9,"sectionNumber":2,"value":"Who is he who will condemn me? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":9,"sectionNumber":3,"value":"Behold, they will all grow old like a garment. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":9,"sectionNumber":4,"value":"The moths will eat them up. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":50,"verseNumber":9,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":50,"verseNumber":10,"sectionNumber":1,"value":"Who among you fears Yahweh "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":10,"sectionNumber":2,"value":"and obeys the voice of his servant? "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":10,"sectionNumber":3,"value":"He who walks in darkness "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":10,"sectionNumber":4,"value":"and has no light, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":10,"sectionNumber":5,"value":"let him trust in Yahweh’s name, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":10,"sectionNumber":6,"value":"and rely on his God. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":11,"sectionNumber":1,"value":"Behold, all you who kindle a fire, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":11,"sectionNumber":2,"value":"who adorn yourselves with torches around yourselves, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":11,"sectionNumber":3,"value":"walk in the flame of your fire, "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":11,"sectionNumber":4,"value":"and among the torches that you have kindled. "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":11,"sectionNumber":5,"value":"You will have this from my hand: "},{"type":"line break"},{"type":"line text","chapterNumber":50,"verseNumber":11,"sectionNumber":6,"value":"you will lie down in sorrow. "},{"type":"line break"}]