[{"type":"line text","chapterNumber":64,"verseNumber":19,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":64,"verseNumber":1,"sectionNumber":1,"value":"Oh that you would tear the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":1,"sectionNumber":2,"value":"that you would come down, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":1,"sectionNumber":3,"value":"that the mountains might quake at your presence. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":2,"sectionNumber":1,"value":"As when fire kindles the brushwood, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":2,"sectionNumber":2,"value":"and the fire causes the water to boil; "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":2,"sectionNumber":3,"value":"Make your name known to your adversaries, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":2,"sectionNumber":4,"value":"that the nations may tremble at your presence! "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":3,"sectionNumber":1,"value":"When you did awesome things which we didn’t look for, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":3,"sectionNumber":2,"value":"you came down, and the mountains quaked at your presence. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":4,"sectionNumber":1,"value":"For from of old men have not heard, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":4,"sectionNumber":2,"value":"nor perceived by the ear, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":4,"sectionNumber":3,"value":"nor has the eye seen a God besides you, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":4,"sectionNumber":4,"value":"who works for him who waits for him. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":1,"value":"You meet him who rejoices and does righteousness, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":2,"value":"those who remember you in your ways. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":3,"value":"Behold, you were angry, and we sinned. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":4,"value":"We have been in sin for a long time. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":5,"sectionNumber":5,"value":"Shall we be saved? "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":6,"sectionNumber":1,"value":"For we have all become like one who is unclean, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":6,"sectionNumber":2,"value":"and all our righteousness is like a polluted garment. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":6,"sectionNumber":3,"value":"We all fade like a leaf; "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":6,"sectionNumber":4,"value":"and our iniquities, like the wind, take us away. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":7,"sectionNumber":1,"value":"There is no one who calls on your name, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":7,"sectionNumber":2,"value":"who stirs himself up to take hold of you; "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":7,"sectionNumber":3,"value":"for you have hidden your face from us, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":7,"sectionNumber":4,"value":"and have consumed us by means of our iniquities. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":64,"verseNumber":7,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":64,"verseNumber":8,"sectionNumber":1,"value":"But now, Yahweh, you are our Father. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":8,"sectionNumber":2,"value":"We are the clay and you our potter. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":8,"sectionNumber":3,"value":"We all are the work of your hand. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":9,"sectionNumber":1,"value":"Don’t be furious, Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":9,"sectionNumber":2,"value":"Don’t remember iniquity forever. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":9,"sectionNumber":3,"value":"Look and see, we beg you, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":9,"sectionNumber":4,"value":"we are all your people. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":10,"sectionNumber":1,"value":"Your holy cities have become a wilderness. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":10,"sectionNumber":2,"value":"Zion has become a wilderness, "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":10,"sectionNumber":3,"value":"Jerusalem a desolation. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":11,"sectionNumber":1,"value":"Our holy and our beautiful house where our fathers praised you "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":11,"sectionNumber":2,"value":"is burned with fire. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":11,"sectionNumber":3,"value":"All our pleasant places are laid waste. "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":12,"sectionNumber":1,"value":"Will you hold yourself back for these things, Yahweh? "},{"type":"line break"},{"type":"line text","chapterNumber":64,"verseNumber":12,"sectionNumber":2,"value":"Will you keep silent and punish us very severely? "},{"type":"line break"}]