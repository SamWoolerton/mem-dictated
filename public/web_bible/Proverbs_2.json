[{"type":"line text","chapterNumber":2,"verseNumber":33,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":1,"value":"My son, if you will receive my words, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":2,"value":"and store up my commandments within you, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":1,"value":"so as to turn your ear to wisdom, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":2,"value":"and apply your heart to understanding; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":1,"value":"yes, if you call out for discernment, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":2,"value":"and lift up your voice for understanding; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":1,"value":"if you seek her as silver, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":2,"value":"and search for her as for hidden treasures: "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":1,"value":"then you will understand the fear of Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":2,"value":"and find the knowledge of God. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":"For Yahweh gives wisdom. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":2,"value":"Out of his mouth comes knowledge and understanding. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":1,"value":"He lays up sound wisdom for the upright. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":2,"value":"He is a shield to those who walk in integrity, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":1,"value":"that he may guard the paths of justice, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":2,"value":"and preserve the way of his saints. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":1,"value":"Then you will understand righteousness and justice, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":2,"value":"equity and every good path. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":1,"value":"For wisdom will enter into your heart. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":2,"value":"Knowledge will be pleasant to your soul. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":1,"value":"Discretion will watch over you. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":2,"value":"Understanding will keep you, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":1,"value":"to deliver you from the way of evil, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":2,"value":"from the men who speak perverse things, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":1,"value":"who forsake the paths of uprightness, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":2,"value":"to walk in the ways of darkness, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":1,"value":"who rejoice to do evil, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":2,"value":"and delight in the perverseness of evil, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":1,"value":"who are crooked in their ways, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":2,"value":"and wayward in their paths, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":1,"value":"to deliver you from the strange woman, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":2,"value":"even from the foreigner who flatters with her words, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":1,"value":"who forsakes the friend of her youth, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":17,"sectionNumber":2,"value":"and forgets the covenant of her God; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":1,"value":"for her house leads down to death, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":18,"sectionNumber":2,"value":"her paths to the departed spirits. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":1,"value":"None who go to her return again, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":19,"sectionNumber":2,"value":"neither do they attain to the paths of life. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":1,"value":"So you may walk in the way of good men, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":20,"sectionNumber":2,"value":"and keep the paths of the righteous. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":1,"value":"For the upright will dwell in the land. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":21,"sectionNumber":2,"value":"The perfect will remain in it. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":1,"value":"But the wicked will be cut off from the land. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":22,"sectionNumber":2,"value":"The treacherous will be rooted out of it. "},{"type":"line break"}]