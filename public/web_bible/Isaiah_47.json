[{"type":"paragraph text","chapterNumber":47,"verseNumber":1,"sectionNumber":1,"value":"“Come down and sit in the dust, virgin daughter of Babylon. "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":1,"sectionNumber":2,"value":"Sit on the ground without a throne, daughter of the Chaldeans. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":1,"sectionNumber":3,"value":"For you will no longer be called tender and delicate. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":1,"value":"Take the millstones and grind flour. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":2,"value":"Remove your veil, lift up your skirt, uncover your legs, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":2,"sectionNumber":3,"value":"and wade through the rivers. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":1,"value":"Your nakedness will be uncovered. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":2,"value":"Yes, your shame will be seen. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":3,"value":"I will take vengeance, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":4,"value":"and will spare no one.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":3,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":47,"verseNumber":4,"sectionNumber":1,"value":"Our Redeemer, Yahweh of Armies is his name, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":4,"sectionNumber":2,"value":"is the Holy One of Israel. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":4,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":1,"value":"“Sit in silence, and go into darkness, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":2,"value":"daughter of the Chaldeans. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":3,"value":"For you shall no longer be called "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":5,"sectionNumber":4,"value":"the mistress of kingdoms. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":1,"value":"I was angry with my people. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":2,"value":"I profaned my inheritance "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":3,"value":"and gave them into your hand. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":4,"value":"You showed them no mercy. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":6,"sectionNumber":5,"value":"You laid a very heavy yoke on the aged. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":1,"value":"You said, ‘I will be a princess forever,’ "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":2,"value":"so that you didn’t lay these things to your heart, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":3,"value":"nor did you remember the results. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":7,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":47,"verseNumber":8,"sectionNumber":1,"value":"“Now therefore hear this, you who are given to pleasures, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":8,"sectionNumber":2,"value":"who sit securely, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":8,"sectionNumber":3,"value":"who say in your heart, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":8,"sectionNumber":4,"value":"‘I am, and there is no one else besides me. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":8,"sectionNumber":5,"value":"I won’t sit as a widow, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":8,"sectionNumber":6,"value":"neither will I know the loss of children.’ "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":9,"sectionNumber":1,"value":"But these two things will come to you in a moment in one day, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":9,"sectionNumber":2,"value":"the loss of children and widowhood. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":9,"sectionNumber":3,"value":"They will come on you in their full measure, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":9,"sectionNumber":4,"value":"in the multitude of your sorceries, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":9,"sectionNumber":5,"value":"and the great abundance of your enchantments. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":10,"sectionNumber":1,"value":"For you have trusted in your wickedness. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":10,"sectionNumber":2,"value":"You have said, ‘No one sees me.’ "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":10,"sectionNumber":3,"value":"Your wisdom and your knowledge has perverted you. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":10,"sectionNumber":4,"value":"You have said in your heart, ‘I am, and there is no one else besides me.’ "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":11,"sectionNumber":1,"value":"Therefore disaster will come on you. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":11,"sectionNumber":2,"value":"You won’t know when it dawns. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":11,"sectionNumber":3,"value":"Mischief will fall on you. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":11,"sectionNumber":4,"value":"You won’t be able to put it away. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":11,"sectionNumber":5,"value":"Desolation will come on you suddenly, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":11,"sectionNumber":6,"value":"which you don’t understand. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":47,"verseNumber":11,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":47,"verseNumber":12,"sectionNumber":1,"value":"“Stand now with your enchantments "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":12,"sectionNumber":2,"value":"and with the multitude of your sorceries, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":12,"sectionNumber":3,"value":"in which you have labored from your youth, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":12,"sectionNumber":4,"value":"as if you might profit, "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":12,"sectionNumber":5,"value":"as if you might prevail. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":13,"sectionNumber":1,"value":"You are wearied in the multitude of your counsels. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":13,"sectionNumber":2,"value":"Now let the astrologers, the stargazers, and the monthly prognosticators, stand up and save you from the things that will happen to you. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":14,"sectionNumber":1,"value":"Behold, they are like stubble. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":14,"sectionNumber":2,"value":"The fire will burn them. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":14,"sectionNumber":3,"value":"They won’t deliver themselves from the power of the flame. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":14,"sectionNumber":4,"value":"It won’t be a coal to warm at "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":14,"sectionNumber":5,"value":"or a fire to sit by. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":15,"sectionNumber":1,"value":"The things that you labored in will be like this: "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":15,"sectionNumber":2,"value":"those who have trafficked with you from your youth will each wander in his own way. "},{"type":"line break"},{"type":"line text","chapterNumber":47,"verseNumber":15,"sectionNumber":3,"value":"There will be no one to save you. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"}]