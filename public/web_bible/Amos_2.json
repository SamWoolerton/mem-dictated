[{"type":"paragraph text","chapterNumber":2,"verseNumber":1,"sectionNumber":1,"value":"Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":2,"value":"“For three transgressions of Moab, yes, for four, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":3,"value":"I will not turn away its punishment; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":1,"sectionNumber":4,"value":"because he burned the bones of the king of Edom into lime; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":1,"value":"but I will send a fire on Moab, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":2,"value":"and it will devour the palaces of Kerioth; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":2,"sectionNumber":3,"value":"and Moab will die with tumult, with shouting, and with the sound of the trumpet; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":1,"value":"and I will cut off the judge from among them, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":3,"sectionNumber":2,"value":"and will kill all its princes with him,” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":2,"verseNumber":3,"sectionNumber":3,"value":"says Yahweh. "},{"type":"paragraph end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":2,"verseNumber":4,"sectionNumber":1,"value":"Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":2,"value":"“For three transgressions of Judah, yes, for four, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":3,"value":"I will not turn away its punishment; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":4,"value":"because they have rejected Yahweh’s law, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":5,"value":"and have not kept his statutes, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":6,"value":"and their lies have led them astray, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":4,"sectionNumber":7,"value":"after which their fathers walked; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":1,"value":"but I will send a fire on Judah, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":5,"sectionNumber":2,"value":"and it will devour the palaces of Jerusalem.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":2,"verseNumber":6,"sectionNumber":1,"value":"Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":2,"value":"“For three transgressions of Israel, yes, for four, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":3,"value":"I will not turn away its punishment; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":4,"value":"because they have sold the righteous for silver, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":6,"sectionNumber":5,"value":"and the needy for a pair of sandals; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":1,"value":"They trample on the dust of the earth on the head of the poor, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":2,"value":"and deny justice to the oppressed; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":7,"sectionNumber":3,"value":"and a man and his father use the same maiden, to profane my holy name; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":1,"value":"and they lay themselves down beside every altar on clothes taken in pledge; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":8,"sectionNumber":2,"value":"and in the house of their God they drink the wine of those who have been fined. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":1,"value":"Yet I destroyed the Amorite before them, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":2,"value":"whose height was like the height of the cedars, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":3,"value":"and he was strong as the oaks; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":4,"value":"yet I destroyed his fruit from above, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":9,"sectionNumber":5,"value":"and his roots from beneath. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":1,"value":"Also I brought you up out of the land of Egypt, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":2,"value":"and led you forty years in the wilderness, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":10,"sectionNumber":3,"value":"to possess the land of the Amorite. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":1,"value":"I raised up some of your sons for prophets, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":2,"value":"and some of your young men for Nazirites. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":3,"value":"Isn’t this true, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":11,"sectionNumber":4,"value":"you children of Israel?” says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":1,"value":"“But you gave the Nazirites wine to drink, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":12,"sectionNumber":2,"value":"and commanded the prophets, saying, ‘Don’t prophesy!’ "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":1,"value":"Behold, I will crush you in your place, "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":13,"sectionNumber":2,"value":"as a cart crushes that is full of grain. "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":1,"value":"Flight will perish from the swift; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":2,"value":"and the strong won’t strengthen his force; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":14,"sectionNumber":3,"value":"neither shall the mighty deliver himself; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":1,"value":"neither shall he stand who handles the bow; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":2,"value":"and he who is swift of foot won’t escape; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":15,"sectionNumber":3,"value":"neither shall he who rides the horse deliver himself; "},{"type":"line break"},{"type":"line text","chapterNumber":2,"verseNumber":16,"sectionNumber":1,"value":"and he who is courageous among the mighty will flee away naked on that day,” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":2,"verseNumber":16,"sectionNumber":2,"value":"says Yahweh. "},{"type":"paragraph end"},{"type":"paragraph start"}]