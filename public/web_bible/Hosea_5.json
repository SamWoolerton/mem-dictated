[{"type":"paragraph text","chapterNumber":5,"verseNumber":1,"sectionNumber":1,"value":"“Listen to this, you priests! "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":5,"verseNumber":1,"sectionNumber":2,"value":"Listen, house of Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":1,"sectionNumber":3,"value":"and give ear, house of the king! "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":1,"sectionNumber":4,"value":"For the judgment is against you; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":1,"sectionNumber":5,"value":"for you have been a snare at Mizpah, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":1,"sectionNumber":6,"value":"and a net spread on Tabor. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":2,"sectionNumber":1,"value":"The rebels are deep in slaughter; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":2,"sectionNumber":2,"value":"but I discipline all of them. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":3,"sectionNumber":1,"value":"I know Ephraim, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":3,"sectionNumber":2,"value":"and Israel is not hidden from me; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":3,"sectionNumber":3,"value":"for now, Ephraim, you have played the prostitute. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":3,"sectionNumber":4,"value":"Israel is defiled. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":4,"sectionNumber":1,"value":"Their deeds won’t allow them to turn to their God; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":4,"sectionNumber":2,"value":"for the spirit of prostitution is within them, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":4,"sectionNumber":3,"value":"and they don’t know Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":1,"value":"The pride of Israel testifies to his face. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":2,"value":"Therefore Israel and Ephraim will stumble in their iniquity. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":3,"value":"Judah also will stumble with them. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":6,"sectionNumber":1,"value":"They will go with their flocks and with their herds to seek Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":6,"sectionNumber":2,"value":"but they won’t find him. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":6,"sectionNumber":3,"value":"He has withdrawn himself from them. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":7,"sectionNumber":1,"value":"They are unfaithful to Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":7,"sectionNumber":2,"value":"for they have borne illegitimate children. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":7,"sectionNumber":3,"value":"Now the new moon will devour them with their fields. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":5,"verseNumber":7,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":1,"value":"“Blow the cornet in Gibeah, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":2,"value":"and the trumpet in Ramah! "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":3,"value":"Sound a battle cry at Beth Aven, behind you, Benjamin! "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":9,"sectionNumber":1,"value":"Ephraim will become a desolation in the day of rebuke. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":9,"sectionNumber":2,"value":"Among the tribes of Israel, I have made known that which will surely be. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":10,"sectionNumber":1,"value":"The princes of Judah are like those who remove a landmark. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":10,"sectionNumber":2,"value":"I will pour out my wrath on them like water. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":1,"value":"Ephraim is oppressed, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":2,"value":"he is crushed in judgment; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":3,"value":"Because he is intent in his pursuit of idols. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":1,"value":"Therefore I am to Ephraim like a moth, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":2,"value":"and to the house of Judah like rottenness. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":1,"value":"“When Ephraim saw his sickness, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":2,"value":"and Judah his wound, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":3,"value":"Then Ephraim went to Assyria, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":4,"value":"and sent to king Jareb: "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":5,"value":"but he is not able to heal you, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":6,"value":"neither will he cure you of your wound. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":1,"value":"For I will be to Ephraim like a lion, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":2,"value":"and like a young lion to the house of Judah. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":3,"value":"I myself will tear in pieces and go away. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":4,"value":"I will carry off, and there will be no one to deliver. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":15,"sectionNumber":1,"value":"I will go and return to my place, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":15,"sectionNumber":2,"value":"until they acknowledge their offense, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":15,"sectionNumber":3,"value":"and seek my face. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":15,"sectionNumber":4,"value":"In their affliction they will seek me earnestly.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"}]