[{"type":"line text","chapterNumber":88,"verseNumber":7,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":88,"verseNumber":1,"sectionNumber":1,"value":"Yahweh, the God of my salvation, "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":1,"sectionNumber":2,"value":"I have cried day and night before you. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":2,"sectionNumber":1,"value":"Let my prayer enter into your presence. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":2,"sectionNumber":2,"value":"Turn your ear to my cry. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":3,"sectionNumber":1,"value":"For my soul is full of troubles. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":3,"sectionNumber":2,"value":"My life draws near to Sheol. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":4,"sectionNumber":1,"value":"I am counted among those who go down into the pit. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":4,"sectionNumber":2,"value":"I am like a man who has no help, "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":5,"sectionNumber":1,"value":"set apart among the dead, "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":5,"sectionNumber":2,"value":"like the slain who lie in the grave, "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":5,"sectionNumber":3,"value":"whom you remember no more. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":5,"sectionNumber":4,"value":"They are cut off from your hand. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":6,"sectionNumber":1,"value":"You have laid me in the lowest pit, "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":6,"sectionNumber":2,"value":"in the darkest depths. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":7,"sectionNumber":1,"value":"Your wrath lies heavily on me. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":7,"sectionNumber":2,"value":"You have afflicted me with all your waves. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":8,"sectionNumber":1,"value":"You have taken my friends from me. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":8,"sectionNumber":2,"value":"You have made me an abomination to them. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":8,"sectionNumber":3,"value":"I am confined, and I canâ€™t escape. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":9,"sectionNumber":1,"value":"My eyes are dim from grief. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":9,"sectionNumber":2,"value":"I have called on you daily, Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":9,"sectionNumber":3,"value":"I have spread out my hands to you. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":10,"sectionNumber":1,"value":"Do you show wonders to the dead? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":10,"sectionNumber":2,"value":"Do the departed spirits rise up and praise you? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":11,"sectionNumber":1,"value":"Is your loving kindness declared in the grave? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":11,"sectionNumber":2,"value":"Or your faithfulness in Destruction? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":12,"sectionNumber":1,"value":"Are your wonders made known in the dark? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":12,"sectionNumber":2,"value":"Or your righteousness in the land of forgetfulness? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":13,"sectionNumber":1,"value":"But to you, Yahweh, I have cried. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":13,"sectionNumber":2,"value":"In the morning, my prayer comes before you. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":14,"sectionNumber":1,"value":"Yahweh, why do you reject my soul? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":14,"sectionNumber":2,"value":"Why do you hide your face from me? "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":15,"sectionNumber":1,"value":"I am afflicted and ready to die from my youth up. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":15,"sectionNumber":2,"value":"While I suffer your terrors, I am distracted. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":16,"sectionNumber":1,"value":"Your fierce wrath has gone over me. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":16,"sectionNumber":2,"value":"Your terrors have cut me off. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":17,"sectionNumber":1,"value":"They came around me like water all day long. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":17,"sectionNumber":2,"value":"They completely engulfed me. "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":18,"sectionNumber":1,"value":"You have put lover and friend far from me, "},{"type":"line break"},{"type":"line text","chapterNumber":88,"verseNumber":18,"sectionNumber":2,"value":"and my friends into darkness. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"A contemplation by Ethan, the Ezrahite."},{"type":"stanza start"}]