[{"type":"line text","chapterNumber":51,"verseNumber":11,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":51,"verseNumber":1,"sectionNumber":1,"value":"“Listen to me, you who follow after righteousness, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":1,"sectionNumber":2,"value":"you who seek Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":1,"sectionNumber":3,"value":"Look to the rock you were cut from, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":1,"sectionNumber":4,"value":"and to the quarry you were dug from. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":2,"sectionNumber":1,"value":"Look to Abraham your father, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":2,"sectionNumber":2,"value":"and to Sarah who bore you; "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":2,"sectionNumber":3,"value":"for when he was but one I called him, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":2,"sectionNumber":4,"value":"I blessed him, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":2,"sectionNumber":5,"value":"and made him many. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":3,"sectionNumber":1,"value":"For Yahweh has comforted Zion. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":3,"sectionNumber":2,"value":"He has comforted all her waste places, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":3,"sectionNumber":3,"value":"and has made her wilderness like Eden, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":3,"sectionNumber":4,"value":"and her desert like the garden of Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":3,"sectionNumber":5,"value":"Joy and gladness will be found in them, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":3,"sectionNumber":6,"value":"thanksgiving, and the voice of melody. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":51,"verseNumber":3,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":51,"verseNumber":4,"sectionNumber":1,"value":"“Listen to me, my people; "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":4,"sectionNumber":2,"value":"and hear me, my nation, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":4,"sectionNumber":3,"value":"for a law will go out from me, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":4,"sectionNumber":4,"value":"and I will establish my justice for a light to the peoples. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":5,"sectionNumber":1,"value":"My righteousness is near. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":5,"sectionNumber":2,"value":"My salvation has gone out, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":5,"sectionNumber":3,"value":"and my arms will judge the peoples. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":5,"sectionNumber":4,"value":"The islands will wait for me, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":5,"sectionNumber":5,"value":"and they will trust my arm. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":1,"value":"Lift up your eyes to the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":2,"value":"and look at the earth beneath; "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":3,"value":"for the heavens will vanish away like smoke, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":4,"value":"and the earth will wear out like a garment. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":5,"value":"Its inhabitants will die in the same way, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":6,"value":"but my salvation will be forever, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":7,"value":"and my righteousness will not be abolished. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":51,"verseNumber":6,"sectionNumber":8,"value":" "},{"type":"line text","chapterNumber":51,"verseNumber":7,"sectionNumber":1,"value":"“Listen to me, you who know righteousness, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":7,"sectionNumber":2,"value":"the people in whose heart is my law. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":7,"sectionNumber":3,"value":"Don’t fear the reproach of men, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":7,"sectionNumber":4,"value":"and don’t be dismayed at their insults. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":8,"sectionNumber":1,"value":"For the moth will eat them up like a garment, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":8,"sectionNumber":2,"value":"and the worm will eat them like wool; "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":8,"sectionNumber":3,"value":"but my righteousness will be forever, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":8,"sectionNumber":4,"value":"and my salvation to all generations.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":51,"verseNumber":8,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":51,"verseNumber":9,"sectionNumber":1,"value":"Awake, awake, put on strength, arm of Yahweh! "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":9,"sectionNumber":2,"value":"Awake, as in the days of old, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":9,"sectionNumber":3,"value":"the generations of ancient times. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":9,"sectionNumber":4,"value":"Isn’t it you who cut Rahab in pieces, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":9,"sectionNumber":5,"value":"who pierced the monster? "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":10,"sectionNumber":1,"value":"Isn’t it you who dried up the sea, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":10,"sectionNumber":2,"value":"the waters of the great deep; "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":10,"sectionNumber":3,"value":"who made the depths of the sea a way for the redeemed to pass over? "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":11,"sectionNumber":1,"value":"Those ransomed by Yahweh will return, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":11,"sectionNumber":2,"value":"and come with singing to Zion. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":11,"sectionNumber":3,"value":"Everlasting joy shall be on their heads. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":11,"sectionNumber":4,"value":"They will obtain gladness and joy. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":11,"sectionNumber":5,"value":"Sorrow and sighing shall flee away. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":51,"verseNumber":11,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":51,"verseNumber":12,"sectionNumber":1,"value":"“I, even I, am he who comforts you. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":12,"sectionNumber":2,"value":"Who are you, that you are afraid of man who shall die, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":12,"sectionNumber":3,"value":"and of the son of man who will be made as grass? "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":13,"sectionNumber":1,"value":"Have you forgotten Yahweh your Maker, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":13,"sectionNumber":2,"value":"who stretched out the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":13,"sectionNumber":3,"value":"and laid the foundations of the earth? "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":13,"sectionNumber":4,"value":"Do you live in fear continually all day because of the fury of the oppressor, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":13,"sectionNumber":5,"value":"when he prepares to destroy? "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":13,"sectionNumber":6,"value":"Where is the fury of the oppressor? "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":14,"sectionNumber":1,"value":"The captive exile will speedily be freed. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":14,"sectionNumber":2,"value":"He will not die and go down into the pit. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":14,"sectionNumber":3,"value":"His bread won’t fail. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":15,"sectionNumber":1,"value":"For I am Yahweh your God, who stirs up the sea "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":15,"sectionNumber":2,"value":"so that its waves roar. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":15,"sectionNumber":3,"value":"Yahweh of Armies is his name. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":16,"sectionNumber":1,"value":"I have put my words in your mouth "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":16,"sectionNumber":2,"value":"and have covered you in the shadow of my hand, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":16,"sectionNumber":3,"value":"that I may plant the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":16,"sectionNumber":4,"value":"and lay the foundations of the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":16,"sectionNumber":5,"value":"and tell Zion, ‘You are my people.’ ” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":51,"verseNumber":16,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":51,"verseNumber":17,"sectionNumber":1,"value":"Awake, awake! "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":17,"sectionNumber":2,"value":"Stand up, Jerusalem, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":17,"sectionNumber":3,"value":"you who have drunk from Yahweh’s hand the cup of his wrath. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":17,"sectionNumber":4,"value":"You have drunken the bowl of the cup of staggering, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":17,"sectionNumber":5,"value":"and drained it. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":18,"sectionNumber":1,"value":"There is no one to guide her among all the sons to whom she has given birth; "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":18,"sectionNumber":2,"value":"and there is no one who takes her by the hand among all the sons who she has brought up. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":19,"sectionNumber":1,"value":"These two things have happened to you— "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":19,"sectionNumber":2,"value":"who will grieve with you?— "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":19,"sectionNumber":3,"value":"desolation and destruction, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":19,"sectionNumber":4,"value":"and famine and the sword. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":19,"sectionNumber":5,"value":"How can I comfort you? "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":20,"sectionNumber":1,"value":"Your sons have fainted. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":20,"sectionNumber":2,"value":"They lie at the head of all the streets, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":20,"sectionNumber":3,"value":"like an antelope in a net. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":20,"sectionNumber":4,"value":"They are full of Yahweh’s wrath, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":20,"sectionNumber":5,"value":"the rebuke of your God. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":51,"verseNumber":20,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":51,"verseNumber":21,"sectionNumber":1,"value":"Therefore now hear this, you afflicted, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":21,"sectionNumber":2,"value":"and drunken, but not with wine: "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":22,"sectionNumber":1,"value":"Your Lord Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":22,"sectionNumber":2,"value":"your God who pleads the cause of his people, says, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":22,"sectionNumber":3,"value":"“Behold, I have taken out of your hand the cup of staggering, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":22,"sectionNumber":4,"value":"even the bowl of the cup of my wrath. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":22,"sectionNumber":5,"value":"You will not drink it any more. "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":23,"sectionNumber":1,"value":"I will put it into the hand of those who afflict you, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":23,"sectionNumber":2,"value":"who have said to your soul, ‘Bow down, that we may walk over you;’ "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":23,"sectionNumber":3,"value":"and you have laid your back as the ground, "},{"type":"line break"},{"type":"line text","chapterNumber":51,"verseNumber":23,"sectionNumber":4,"value":"like a street to those who walk over.” "},{"type":"line break"}]