[{"type":"paragraph text","chapterNumber":22,"verseNumber":1,"sectionNumber":1,"value":"Then Eliphaz the Temanite answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":22,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":22,"verseNumber":2,"sectionNumber":1,"value":"“Can a man be profitable to God? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":2,"sectionNumber":2,"value":"Surely he who is wise is profitable to himself. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":3,"sectionNumber":1,"value":"Is it any pleasure to the Almighty that you are righteous? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":3,"sectionNumber":2,"value":"Or does it benefit him that you make your ways perfect? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":4,"sectionNumber":1,"value":"Is it for your piety that he reproves you, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":4,"sectionNumber":2,"value":"that he enters with you into judgment? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":5,"sectionNumber":1,"value":"Isn’t your wickedness great? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":5,"sectionNumber":2,"value":"Neither is there any end to your iniquities. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":6,"sectionNumber":1,"value":"For you have taken pledges from your brother for nothing, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":6,"sectionNumber":2,"value":"and stripped the naked of their clothing. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":7,"sectionNumber":1,"value":"You haven’t given water to the weary to drink, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":7,"sectionNumber":2,"value":"and you have withheld bread from the hungry. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":8,"sectionNumber":1,"value":"But as for the mighty man, he had the earth. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":8,"sectionNumber":2,"value":"The honorable man, he lived in it. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":9,"sectionNumber":1,"value":"You have sent widows away empty, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":9,"sectionNumber":2,"value":"and the arms of the fatherless have been broken. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":10,"sectionNumber":1,"value":"Therefore snares are around you. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":10,"sectionNumber":2,"value":"Sudden fear troubles you, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":11,"sectionNumber":1,"value":"or darkness, so that you can not see, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":11,"sectionNumber":2,"value":"and floods of waters cover you. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":22,"verseNumber":11,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":22,"verseNumber":12,"sectionNumber":1,"value":"“Isn’t God in the heights of heaven? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":12,"sectionNumber":2,"value":"See the height of the stars, how high they are! "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":13,"sectionNumber":1,"value":"You say, ‘What does God know? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":13,"sectionNumber":2,"value":"Can he judge through the thick darkness? "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":14,"sectionNumber":1,"value":"Thick clouds are a covering to him, so that he doesn’t see. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":14,"sectionNumber":2,"value":"He walks on the vault of the sky.’ "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":15,"sectionNumber":1,"value":"Will you keep the old way, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":15,"sectionNumber":2,"value":"which wicked men have trodden, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":16,"sectionNumber":1,"value":"who were snatched away before their time, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":16,"sectionNumber":2,"value":"whose foundation was poured out as a stream, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":17,"sectionNumber":1,"value":"who said to God, ‘Depart from us;’ "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":17,"sectionNumber":2,"value":"and, ‘What can the Almighty do for us?’ "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":18,"sectionNumber":1,"value":"Yet he filled their houses with good things, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":18,"sectionNumber":2,"value":"but the counsel of the wicked is far from me. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":19,"sectionNumber":1,"value":"The righteous see it, and are glad. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":19,"sectionNumber":2,"value":"The innocent ridicule them, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":20,"sectionNumber":1,"value":"saying, ‘Surely those who rose up against us are cut off. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":20,"sectionNumber":2,"value":"The fire has consumed their remnant.’ "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":22,"verseNumber":20,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":22,"verseNumber":21,"sectionNumber":1,"value":"“Acquaint yourself with him, now, and be at peace. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":21,"sectionNumber":2,"value":"By it, good will come to you. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":22,"sectionNumber":1,"value":"Please receive instruction from his mouth, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":22,"sectionNumber":2,"value":"and lay up his words in your heart. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":23,"sectionNumber":1,"value":"If you return to the Almighty, you will be built up, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":23,"sectionNumber":2,"value":"if you put away unrighteousness far from your tents. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":24,"sectionNumber":1,"value":"Lay your treasure in the dust, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":24,"sectionNumber":2,"value":"the gold of Ophir among the stones of the brooks. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":25,"sectionNumber":1,"value":"The Almighty will be your treasure, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":25,"sectionNumber":2,"value":"and precious silver to you. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":26,"sectionNumber":1,"value":"For then you will delight yourself in the Almighty, "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":26,"sectionNumber":2,"value":"and will lift up your face to God. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":27,"sectionNumber":1,"value":"You will make your prayer to him, and he will hear you. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":27,"sectionNumber":2,"value":"You will pay your vows. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":28,"sectionNumber":1,"value":"You will also decree a thing, and it will be established to you. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":28,"sectionNumber":2,"value":"Light will shine on your ways. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":29,"sectionNumber":1,"value":"When they cast down, you will say, ‘be lifted up.’ "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":29,"sectionNumber":2,"value":"He will save the humble person. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":30,"sectionNumber":1,"value":"He will even deliver him who is not innocent. "},{"type":"line break"},{"type":"line text","chapterNumber":22,"verseNumber":30,"sectionNumber":2,"value":"Yes, he will be delivered through the cleanness of your hands.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]