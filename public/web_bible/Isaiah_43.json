[{"type":"line text","chapterNumber":43,"verseNumber":25,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":43,"verseNumber":1,"sectionNumber":1,"value":"But now Yahweh who created you, Jacob, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":1,"sectionNumber":2,"value":"and he who formed you, Israel, says: "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":1,"sectionNumber":3,"value":"“Don’t be afraid, for I have redeemed you. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":1,"sectionNumber":4,"value":"I have called you by your name. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":1,"sectionNumber":5,"value":"You are mine. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":2,"sectionNumber":1,"value":"When you pass through the waters, I will be with you, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":2,"sectionNumber":2,"value":"and through the rivers, they will not overflow you. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":2,"sectionNumber":3,"value":"When you walk through the fire, you will not be burned, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":2,"sectionNumber":4,"value":"and flame will not scorch you. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":3,"sectionNumber":1,"value":"For I am Yahweh your God, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":3,"sectionNumber":2,"value":"the Holy One of Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":3,"sectionNumber":3,"value":"your Savior. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":3,"sectionNumber":4,"value":"I have given Egypt as your ransom, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":3,"sectionNumber":5,"value":"Ethiopia and Seba in your place. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":4,"sectionNumber":1,"value":"Since you have been precious and honored in my sight, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":4,"sectionNumber":2,"value":"and I have loved you, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":4,"sectionNumber":3,"value":"therefore I will give people in your place, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":4,"sectionNumber":4,"value":"and nations instead of your life. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":5,"sectionNumber":1,"value":"Don’t be afraid, for I am with you. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":5,"sectionNumber":2,"value":"I will bring your offspring from the east, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":5,"sectionNumber":3,"value":"and gather you from the west. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":6,"sectionNumber":1,"value":"I will tell the north, ‘Give them up!’ "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":6,"sectionNumber":2,"value":"and tell the south, ‘Don’t hold them back! "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":6,"sectionNumber":3,"value":"Bring my sons from far away, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":6,"sectionNumber":4,"value":"and my daughters from the ends of the earth— "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":7,"sectionNumber":1,"value":"everyone who is called by my name, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":7,"sectionNumber":2,"value":"and whom I have created for my glory, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":7,"sectionNumber":3,"value":"whom I have formed, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":7,"sectionNumber":4,"value":"yes, whom I have made.’ ” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":43,"verseNumber":7,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":43,"verseNumber":8,"sectionNumber":1,"value":"Bring out the blind people who have eyes, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":8,"sectionNumber":2,"value":"and the deaf who have ears. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":9,"sectionNumber":1,"value":"Let all the nations be gathered together, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":9,"sectionNumber":2,"value":"and let the peoples be assembled. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":9,"sectionNumber":3,"value":"Who among them can declare this, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":9,"sectionNumber":4,"value":"and show us former things? "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":9,"sectionNumber":5,"value":"Let them bring their witnesses, that they may be justified, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":9,"sectionNumber":6,"value":"or let them hear, and say, “That is true.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":43,"verseNumber":9,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":43,"verseNumber":10,"sectionNumber":1,"value":"“You are my witnesses,” says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":10,"sectionNumber":2,"value":"“With my servant whom I have chosen; "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":10,"sectionNumber":3,"value":"that you may know and believe me, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":10,"sectionNumber":4,"value":"and understand that I am he. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":10,"sectionNumber":5,"value":"Before me there was no God formed, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":10,"sectionNumber":6,"value":"neither will there be after me. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":11,"sectionNumber":1,"value":"I myself am Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":11,"sectionNumber":2,"value":"Besides me, there is no savior. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":12,"sectionNumber":1,"value":"I have declared, I have saved, and I have shown, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":12,"sectionNumber":2,"value":"and there was no strange god among you. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":12,"sectionNumber":3,"value":"Therefore you are my witnesses”, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":12,"sectionNumber":4,"value":"says Yahweh, “and I am God. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":13,"sectionNumber":1,"value":"Yes, since the day was, I am he. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":13,"sectionNumber":2,"value":"There is no one who can deliver out of my hand. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":13,"sectionNumber":3,"value":"I will work, and who can hinder it?” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":43,"verseNumber":14,"sectionNumber":1,"value":"Yahweh, your Redeemer, the Holy One of Israel says: “For your sake, I have sent to Babylon, and I will bring all of them down as fugitives, even the Chaldeans, in the ships of their rejoicing.  "},{"type":"paragraph text","chapterNumber":43,"verseNumber":15,"sectionNumber":1,"value":"I am Yahweh, your Holy One, the Creator of Israel, your King.” "},{"type":"paragraph end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":43,"verseNumber":16,"sectionNumber":1,"value":"Yahweh, who makes a way in the sea, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":43,"verseNumber":16,"sectionNumber":2,"value":"and a path in the mighty waters, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":17,"sectionNumber":1,"value":"who brings out the chariot and horse, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":17,"sectionNumber":2,"value":"the army and the mighty man "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":17,"sectionNumber":3,"value":"(they lie down together, they shall not rise; "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":17,"sectionNumber":4,"value":"they are extinct, they are quenched like a wick) says: "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":18,"sectionNumber":1,"value":"“Don’t remember the former things, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":18,"sectionNumber":2,"value":"and don’t consider the things of old. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":19,"sectionNumber":1,"value":"Behold, I will do a new thing. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":19,"sectionNumber":2,"value":"It springs out now. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":19,"sectionNumber":3,"value":"Don’t you know it? "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":19,"sectionNumber":4,"value":"I will even make a way in the wilderness, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":19,"sectionNumber":5,"value":"and rivers in the desert. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":20,"sectionNumber":1,"value":"The animals of the field, the jackals and the ostriches, shall honor me, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":20,"sectionNumber":2,"value":"because I give water in the wilderness and rivers in the desert, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":20,"sectionNumber":3,"value":"to give drink to my people, my chosen, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":21,"sectionNumber":1,"value":"the people which I formed for myself, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":21,"sectionNumber":2,"value":"that they might declare my praise. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":43,"verseNumber":21,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":43,"verseNumber":22,"sectionNumber":1,"value":"Yet you have not called on me, Jacob; "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":22,"sectionNumber":2,"value":"but you have been weary of me, Israel. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":23,"sectionNumber":1,"value":"You have not brought me any of your sheep for burnt offerings, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":23,"sectionNumber":2,"value":"neither have you honored me with your sacrifices. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":23,"sectionNumber":3,"value":"I have not burdened you with offerings, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":23,"sectionNumber":4,"value":"nor wearied you with frankincense. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":24,"sectionNumber":1,"value":"You have bought me no sweet cane with money, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":24,"sectionNumber":2,"value":"nor have you filled me with the fat of your sacrifices, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":24,"sectionNumber":3,"value":"but you have burdened me with your sins. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":24,"sectionNumber":4,"value":"You have wearied me with your iniquities. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":43,"verseNumber":24,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":43,"verseNumber":25,"sectionNumber":1,"value":"I, even I, am he who blots out your transgressions for my own sake; "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":25,"sectionNumber":2,"value":"and I will not remember your sins. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":26,"sectionNumber":1,"value":"Put me in remembrance. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":26,"sectionNumber":2,"value":"Let us plead together. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":26,"sectionNumber":3,"value":"Declare your case, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":26,"sectionNumber":4,"value":"that you may be justified. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":27,"sectionNumber":1,"value":"Your first father sinned, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":27,"sectionNumber":2,"value":"and your teachers have transgressed against me. "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":28,"sectionNumber":1,"value":"Therefore I will profane the princes of the sanctuary; "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":28,"sectionNumber":2,"value":"and I will make Jacob a curse, "},{"type":"line break"},{"type":"line text","chapterNumber":43,"verseNumber":28,"sectionNumber":3,"value":"and Israel an insult.” "},{"type":"line break"}]