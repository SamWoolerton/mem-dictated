[{"type":"line text","chapterNumber":3,"verseNumber":22,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":1,"value":"I am the man who has seen affliction "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":2,"value":"by the rod of his wrath. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":1,"value":"He has led me and caused me to walk in darkness, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":2,"value":"and not in light. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":1,"value":"Surely he turns his hand against me "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":2,"value":"again and again all day long. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":1,"value":"He has made my flesh and my skin old. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":2,"value":"He has broken my bones. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":1,"value":"He has built against me, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":2,"value":"and surrounded me with bitterness and hardship. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":1,"value":"He has made me dwell in dark places, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":2,"value":"as those who have been long dead. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":1,"value":"He has walled me about, so that I can’t go out. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":2,"value":"He has made my chain heavy. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":1,"value":"Yes, when I cry, and call for help, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":2,"value":"he shuts out my prayer. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":1,"value":"He has walled up my ways with cut stone. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":2,"value":"He has made my paths crooked. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":1,"value":"He is to me as a bear lying in wait, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":2,"value":"as a lion in secret places. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":1,"value":"He has turned away my ways, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":2,"value":"and pulled me in pieces. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":3,"value":"He has made me desolate. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":1,"value":"He has bent his bow, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":2,"value":"and set me as a mark for the arrow. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":13,"sectionNumber":1,"value":"He has caused the shafts of his quiver to enter into my kidneys. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":14,"sectionNumber":1,"value":"I have become a derision to all my people, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":14,"sectionNumber":2,"value":"and their song all day long. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":15,"sectionNumber":1,"value":"He has filled me with bitterness. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":15,"sectionNumber":2,"value":"He has stuffed me with wormwood. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":15,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":16,"sectionNumber":1,"value":"He has also broken my teeth with gravel. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":16,"sectionNumber":2,"value":"He has covered me with ashes. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":17,"sectionNumber":1,"value":"You have removed my soul far away from peace. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":17,"sectionNumber":2,"value":"I forgot prosperity. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":18,"sectionNumber":1,"value":"I said, “My strength has perished, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":18,"sectionNumber":2,"value":"along with my expectation from Yahweh.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":18,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":19,"sectionNumber":1,"value":"Remember my affliction and my misery, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":19,"sectionNumber":2,"value":"the wormwood and the bitterness. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":20,"sectionNumber":1,"value":"My soul still remembers them, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":20,"sectionNumber":2,"value":"and is bowed down within me. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":21,"sectionNumber":1,"value":"This I recall to my mind; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":21,"sectionNumber":2,"value":"therefore I have hope. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":21,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":22,"sectionNumber":1,"value":"It is because of Yahweh’s loving kindnesses that we are not consumed, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":22,"sectionNumber":2,"value":"because his compassion doesn’t fail. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":23,"sectionNumber":1,"value":"They are new every morning. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":23,"sectionNumber":2,"value":"Great is your faithfulness. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":24,"sectionNumber":1,"value":"“Yahweh is my portion,” says my soul. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":24,"sectionNumber":2,"value":"“Therefore I will hope in him.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":24,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":25,"sectionNumber":1,"value":"Yahweh is good to those who wait for him, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":25,"sectionNumber":2,"value":"to the soul who seeks him. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":26,"sectionNumber":1,"value":"It is good that a man should hope "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":26,"sectionNumber":2,"value":"and quietly wait for the salvation of Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":27,"sectionNumber":1,"value":"It is good for a man that he bear the yoke in his youth. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":27,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":28,"sectionNumber":1,"value":"Let him sit alone and keep silence, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":28,"sectionNumber":2,"value":"because he has laid it on him. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":29,"sectionNumber":1,"value":"Let him put his mouth in the dust, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":29,"sectionNumber":2,"value":"if it is so that there may be hope. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":30,"sectionNumber":1,"value":"Let him give his cheek to him who strikes him. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":30,"sectionNumber":2,"value":"Let him be filled full of reproach. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":30,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":31,"sectionNumber":1,"value":"For the Lord will not cast off forever. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":32,"sectionNumber":1,"value":"For though he causes grief, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":32,"sectionNumber":2,"value":"yet he will have compassion according to the multitude of his loving kindnesses. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":33,"sectionNumber":1,"value":"For he does not afflict willingly, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":33,"sectionNumber":2,"value":"nor grieve the children of men. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":33,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":34,"sectionNumber":1,"value":"To crush under foot all the prisoners of the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":35,"sectionNumber":1,"value":"to turn away the right of a man before the face of the Most High, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":36,"sectionNumber":1,"value":"to subvert a man in his cause, the Lord doesn’t approve. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":36,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":37,"sectionNumber":1,"value":"Who is he who says, and it comes to pass, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":37,"sectionNumber":2,"value":"when the Lord doesn’t command it? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":38,"sectionNumber":1,"value":"Doesn’t evil and good come out of the mouth of the Most High? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":39,"sectionNumber":1,"value":"Why does a living man complain, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":39,"sectionNumber":2,"value":"a man for the punishment of his sins? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":39,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":40,"sectionNumber":1,"value":"Let us search and try our ways, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":40,"sectionNumber":2,"value":"and turn again to Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":41,"sectionNumber":1,"value":"Let’s lift up our heart with our hands to God in the heavens. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":42,"sectionNumber":1,"value":"“We have transgressed and have rebelled. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":42,"sectionNumber":2,"value":"You have not pardoned. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":42,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":43,"sectionNumber":1,"value":"“You have covered us with anger and pursued us. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":43,"sectionNumber":2,"value":"You have killed. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":43,"sectionNumber":3,"value":"You have not pitied. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":44,"sectionNumber":1,"value":"You have covered yourself with a cloud, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":44,"sectionNumber":2,"value":"so that no prayer can pass through. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":45,"sectionNumber":1,"value":"You have made us an off-scouring and refuse "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":45,"sectionNumber":2,"value":"in the middle of the peoples. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":45,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":46,"sectionNumber":1,"value":"“All our enemies have opened their mouth wide against us. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":47,"sectionNumber":1,"value":"Terror and the pit have come on us, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":47,"sectionNumber":2,"value":"devastation and destruction.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":47,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":48,"sectionNumber":1,"value":"My eye runs down with streams of water, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":48,"sectionNumber":2,"value":"for the destruction of the daughter of my people. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":49,"sectionNumber":1,"value":"My eye pours down "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":49,"sectionNumber":2,"value":"and doesn’t cease, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":49,"sectionNumber":3,"value":"without any intermission, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":50,"sectionNumber":1,"value":"until Yahweh looks down, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":50,"sectionNumber":2,"value":"and sees from heaven. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":51,"sectionNumber":1,"value":"My eye affects my soul, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":51,"sectionNumber":2,"value":"because of all the daughters of my city. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":51,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":52,"sectionNumber":1,"value":"They have chased me relentlessly like a bird, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":52,"sectionNumber":2,"value":"those who are my enemies without cause. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":53,"sectionNumber":1,"value":"They have cut off my life in the dungeon, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":53,"sectionNumber":2,"value":"and have cast a stone on me. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":54,"sectionNumber":1,"value":"Waters flowed over my head. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":54,"sectionNumber":2,"value":"I said, “I am cut off.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":54,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":55,"sectionNumber":1,"value":"I called on your name, Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":55,"sectionNumber":2,"value":"out of the lowest dungeon. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":56,"sectionNumber":1,"value":"You heard my voice: "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":56,"sectionNumber":2,"value":"“Don’t hide your ear from my sighing, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":56,"sectionNumber":3,"value":"and my cry.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":56,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":57,"sectionNumber":1,"value":"You came near in the day that I called on you. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":57,"sectionNumber":2,"value":"You said, “Don’t be afraid.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":57,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":58,"sectionNumber":1,"value":"Lord, you have pleaded the causes of my soul. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":58,"sectionNumber":2,"value":"You have redeemed my life. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":59,"sectionNumber":1,"value":"Yahweh, you have seen my wrong. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":59,"sectionNumber":2,"value":"Judge my cause. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":60,"sectionNumber":1,"value":"You have seen all their vengeance "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":60,"sectionNumber":2,"value":"and all their plans against me. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":60,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":61,"sectionNumber":1,"value":"You have heard their reproach, Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":61,"sectionNumber":2,"value":"and all their plans against me, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":62,"sectionNumber":1,"value":"the lips of those that rose up against me, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":62,"sectionNumber":2,"value":"and their plots against me all day long. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":63,"sectionNumber":1,"value":"You see their sitting down and their rising up. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":63,"sectionNumber":2,"value":"I am their song. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":63,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":64,"sectionNumber":1,"value":"You will pay them back, Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":64,"sectionNumber":2,"value":"according to the work of their hands. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":65,"sectionNumber":1,"value":"You will give them hardness of heart, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":65,"sectionNumber":2,"value":"your curse to them. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":66,"sectionNumber":1,"value":"You will pursue them in anger, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":66,"sectionNumber":2,"value":"and destroy them from under the heavens of Yahweh. "},{"type":"line break"}]