[{"type":"paragraph text","chapterNumber":16,"verseNumber":1,"sectionNumber":1,"value":"Then Job answered, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":16,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":16,"verseNumber":2,"sectionNumber":1,"value":"“I have heard many such things. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":2,"sectionNumber":2,"value":"You are all miserable comforters! "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":3,"sectionNumber":1,"value":"Shall vain words have an end? "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":3,"sectionNumber":2,"value":"Or what provokes you that you answer? "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":4,"sectionNumber":1,"value":"I also could speak as you do. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":4,"sectionNumber":2,"value":"If your soul were in my soul’s place, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":4,"sectionNumber":3,"value":"I could join words together against you, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":4,"sectionNumber":4,"value":"and shake my head at you, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":5,"sectionNumber":1,"value":"but I would strengthen you with my mouth. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":5,"sectionNumber":2,"value":"The solace of my lips would relieve you. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":16,"verseNumber":5,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":16,"verseNumber":6,"sectionNumber":1,"value":"“Though I speak, my grief is not subsided. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":6,"sectionNumber":2,"value":"Though I forbear, what am I eased? "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":7,"sectionNumber":1,"value":"But now, God, you have surely worn me out. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":7,"sectionNumber":2,"value":"You have made all my company desolate. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":8,"sectionNumber":1,"value":"You have shriveled me up. This is a witness against me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":8,"sectionNumber":2,"value":"My leanness rises up against me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":8,"sectionNumber":3,"value":"It testifies to my face. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":9,"sectionNumber":1,"value":"He has torn me in his wrath and persecuted me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":9,"sectionNumber":2,"value":"He has gnashed on me with his teeth. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":9,"sectionNumber":3,"value":"My adversary sharpens his eyes on me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":10,"sectionNumber":1,"value":"They have gaped on me with their mouth. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":10,"sectionNumber":2,"value":"They have struck me on the cheek reproachfully. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":10,"sectionNumber":3,"value":"They gather themselves together against me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":11,"sectionNumber":1,"value":"God delivers me to the ungodly, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":11,"sectionNumber":2,"value":"and casts me into the hands of the wicked. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":12,"sectionNumber":1,"value":"I was at ease, and he broke me apart. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":12,"sectionNumber":2,"value":"Yes, he has taken me by the neck, and dashed me to pieces. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":12,"sectionNumber":3,"value":"He has also set me up for his target. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":13,"sectionNumber":1,"value":"His archers surround me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":13,"sectionNumber":2,"value":"He splits my kidneys apart, and does not spare. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":13,"sectionNumber":3,"value":"He pours out my bile on the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":14,"sectionNumber":1,"value":"He breaks me with breach on breach. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":14,"sectionNumber":2,"value":"He runs at me like a giant. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":15,"sectionNumber":1,"value":"I have sewed sackcloth on my skin, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":15,"sectionNumber":2,"value":"and have thrust my horn in the dust. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":16,"sectionNumber":1,"value":"My face is red with weeping. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":16,"sectionNumber":2,"value":"Deep darkness is on my eyelids. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":17,"sectionNumber":1,"value":"Although there is no violence in my hands, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":17,"sectionNumber":2,"value":"and my prayer is pure. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":16,"verseNumber":17,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":16,"verseNumber":18,"sectionNumber":1,"value":"“Earth, don’t cover my blood. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":18,"sectionNumber":2,"value":"Let my cry have no place to rest. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":19,"sectionNumber":1,"value":"Even now, behold, my witness is in heaven. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":19,"sectionNumber":2,"value":"He who vouches for me is on high. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":20,"sectionNumber":1,"value":"My friends scoff at me. "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":20,"sectionNumber":2,"value":"My eyes pour out tears to God, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":21,"sectionNumber":1,"value":"that he would maintain the right of a man with God, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":21,"sectionNumber":2,"value":"of a son of man with his neighbor! "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":22,"sectionNumber":1,"value":"For when a few years have come, "},{"type":"line break"},{"type":"line text","chapterNumber":16,"verseNumber":22,"sectionNumber":2,"value":"I will go the way of no return. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"}]