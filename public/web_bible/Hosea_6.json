[{"type":"paragraph text","chapterNumber":6,"verseNumber":1,"sectionNumber":1,"value":"“Come! Let’s return to Yahweh; "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":6,"verseNumber":1,"sectionNumber":2,"value":"for he has torn us to pieces, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":1,"sectionNumber":3,"value":"and he will heal us; "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":1,"sectionNumber":4,"value":"he has injured us, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":1,"sectionNumber":5,"value":"and he will bind up our wounds. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":2,"sectionNumber":1,"value":"After two days he will revive us. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":2,"sectionNumber":2,"value":"On the third day he will raise us up, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":2,"sectionNumber":3,"value":"and we will live before him. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":3,"sectionNumber":1,"value":"Let’s acknowledge Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":3,"sectionNumber":2,"value":"Let’s press on to know Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":3,"sectionNumber":3,"value":"As surely as the sun rises, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":3,"sectionNumber":4,"value":"Yahweh will appear. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":3,"sectionNumber":5,"value":"He will come to us like the rain, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":3,"sectionNumber":6,"value":"like the spring rain that waters the earth.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":6,"verseNumber":3,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":6,"verseNumber":4,"sectionNumber":1,"value":"“Ephraim, what shall I do to you? "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":4,"sectionNumber":2,"value":"Judah, what shall I do to you? "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":4,"sectionNumber":3,"value":"For your love is like a morning cloud, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":4,"sectionNumber":4,"value":"and like the dew that disappears early. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":5,"sectionNumber":1,"value":"Therefore I have cut them to pieces with the prophets; "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":5,"sectionNumber":2,"value":"I killed them with the words of my mouth. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":5,"sectionNumber":3,"value":"Your judgments are like a flash of lightning. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":6,"sectionNumber":1,"value":"For I desire mercy, and not sacrifice; "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":6,"sectionNumber":2,"value":"and the knowledge of God more than burnt offerings. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":7,"sectionNumber":1,"value":"But they, like Adam, have broken the covenant. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":7,"sectionNumber":2,"value":"They were unfaithful to me, there. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":8,"sectionNumber":1,"value":"Gilead is a city of those who work iniquity; "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":8,"sectionNumber":2,"value":"it is stained with blood. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":9,"sectionNumber":1,"value":"As gangs of robbers wait to ambush a man, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":9,"sectionNumber":2,"value":"so the company of priests murder on the path toward Shechem, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":9,"sectionNumber":3,"value":"committing shameful crimes. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":10,"sectionNumber":1,"value":"In the house of Israel I have seen a horrible thing. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":10,"sectionNumber":2,"value":"There is prostitution in Ephraim. "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":10,"sectionNumber":3,"value":"Israel is defiled. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":6,"verseNumber":10,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":6,"verseNumber":11,"sectionNumber":1,"value":"“Also, Judah, there is a harvest appointed for you, "},{"type":"line break"},{"type":"line text","chapterNumber":6,"verseNumber":11,"sectionNumber":2,"value":"when I restore the fortunes of my people. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]