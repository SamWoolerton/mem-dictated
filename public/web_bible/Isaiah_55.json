[{"type":"line text","chapterNumber":55,"verseNumber":17,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":55,"verseNumber":1,"sectionNumber":1,"value":"“Hey! Come, everyone who thirsts, to the waters! "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":1,"sectionNumber":2,"value":"Come, he who has no money, buy, and eat! "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":1,"sectionNumber":3,"value":"Yes, come, buy wine and milk without money and without price. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":2,"sectionNumber":1,"value":"Why do you spend money for that which is not bread, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":2,"sectionNumber":2,"value":"and your labor for that which doesn’t satisfy? "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":2,"sectionNumber":3,"value":"Listen diligently to me, and eat that which is good, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":2,"sectionNumber":4,"value":"and let your soul delight itself in richness. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":3,"sectionNumber":1,"value":"Turn your ear, and come to me. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":3,"sectionNumber":2,"value":"Hear, and your soul will live. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":3,"sectionNumber":3,"value":"I will make an everlasting covenant with you, even the sure mercies of David. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":4,"sectionNumber":1,"value":"Behold, I have given him for a witness to the peoples, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":4,"sectionNumber":2,"value":"a leader and commander to the peoples. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":5,"sectionNumber":1,"value":"Behold, you shall call a nation that you don’t know; "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":5,"sectionNumber":2,"value":"and a nation that didn’t know you shall run to you, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":5,"sectionNumber":3,"value":"because of Yahweh your God, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":5,"sectionNumber":4,"value":"and for the Holy One of Israel; "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":5,"sectionNumber":5,"value":"for he has glorified you.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":55,"verseNumber":5,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":55,"verseNumber":6,"sectionNumber":1,"value":"Seek Yahweh while he may be found. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":6,"sectionNumber":2,"value":"Call on him while he is near. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":7,"sectionNumber":1,"value":"Let the wicked forsake his way, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":7,"sectionNumber":2,"value":"and the unrighteous man his thoughts. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":7,"sectionNumber":3,"value":"Let him return to Yahweh, and he will have mercy on him, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":7,"sectionNumber":4,"value":"to our God, for he will freely pardon. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":55,"verseNumber":7,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":55,"verseNumber":8,"sectionNumber":1,"value":"“For my thoughts are not your thoughts, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":8,"sectionNumber":2,"value":"and your ways are not my ways,” says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":9,"sectionNumber":1,"value":"“For as the heavens are higher than the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":9,"sectionNumber":2,"value":"so are my ways higher than your ways, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":9,"sectionNumber":3,"value":"and my thoughts than your thoughts. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":10,"sectionNumber":1,"value":"For as the rain comes down and the snow from the sky, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":10,"sectionNumber":2,"value":"and doesn’t return there, but waters the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":10,"sectionNumber":3,"value":"and makes it grow and bud, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":10,"sectionNumber":4,"value":"and gives seed to the sower and bread to the eater; "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":11,"sectionNumber":1,"value":"so is my word that goes out of my mouth: "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":11,"sectionNumber":2,"value":"it will not return to me void, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":11,"sectionNumber":3,"value":"but it will accomplish that which I please, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":11,"sectionNumber":4,"value":"and it will prosper in the thing I sent it to do. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":12,"sectionNumber":1,"value":"For you shall go out with joy, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":12,"sectionNumber":2,"value":"and be led out with peace. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":12,"sectionNumber":3,"value":"The mountains and the hills will break out before you into singing; "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":12,"sectionNumber":4,"value":"and all the trees of the fields will clap their hands. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":13,"sectionNumber":1,"value":"Instead of the thorn the cypress tree will come up; "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":13,"sectionNumber":2,"value":"and instead of the brier the myrtle tree will come up. "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":13,"sectionNumber":3,"value":"It will make a name for Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":55,"verseNumber":13,"sectionNumber":4,"value":"for an everlasting sign that will not be cut off.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]