[{"type":"line text","chapterNumber":41,"verseNumber":17,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":41,"verseNumber":1,"sectionNumber":1,"value":"Blessed is he who considers the poor. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":1,"sectionNumber":2,"value":"Yahweh will deliver him in the day of evil. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":2,"sectionNumber":1,"value":"Yahweh will preserve him, and keep him alive. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":2,"sectionNumber":2,"value":"He shall be blessed on the earth, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":2,"sectionNumber":3,"value":"and he will not surrender him to the will of his enemies. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":3,"sectionNumber":1,"value":"Yahweh will sustain him on his sickbed, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":3,"sectionNumber":2,"value":"and restore him from his bed of illness. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":4,"sectionNumber":1,"value":"I said, “Yahweh, have mercy on me! "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":4,"sectionNumber":2,"value":"Heal me, for I have sinned against you.” "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":5,"sectionNumber":1,"value":"My enemies speak evil against me: "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":5,"sectionNumber":2,"value":"“When will he die, and his name perish?” "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":6,"sectionNumber":1,"value":"If he comes to see me, he speaks falsehood. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":6,"sectionNumber":2,"value":"His heart gathers iniquity to itself. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":6,"sectionNumber":3,"value":"When he goes abroad, he tells it. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":7,"sectionNumber":1,"value":"All who hate me whisper together against me. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":7,"sectionNumber":2,"value":"They imagine the worst for me. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":8,"sectionNumber":1,"value":"“An evil disease”, they say, “has afflicted him. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":8,"sectionNumber":2,"value":"Now that he lies he shall rise up no more.” "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":9,"sectionNumber":1,"value":"Yes, my own familiar friend, in whom I trusted, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":9,"sectionNumber":2,"value":"who ate bread with me, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":9,"sectionNumber":3,"value":"has lifted up his heel against me. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":41,"verseNumber":9,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":41,"verseNumber":10,"sectionNumber":1,"value":"But you, Yahweh, have mercy on me, and raise me up, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":10,"sectionNumber":2,"value":"that I may repay them. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":11,"sectionNumber":1,"value":"By this I know that you delight in me, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":11,"sectionNumber":2,"value":"because my enemy doesn’t triumph over me. "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":12,"sectionNumber":1,"value":"As for me, you uphold me in my integrity, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":12,"sectionNumber":2,"value":"and set me in your presence forever. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":41,"verseNumber":12,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":41,"verseNumber":13,"sectionNumber":1,"value":"Blessed be Yahweh, the God of Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":13,"sectionNumber":2,"value":"from everlasting and to everlasting! "},{"type":"line break"},{"type":"line text","chapterNumber":41,"verseNumber":13,"sectionNumber":3,"value":"Amen and amen. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"For the Chief Musician. A contemplation by the sons of Korah."},{"type":"stanza start"}]