[{"type":"line text","chapterNumber":52,"verseNumber":23,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":52,"verseNumber":1,"sectionNumber":1,"value":"Awake, awake! Put on your strength, Zion. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":1,"sectionNumber":2,"value":"Put on your beautiful garments, Jerusalem, the holy city: "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":1,"sectionNumber":3,"value":"for from now on the uncircumcised and the unclean will no more come into you. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":2,"sectionNumber":1,"value":"Shake yourself from the dust! "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":2,"sectionNumber":2,"value":"Arise, sit up, Jerusalem! "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":2,"sectionNumber":3,"value":"Release yourself from the bonds of your neck, captive daughter of Zion! "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":52,"verseNumber":2,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":52,"verseNumber":3,"sectionNumber":1,"value":"For Yahweh says, “You were sold for nothing; "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":3,"sectionNumber":2,"value":"and you will be redeemed without money.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":52,"verseNumber":4,"sectionNumber":1,"value":"For the Lord Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":52,"verseNumber":4,"sectionNumber":2,"value":"“My people went down at the first into Egypt to live there: "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":4,"sectionNumber":3,"value":"and the Assyrian has oppressed them without cause. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":52,"verseNumber":4,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":52,"verseNumber":5,"sectionNumber":1,"value":"“Now therefore, what do I do here,” says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":5,"sectionNumber":2,"value":"“seeing that my people are taken away for nothing? "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":5,"sectionNumber":3,"value":"Those who rule over them mock,” says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":5,"sectionNumber":4,"value":"“and my name is blasphemed continually all day long. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":6,"sectionNumber":1,"value":"Therefore my people shall know my name. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":6,"sectionNumber":2,"value":"Therefore they shall know in that day that I am he who speaks. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":6,"sectionNumber":3,"value":"Behold, it is I.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":52,"verseNumber":6,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":52,"verseNumber":7,"sectionNumber":1,"value":"How beautiful on the mountains are the feet of him who brings good news, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":7,"sectionNumber":2,"value":"who publishes peace, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":7,"sectionNumber":3,"value":"who brings good news, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":7,"sectionNumber":4,"value":"who proclaims salvation, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":7,"sectionNumber":5,"value":"who says to Zion, “Your God reigns!” "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":8,"sectionNumber":1,"value":"Your watchmen lift up their voice. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":8,"sectionNumber":2,"value":"Together they sing; "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":8,"sectionNumber":3,"value":"for they shall see eye to eye when Yahweh returns to Zion. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":9,"sectionNumber":1,"value":"Break out into joy! "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":9,"sectionNumber":2,"value":"Sing together, you waste places of Jerusalem; "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":9,"sectionNumber":3,"value":"for Yahweh has comforted his people. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":9,"sectionNumber":4,"value":"He has redeemed Jerusalem. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":10,"sectionNumber":1,"value":"Yahweh has made his holy arm bare in the eyes of all the nations. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":10,"sectionNumber":2,"value":"All the ends of the earth have seen the salvation of our God. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":52,"verseNumber":10,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":52,"verseNumber":11,"sectionNumber":1,"value":"Depart! Depart! Go out from there! Touch no unclean thing! "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":11,"sectionNumber":2,"value":"Go out from among her! "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":11,"sectionNumber":3,"value":"Cleanse yourselves, you who carry Yahweh’s vessels. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":12,"sectionNumber":1,"value":"For you shall not go out in haste, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":12,"sectionNumber":2,"value":"neither shall you go by flight: "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":12,"sectionNumber":3,"value":"for Yahweh will go before you; "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":12,"sectionNumber":4,"value":"and the God of Israel will be your rear guard. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":52,"verseNumber":12,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":52,"verseNumber":13,"sectionNumber":1,"value":"Behold, my servant will deal wisely. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":13,"sectionNumber":2,"value":"He will be exalted and lifted up, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":13,"sectionNumber":3,"value":"and will be very high. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":14,"sectionNumber":1,"value":"Just as many were astonished at you— "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":14,"sectionNumber":2,"value":"his appearance was marred more than any man, and his form more than the sons of men— "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":15,"sectionNumber":1,"value":"so he will cleanse many nations. "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":15,"sectionNumber":2,"value":"Kings will shut their mouths at him; "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":15,"sectionNumber":3,"value":"for they will see that which had not been told them, "},{"type":"line break"},{"type":"line text","chapterNumber":52,"verseNumber":15,"sectionNumber":4,"value":"and they will understand that which they had not heard. "},{"type":"line break"}]