[{"type":"paragraph text","chapterNumber":49,"verseNumber":1,"sectionNumber":1,"value":"Of the children of Ammon. Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":1,"sectionNumber":2,"value":"“Has Israel no sons? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":1,"sectionNumber":3,"value":"Has he no heir? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":1,"sectionNumber":4,"value":"Why then does Malcam possess Gad, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":1,"sectionNumber":5,"value":"and his people dwell in its cities? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":1,"value":"Therefore behold, the days come,” "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":2,"value":"says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":3,"value":"“that I will cause an alarm of war to be heard against Rabbah of the children of Ammon; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":4,"value":"and it will become a desolate heap, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":5,"value":"and her daughters will be burned with fire: "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":6,"value":"then Israel will possess those who possessed him,” "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":2,"sectionNumber":7,"value":"says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":1,"value":"“Wail, Heshbon, for Ai is laid waste! "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":2,"value":"Cry, you daughters of Rabbah! "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":3,"value":"Clothe yourself in sackcloth. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":4,"value":"Lament, and run back and forth among the fences; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":5,"value":"for Malcam will go into captivity, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":3,"sectionNumber":6,"value":"his priests and his princes together. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":4,"sectionNumber":1,"value":"Why do you boast in the valleys, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":4,"sectionNumber":2,"value":"your flowing valley, backsliding daughter? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":4,"sectionNumber":3,"value":"You trusted in her treasures, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":4,"sectionNumber":4,"value":"saying, ‘Who will come to me?’ "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":1,"value":"Behold, I will bring a terror on you,” "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":2,"value":"says the Lord, Yahweh of Armies, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":3,"value":"“from all who are around you. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":4,"value":"All of you will be driven completely out, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":5,"value":"and there will be no one to gather together the fugitives. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":5,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":49,"verseNumber":6,"sectionNumber":1,"value":"“But afterward I will reverse the captivity of the children of Ammon,” "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":6,"sectionNumber":2,"value":"says Yahweh. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":49,"verseNumber":7,"sectionNumber":1,"value":"Of Edom, Yahweh of Armies says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":7,"sectionNumber":2,"value":"“Is wisdom no more in Teman? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":7,"sectionNumber":3,"value":"Has counsel perished from the prudent? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":7,"sectionNumber":4,"value":"Has their wisdom vanished? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":8,"sectionNumber":1,"value":"Flee! Turn back! "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":8,"sectionNumber":2,"value":"Dwell in the depths, inhabitants of Dedan; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":8,"sectionNumber":3,"value":"for I will bring the calamity of Esau on him when I visit him. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":9,"sectionNumber":1,"value":"If grape gatherers came to you, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":9,"sectionNumber":2,"value":"would they not leave some gleaning grapes? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":9,"sectionNumber":3,"value":"If thieves came by night, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":9,"sectionNumber":4,"value":"wouldn’t they steal until they had enough? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":1,"value":"But I have made Esau bare, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":2,"value":"I have uncovered his secret places, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":3,"value":"and he will not be able to hide himself. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":4,"value":"His offspring is destroyed, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":5,"value":"with his brothers and his neighbors; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":10,"sectionNumber":6,"value":"and he is no more. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":11,"sectionNumber":1,"value":"Leave your fatherless children. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":11,"sectionNumber":2,"value":"I will preserve them alive. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":11,"sectionNumber":3,"value":"Let your widows trust in me.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":49,"verseNumber":12,"sectionNumber":1,"value":"For Yahweh says: “Behold, they to whom it didn’t pertain to drink of the cup will certainly drink; and are you he who will altogether go unpunished? You won’t go unpunished, but you will surely drink.  "},{"type":"paragraph text","chapterNumber":49,"verseNumber":13,"sectionNumber":1,"value":"For I have sworn by myself,” says Yahweh, “that Bozrah will become an astonishment, a reproach, a waste, and a curse. All its cities will be perpetual wastes.” "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":13,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":1,"value":"I have heard news from Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":2,"value":"and an ambassador is sent among the nations, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":3,"value":"saying, “Gather yourselves together! "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":4,"value":"Come against her! "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":5,"value":"Rise up to the battle!” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":14,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":49,"verseNumber":15,"sectionNumber":1,"value":"“For, behold, I have made you small among the nations, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":15,"sectionNumber":2,"value":"and despised among men. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":1,"value":"As for your terror, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":2,"value":"the pride of your heart has deceived you, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":3,"value":"O you who dwell in the clefts of the rock, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":4,"value":"who hold the height of the hill, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":5,"value":"though you should make your nest as high as the eagle, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":16,"sectionNumber":6,"value":"I will bring you down from there,” says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":17,"sectionNumber":1,"value":"“Edom will become an astonishment. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":17,"sectionNumber":2,"value":"Everyone who passes by it will be astonished, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":17,"sectionNumber":3,"value":"and will hiss at all its plagues. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":18,"sectionNumber":1,"value":"As in the overthrow of Sodom and Gomorrah and its neighbor cities,” says Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":18,"sectionNumber":2,"value":"“no man will dwell there, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":18,"sectionNumber":3,"value":"neither will any son of man live therein. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":18,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":1,"value":"“Behold, he will come up like a lion from the pride of the Jordan against the strong habitation: "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":2,"value":"for I will suddenly make them run away from it; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":3,"value":"and whoever is chosen, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":4,"value":"I will appoint him over it. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":5,"value":"For who is like me? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":6,"value":"Who will appoint me a time? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":19,"sectionNumber":7,"value":"Who is the shepherd who will stand before me?” "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":20,"sectionNumber":1,"value":"Therefore hear the counsel of Yahweh, that he has taken against Edom; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":20,"sectionNumber":2,"value":"and his purposes, that he has purposed against the inhabitants of Teman: "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":20,"sectionNumber":3,"value":"Surely they will drag them away, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":20,"sectionNumber":4,"value":"the little ones of the flock. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":20,"sectionNumber":5,"value":"Surely he will make their habitation desolate over them. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":21,"sectionNumber":1,"value":"The earth trembles at the noise of their fall; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":21,"sectionNumber":2,"value":"there is a cry, the noise which is heard in the Red Sea. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":22,"sectionNumber":1,"value":"Behold, he will come up and fly as the eagle, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":22,"sectionNumber":2,"value":"and spread out his wings against Bozrah. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":22,"sectionNumber":3,"value":"The heart of the mighty men of Edom at that day will be as the heart of a woman in her pangs. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":49,"verseNumber":23,"sectionNumber":1,"value":"Of Damascus: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":23,"sectionNumber":2,"value":"“Hamath is confounded, and Arpad; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":23,"sectionNumber":3,"value":"for they have heard evil news. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":23,"sectionNumber":4,"value":"They have melted away. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":23,"sectionNumber":5,"value":"There is sorrow on the sea. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":23,"sectionNumber":6,"value":"It can’t be quiet. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":24,"sectionNumber":1,"value":"Damascus has grown feeble, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":24,"sectionNumber":2,"value":"she turns herself to flee, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":24,"sectionNumber":3,"value":"and trembling has seized her. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":24,"sectionNumber":4,"value":"Anguish and sorrows have taken hold of her, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":24,"sectionNumber":5,"value":"as of a woman in travail. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":25,"sectionNumber":1,"value":"How is the city of praise not forsaken, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":25,"sectionNumber":2,"value":"the city of my joy? "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":26,"sectionNumber":1,"value":"Therefore her young men will fall in her streets, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":26,"sectionNumber":2,"value":"and all the men of war will be brought to silence in that day,” "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":26,"sectionNumber":3,"value":"says Yahweh of Armies. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":27,"sectionNumber":1,"value":"“I will kindle a fire in the wall of Damascus, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":27,"sectionNumber":2,"value":"and it will devour the palaces of Ben Hadad.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":27,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":49,"verseNumber":28,"sectionNumber":1,"value":"Of Kedar, and of the kingdoms of Hazor, which Nebuchadnezzar king of Babylon struck. Yahweh says: "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":28,"sectionNumber":2,"value":"“Arise, go up to Kedar, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":28,"sectionNumber":3,"value":"and destroy the children of the east. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":29,"sectionNumber":1,"value":"They will take their tents and their flocks. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":29,"sectionNumber":2,"value":"they will carry away for themselves their curtains, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":29,"sectionNumber":3,"value":"all their vessels, and their camels; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":29,"sectionNumber":4,"value":"and they will cry to them, ‘Terror on every side!’ "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":30,"sectionNumber":1,"value":"Flee! "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":30,"sectionNumber":2,"value":"Wander far off! "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":30,"sectionNumber":3,"value":"Dwell in the depths, you inhabitants of Hazor,” says Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":30,"sectionNumber":4,"value":"“for Nebuchadnezzar king of Babylon has taken counsel against you, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":30,"sectionNumber":5,"value":"and has conceived a purpose against you. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":31,"sectionNumber":1,"value":"Arise! Go up to a nation that is at ease, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":31,"sectionNumber":2,"value":"that dwells without care,” says Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":31,"sectionNumber":3,"value":"“that has neither gates nor bars, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":31,"sectionNumber":4,"value":"that dwells alone. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":32,"sectionNumber":1,"value":"Their camels will be a booty, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":32,"sectionNumber":2,"value":"and the multitude of their livestock a plunder. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":32,"sectionNumber":3,"value":"I will scatter to all winds those who have the corners of their beards cut off; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":32,"sectionNumber":4,"value":"and I will bring their calamity from every side of them,” "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":32,"sectionNumber":5,"value":"says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":33,"sectionNumber":1,"value":"Hazor will be a dwelling place of jackals, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":33,"sectionNumber":2,"value":"a desolation forever. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":33,"sectionNumber":3,"value":"No man will dwell there, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":33,"sectionNumber":4,"value":"neither will any son of man live therein.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":49,"verseNumber":34,"sectionNumber":1,"value":"Yahweh’s word that came to Jeremiah the prophet concerning Elam, in the beginning of the reign of Zedekiah king of Judah, saying,  "},{"type":"paragraph text","chapterNumber":49,"verseNumber":35,"sectionNumber":1,"value":"“Yahweh of Armies says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":49,"verseNumber":35,"sectionNumber":2,"value":"‘Behold, I will break the bow of Elam, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":35,"sectionNumber":3,"value":"the chief of their might. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":36,"sectionNumber":1,"value":"I will bring on Elam the four winds from the four quarters of the sky, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":36,"sectionNumber":2,"value":"and will scatter them toward all those winds. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":36,"sectionNumber":3,"value":"There will be no nation where the outcasts of Elam will not come. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":37,"sectionNumber":1,"value":"I will cause Elam to be dismayed before their enemies, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":37,"sectionNumber":2,"value":"and before those who seek their life. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":37,"sectionNumber":3,"value":"I will bring evil on them, even my fierce anger,’ says Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":37,"sectionNumber":4,"value":"‘and I will send the sword after them, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":37,"sectionNumber":5,"value":"until I have consumed them. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":38,"sectionNumber":1,"value":"I will set my throne in Elam, "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":38,"sectionNumber":2,"value":"and will destroy from there king and princes,’ says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":39,"sectionNumber":1,"value":"‘But it will happen in the latter days "},{"type":"line break"},{"type":"line text","chapterNumber":49,"verseNumber":39,"sectionNumber":2,"value":"that I will reverse the captivity of Elam,’ says Yahweh.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]