[{"type":"line text","chapterNumber":61,"verseNumber":22,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":61,"verseNumber":1,"sectionNumber":1,"value":"The Lord Yahweh’s Spirit is on me, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":1,"sectionNumber":2,"value":"because Yahweh has anointed me to preach good news to the humble. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":1,"sectionNumber":3,"value":"He has sent me to bind up the broken hearted, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":1,"sectionNumber":4,"value":"to proclaim liberty to the captives "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":1,"sectionNumber":5,"value":"and release to those who are bound, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":2,"sectionNumber":1,"value":"to proclaim the year of Yahweh’s favor "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":2,"sectionNumber":2,"value":"and the day of vengeance of our God, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":2,"sectionNumber":3,"value":"to comfort all who mourn, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":1,"value":"to provide for those who mourn in Zion, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":2,"value":"to give to them a garland for ashes, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":3,"value":"the oil of joy for mourning, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":4,"value":"the garment of praise for the spirit of heaviness, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":5,"value":"that they may be called trees of righteousness, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":6,"value":"the planting of Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":7,"value":"that he may be glorified. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":61,"verseNumber":3,"sectionNumber":8,"value":" "},{"type":"line text","chapterNumber":61,"verseNumber":4,"sectionNumber":1,"value":"They will rebuild the old ruins. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":4,"sectionNumber":2,"value":"They will raise up the former devastated places. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":4,"sectionNumber":3,"value":"They will repair the ruined cities "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":4,"sectionNumber":4,"value":"that have been devastated for many generations. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":5,"sectionNumber":1,"value":"Strangers will stand and feed your flocks. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":5,"sectionNumber":2,"value":"Foreigners will work your fields and your vineyards. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":6,"sectionNumber":1,"value":"But you will be called Yahweh’s priests. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":6,"sectionNumber":2,"value":"Men will call you the servants of our God. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":6,"sectionNumber":3,"value":"You will eat the wealth of the nations. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":6,"sectionNumber":4,"value":"You will boast in their glory. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":7,"sectionNumber":1,"value":"Instead of your shame you will have double. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":7,"sectionNumber":2,"value":"Instead of dishonor, they will rejoice in their portion. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":7,"sectionNumber":3,"value":"Therefore in their land they will possess double. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":7,"sectionNumber":4,"value":"Everlasting joy will be to them. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":8,"sectionNumber":1,"value":"“For I, Yahweh, love justice. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":8,"sectionNumber":2,"value":"I hate robbery and iniquity. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":8,"sectionNumber":3,"value":"I will give them their reward in truth "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":8,"sectionNumber":4,"value":"and I will make an everlasting covenant with them. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":9,"sectionNumber":1,"value":"Their offspring will be known among the nations, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":9,"sectionNumber":2,"value":"and their offspring among the peoples. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":9,"sectionNumber":3,"value":"All who see them will acknowledge them, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":9,"sectionNumber":4,"value":"that they are the offspring which Yahweh has blessed.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":61,"verseNumber":9,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":61,"verseNumber":10,"sectionNumber":1,"value":"I will greatly rejoice in Yahweh! "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":10,"sectionNumber":2,"value":"My soul will be joyful in my God, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":10,"sectionNumber":3,"value":"for he has clothed me with the garments of salvation. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":10,"sectionNumber":4,"value":"He has covered me with the robe of righteousness, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":10,"sectionNumber":5,"value":"as a bridegroom decks himself with a garland "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":10,"sectionNumber":6,"value":"and as a bride adorns herself with her jewels. "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":11,"sectionNumber":1,"value":"For as the earth produces its bud, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":11,"sectionNumber":2,"value":"and as the garden causes the things that are sown in it to spring up, "},{"type":"line break"},{"type":"line text","chapterNumber":61,"verseNumber":11,"sectionNumber":3,"value":"so the Lord Yahweh will cause righteousness and praise to spring up before all the nations. "},{"type":"line break"}]