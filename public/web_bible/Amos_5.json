[{"type":"paragraph text","chapterNumber":5,"verseNumber":1,"sectionNumber":1,"value":"Listen to this word which I take up for a lamentation over you, O house of Israel. "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":5,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":5,"verseNumber":2,"sectionNumber":1,"value":"“The virgin of Israel has fallen; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":2,"sectionNumber":2,"value":"She shall rise no more. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":2,"sectionNumber":3,"value":"She is cast down on her land; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":2,"sectionNumber":4,"value":"there is no one to raise her up.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":5,"verseNumber":3,"sectionNumber":1,"value":"For the Lord Yahweh says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":5,"verseNumber":3,"sectionNumber":2,"value":"“The city that went out a thousand shall have a hundred left, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":3,"sectionNumber":3,"value":"and that which went out one hundred shall have ten left to the house of Israel.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":5,"verseNumber":4,"sectionNumber":1,"value":"For Yahweh says to the house of Israel: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":5,"verseNumber":4,"sectionNumber":2,"value":"“Seek me, and you will live; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":1,"value":"but don’t seek Bethel, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":2,"value":"nor enter into Gilgal, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":3,"value":"and don’t pass to Beersheba: "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":4,"value":"for Gilgal shall surely go into captivity, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":5,"sectionNumber":5,"value":"and Bethel shall come to nothing. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":6,"sectionNumber":1,"value":"Seek Yahweh, and you will live; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":6,"sectionNumber":2,"value":"lest he break out like fire in the house of Joseph, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":6,"sectionNumber":3,"value":"and it devour, and there be no one to quench it in Bethel. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":7,"sectionNumber":1,"value":"You who turn justice to wormwood, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":7,"sectionNumber":2,"value":"and cast down righteousness to the earth: "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":1,"value":"seek him who made the Pleiades and Orion, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":2,"value":"and turns the shadow of death into the morning, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":3,"value":"and makes the day dark with night; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":4,"value":"who calls for the waters of the sea, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":8,"sectionNumber":5,"value":"and pours them out on the surface of the earth, Yahweh is his name, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":9,"sectionNumber":1,"value":"who brings sudden destruction on the strong, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":9,"sectionNumber":2,"value":"so that destruction comes on the fortress. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":10,"sectionNumber":1,"value":"They hate him who reproves in the gate, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":10,"sectionNumber":2,"value":"and they abhor him who speaks blamelessly. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":1,"value":"Therefore, because you trample on the poor, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":2,"value":"and take taxes from him of wheat: "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":3,"value":"You have built houses of cut stone, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":4,"value":"but you will not dwell in them. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":5,"value":"You have planted pleasant vineyards, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":11,"sectionNumber":6,"value":"but you shall not drink their wine. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":1,"value":"For I know how many your offenses, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":2,"value":"and how great are your sins— "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":3,"value":"you who afflict the just, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":4,"value":"who take a bribe, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":12,"sectionNumber":5,"value":"and who turn away the needy in the courts. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":1,"value":"Therefore a prudent person keeps silent in such a time, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":13,"sectionNumber":2,"value":"for it is an evil time. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":1,"value":"Seek good, and not evil, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":2,"value":"that you may live; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":3,"value":"and so Yahweh, the God of Armies, will be with you, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":14,"sectionNumber":4,"value":"as you say. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":15,"sectionNumber":1,"value":"Hate evil, love good, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":15,"sectionNumber":2,"value":"and establish justice in the courts. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":15,"sectionNumber":3,"value":"It may be that Yahweh, the God of Armies, will be gracious to the remnant of Joseph.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":5,"verseNumber":16,"sectionNumber":1,"value":"Therefore Yahweh, the God of Armies, the Lord, says: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":5,"verseNumber":16,"sectionNumber":2,"value":"“Wailing will be in all the wide ways; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":16,"sectionNumber":3,"value":"and they will say in all the streets, ‘Alas! Alas!’ "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":16,"sectionNumber":4,"value":"and they will call the farmer to mourning, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":16,"sectionNumber":5,"value":"and those who are skillful in lamentation to wailing. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":17,"sectionNumber":1,"value":"In all vineyards there will be wailing; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":17,"sectionNumber":2,"value":"for I will pass through the middle of you,” says Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":18,"sectionNumber":1,"value":"“Woe to you who desire the day of Yahweh! "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":18,"sectionNumber":2,"value":"Why do you long for the day of Yahweh? "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":18,"sectionNumber":3,"value":"It is darkness, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":18,"sectionNumber":4,"value":"and not light. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":19,"sectionNumber":1,"value":"As if a man fled from a lion, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":19,"sectionNumber":2,"value":"and a bear met him; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":19,"sectionNumber":3,"value":"Or he went into the house and leaned his hand on the wall, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":19,"sectionNumber":4,"value":"and a snake bit him. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":20,"sectionNumber":1,"value":"Won’t the day of Yahweh be darkness, and not light? "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":20,"sectionNumber":2,"value":"Even very dark, and no brightness in it? "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":21,"sectionNumber":1,"value":"I hate, I despise your feasts, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":21,"sectionNumber":2,"value":"and I can’t stand your solemn assemblies. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":22,"sectionNumber":1,"value":"Yes, though you offer me your burnt offerings and meal offerings, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":22,"sectionNumber":2,"value":"I will not accept them; "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":22,"sectionNumber":3,"value":"neither will I regard the peace offerings of your fat animals. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":23,"sectionNumber":1,"value":"Take away from me the noise of your songs! "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":23,"sectionNumber":2,"value":"I will not listen to the music of your harps. "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":24,"sectionNumber":1,"value":"But let justice roll on like rivers, "},{"type":"line break"},{"type":"line text","chapterNumber":5,"verseNumber":24,"sectionNumber":2,"value":"and righteousness like a mighty stream. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":5,"verseNumber":25,"sectionNumber":1,"value":"“Did you bring to me sacrifices and offerings in the wilderness forty years, house of Israel?  "},{"type":"paragraph text","chapterNumber":5,"verseNumber":26,"sectionNumber":1,"value":"You also carried the tent of your king and the shrine of your images, the star of your god, which you made for yourselves.  "},{"type":"paragraph text","chapterNumber":5,"verseNumber":27,"sectionNumber":1,"value":"Therefore I will cause you to go into captivity beyond Damascus,” says Yahweh, whose name is the God of Armies. "},{"type":"paragraph end"},{"type":"paragraph start"}]