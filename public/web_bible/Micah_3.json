[{"type":"paragraph text","chapterNumber":3,"verseNumber":1,"sectionNumber":1,"value":"I said, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":2,"value":"“Please listen, you heads of Jacob, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":3,"value":"and rulers of the house of Israel: "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":1,"sectionNumber":4,"value":"Isn’t it for you to know justice? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":1,"value":"You who hate the good, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":2,"value":"and love the evil; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":3,"value":"who tear off their skin, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":2,"sectionNumber":4,"value":"and their flesh from off their bones; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":1,"value":"who also eat the flesh of my people, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":2,"value":"and peel their skin from off them, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":3,"value":"and break their bones, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":4,"value":"and chop them in pieces, as for the pot, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":3,"sectionNumber":5,"value":"and as meat within the cauldron. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":1,"value":"Then they will cry to Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":2,"value":"but he will not answer them. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":3,"value":"Yes, he will hide his face from them at that time, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":4,"sectionNumber":4,"value":"because they made their deeds evil.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":3,"verseNumber":5,"sectionNumber":1,"value":"Yahweh says concerning the prophets who lead my people astray; for those who feed their teeth, they proclaim, “Peace!” and whoever doesn’t provide for their mouths, they prepare war against him: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":3,"verseNumber":5,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":1,"value":"“Therefore night is over you, with no vision, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":2,"value":"and it is dark to you, that you may not divine; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":3,"value":"and the sun will go down on the prophets, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":6,"sectionNumber":4,"value":"and the day will be black over them. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":1,"value":"The seers shall be disappointed, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":2,"value":"and the diviners confounded. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":3,"value":"Yes, they shall all cover their lips; "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":7,"sectionNumber":4,"value":"for there is no answer from God.” "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":1,"value":"But as for me, I am full of power by Yahweh’s Spirit, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":2,"value":"and of judgment, and of might, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":3,"value":"to declare to Jacob his disobedience, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":8,"sectionNumber":4,"value":"and to Israel his sin. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":1,"value":"Please listen to this, you heads of the house of Jacob, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":2,"value":"and rulers of the house of Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":3,"value":"who abhor justice, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":9,"sectionNumber":4,"value":"and pervert all equity. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":1,"value":"They build up Zion with blood, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":10,"sectionNumber":2,"value":"and Jerusalem with iniquity. "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":1,"value":"Her leaders judge for bribes, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":2,"value":"and her priests teach for a price, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":3,"value":"and her prophets of it tell fortunes for money: "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":4,"value":"yet they lean on Yahweh, and say, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":5,"value":"“Isn’t Yahweh among us? "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":11,"sectionNumber":6,"value":"No disaster will come on us.” "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":1,"value":"Therefore Zion for your sake will be plowed like a field, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":2,"value":"and Jerusalem will become heaps of rubble, "},{"type":"line break"},{"type":"line text","chapterNumber":3,"verseNumber":12,"sectionNumber":3,"value":"and the mountain of the temple like the high places of a forest. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"}]