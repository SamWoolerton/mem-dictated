[{"type":"line text","chapterNumber":57,"verseNumber":13,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":57,"verseNumber":1,"sectionNumber":1,"value":"Be merciful to me, God, be merciful to me, "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":1,"sectionNumber":2,"value":"for my soul takes refuge in you. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":1,"sectionNumber":3,"value":"Yes, in the shadow of your wings, I will take refuge, "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":1,"sectionNumber":4,"value":"until disaster has passed. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":2,"sectionNumber":1,"value":"I cry out to God Most High, "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":2,"sectionNumber":2,"value":"to God who accomplishes my requests for me. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":3,"sectionNumber":1,"value":"He will send from heaven, and save me, "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":3,"sectionNumber":2,"value":"he rebukes the one who is pursuing me. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":3,"sectionNumber":3,"value":"God will send out his loving kindness and his truth. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":4,"sectionNumber":1,"value":"My soul is among lions. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":4,"sectionNumber":2,"value":"I lie among those who are set on fire, "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":4,"sectionNumber":3,"value":"even the sons of men, whose teeth are spears and arrows, "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":4,"sectionNumber":4,"value":"and their tongue a sharp sword. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":5,"sectionNumber":1,"value":"Be exalted, God, above the heavens! "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":5,"sectionNumber":2,"value":"Let your glory be above all the earth! "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":57,"verseNumber":5,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":57,"verseNumber":6,"sectionNumber":1,"value":"They have prepared a net for my steps. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":6,"sectionNumber":2,"value":"My soul is bowed down. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":6,"sectionNumber":3,"value":"They dig a pit before me. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":6,"sectionNumber":4,"value":"They fall into the middle of it themselves. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":7,"sectionNumber":1,"value":"My heart is steadfast, God. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":7,"sectionNumber":2,"value":"My heart is steadfast. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":7,"sectionNumber":3,"value":"I will sing, yes, I will sing praises. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":8,"sectionNumber":1,"value":"Wake up, my glory! Wake up, lute and harp! "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":8,"sectionNumber":2,"value":"I will wake up the dawn. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":9,"sectionNumber":1,"value":"I will give thanks to you, Lord, among the peoples. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":9,"sectionNumber":2,"value":"I will sing praises to you among the nations. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":10,"sectionNumber":1,"value":"For your great loving kindness reaches to the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":10,"sectionNumber":2,"value":"and your truth to the skies. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":11,"sectionNumber":1,"value":"Be exalted, God, above the heavens. "},{"type":"line break"},{"type":"line text","chapterNumber":57,"verseNumber":11,"sectionNumber":2,"value":"Let your glory be over all the earth. "},{"type":"line break"},{"type":"stanza end"},{"type":"header","value":"For the Chief Musician. To the tune of “Do Not Destroy.” A poem by David."},{"type":"stanza start"}]