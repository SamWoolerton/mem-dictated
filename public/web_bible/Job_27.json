[{"type":"paragraph text","chapterNumber":27,"verseNumber":1,"sectionNumber":1,"value":"Job again took up his parable, and said, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":27,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":27,"verseNumber":2,"sectionNumber":1,"value":"“As God lives, who has taken away my right, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":2,"sectionNumber":2,"value":"the Almighty, who has made my soul bitter "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":3,"sectionNumber":1,"value":"(for the length of my life is still in me, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":3,"sectionNumber":2,"value":"and the spirit of God is in my nostrils); "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":4,"sectionNumber":1,"value":"surely my lips will not speak unrighteousness, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":4,"sectionNumber":2,"value":"neither will my tongue utter deceit. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":5,"sectionNumber":1,"value":"Far be it from me that I should justify you. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":5,"sectionNumber":2,"value":"Until I die I will not put away my integrity from me. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":6,"sectionNumber":1,"value":"I hold fast to my righteousness, and will not let it go. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":6,"sectionNumber":2,"value":"My heart will not reproach me so long as I live. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":27,"verseNumber":6,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":27,"verseNumber":7,"sectionNumber":1,"value":"“Let my enemy be as the wicked. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":7,"sectionNumber":2,"value":"Let him who rises up against me be as the unrighteous. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":27,"verseNumber":7,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":27,"verseNumber":8,"sectionNumber":1,"value":"For what is the hope of the godless, when he is cut off, when God takes away his life? "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":9,"sectionNumber":1,"value":"Will God hear his cry when trouble comes on him? "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":10,"sectionNumber":1,"value":"Will he delight himself in the Almighty, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":10,"sectionNumber":2,"value":"and call on God at all times? "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":11,"sectionNumber":1,"value":"I will teach you about the hand of God. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":11,"sectionNumber":2,"value":"I will not conceal that which is with the Almighty. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":12,"sectionNumber":1,"value":"Behold, all of you have seen it yourselves; "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":12,"sectionNumber":2,"value":"why then have you become altogether vain? "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":27,"verseNumber":12,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":27,"verseNumber":13,"sectionNumber":1,"value":"“This is the portion of a wicked man with God, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":13,"sectionNumber":2,"value":"the heritage of oppressors, which they receive from the Almighty. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":14,"sectionNumber":1,"value":"If his children are multiplied, it is for the sword. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":14,"sectionNumber":2,"value":"His offspring will not be satisfied with bread. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":15,"sectionNumber":1,"value":"Those who remain of him will be buried in death. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":15,"sectionNumber":2,"value":"His widows will make no lamentation. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":16,"sectionNumber":1,"value":"Though he heap up silver as the dust, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":16,"sectionNumber":2,"value":"and prepare clothing as the clay; "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":17,"sectionNumber":1,"value":"he may prepare it, but the just will put it on, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":17,"sectionNumber":2,"value":"and the innocent will divide the silver. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":18,"sectionNumber":1,"value":"He builds his house as the moth, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":18,"sectionNumber":2,"value":"as a booth which the watchman makes. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":19,"sectionNumber":1,"value":"He lies down rich, but he will not do so again. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":19,"sectionNumber":2,"value":"He opens his eyes, and he is not. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":20,"sectionNumber":1,"value":"Terrors overtake him like waters. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":20,"sectionNumber":2,"value":"A storm steals him away in the night. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":21,"sectionNumber":1,"value":"The east wind carries him away, and he departs. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":21,"sectionNumber":2,"value":"It sweeps him out of his place. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":22,"sectionNumber":1,"value":"For it hurls at him, and does not spare, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":22,"sectionNumber":2,"value":"as he flees away from his hand. "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":23,"sectionNumber":1,"value":"Men will clap their hands at him, "},{"type":"line break"},{"type":"line text","chapterNumber":27,"verseNumber":23,"sectionNumber":2,"value":"and will hiss him out of his place. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"stanza end"},{"type":"stanza start"}]