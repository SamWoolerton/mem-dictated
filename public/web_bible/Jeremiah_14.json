[{"type":"paragraph text","chapterNumber":14,"verseNumber":1,"sectionNumber":1,"value":"This is Yahweh’s word that came to Jeremiah concerning the drought. "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":14,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":14,"verseNumber":2,"sectionNumber":1,"value":"“Judah mourns, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":2,"sectionNumber":2,"value":"and its gates languish. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":2,"sectionNumber":3,"value":"They sit in black on the ground. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":2,"sectionNumber":4,"value":"The cry of Jerusalem goes up. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":1,"value":"Their nobles send their little ones to the waters. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":2,"value":"They come to the cisterns, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":3,"value":"and find no water. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":4,"value":"They return with their vessels empty. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":5,"value":"They are disappointed and confounded, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":3,"sectionNumber":6,"value":"and cover their heads. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":4,"sectionNumber":1,"value":"Because of the ground which is cracked, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":4,"sectionNumber":2,"value":"because no rain has been in the land, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":4,"sectionNumber":3,"value":"the plowmen are disappointed. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":4,"sectionNumber":4,"value":"They cover their heads. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":5,"sectionNumber":1,"value":"Yes, the doe in the field also calves and forsakes her young, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":5,"sectionNumber":2,"value":"because there is no grass. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":6,"sectionNumber":1,"value":"The wild donkeys stand on the bare heights. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":6,"sectionNumber":2,"value":"They pant for air like jackals. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":6,"sectionNumber":3,"value":"Their eyes fail, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":6,"sectionNumber":4,"value":"because there is no vegetation. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":7,"sectionNumber":1,"value":"Though our iniquities testify against us, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":7,"sectionNumber":2,"value":"work for your name’s sake, Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":7,"sectionNumber":3,"value":"for our rebellions are many. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":7,"sectionNumber":4,"value":"We have sinned against you. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":8,"sectionNumber":1,"value":"You hope of Israel, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":8,"sectionNumber":2,"value":"its Savior in the time of trouble, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":8,"sectionNumber":3,"value":"why should you be as a foreigner in the land, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":8,"sectionNumber":4,"value":"and as a wayfaring man who turns aside to stay for a night? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":9,"sectionNumber":1,"value":"Why should you be like a scared man, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":9,"sectionNumber":2,"value":"as a mighty man who can’t save? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":9,"sectionNumber":3,"value":"Yet you, Yahweh, are in the middle of us, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":9,"sectionNumber":4,"value":"and we are called by your name. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":9,"sectionNumber":5,"value":"Don’t leave us. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":14,"verseNumber":10,"sectionNumber":1,"value":"Yahweh says to this people, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":14,"verseNumber":10,"sectionNumber":2,"value":"“Even so they have loved to wander. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":10,"sectionNumber":3,"value":"They have not restrained their feet. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":10,"sectionNumber":4,"value":"Therefore Yahweh does not accept them. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":10,"sectionNumber":5,"value":"Now he will remember their iniquity, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":10,"sectionNumber":6,"value":"and punish them for their sins.” "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":14,"verseNumber":11,"sectionNumber":1,"value":"Yahweh said to me, “Don’t pray for this people for their good.  "},{"type":"paragraph text","chapterNumber":14,"verseNumber":12,"sectionNumber":1,"value":"When they fast, I will not hear their cry; and when they offer burnt offering and meal offering, I will not accept them; but I will consume them by the sword, by famine, and by pestilence.” "},{"type":"paragraph end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":14,"verseNumber":13,"sectionNumber":1,"value":"Then I said, “Ah, Lord Yahweh! Behold, the prophets tell them, ‘You will not see the sword, neither will you have famine; but I will give you assured peace in this place.’ ” "},{"type":"paragraph end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":14,"verseNumber":14,"sectionNumber":1,"value":"Then Yahweh said to me, “The prophets prophesy lies in my name. I didn’t send them. I didn’t command them. I didn’t speak to them. They prophesy to you a lying vision, divination, and a thing of nothing, and the deceit of their own heart.  "},{"type":"paragraph text","chapterNumber":14,"verseNumber":15,"sectionNumber":1,"value":"Therefore Yahweh says concerning the prophets who prophesy in my name, but I didn’t send them, yet they say, ‘Sword and famine will not be in this land.’ Those prophets will be consumed by sword and famine.  "},{"type":"paragraph text","chapterNumber":14,"verseNumber":16,"sectionNumber":1,"value":"The people to whom they prophesy will be cast out in the streets of Jerusalem because of the famine and the sword. They will have no one to bury them—them, their wives, their sons, or their daughters, for I will pour their wickedness on them. "},{"type":"paragraph end"},{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":14,"verseNumber":17,"sectionNumber":1,"value":"“You shall say this word to them: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":14,"verseNumber":17,"sectionNumber":2,"value":"“ ‘Let my eyes run down with tears night and day, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":17,"sectionNumber":3,"value":"and let them not cease; "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":17,"sectionNumber":4,"value":"for the virgin daughter of my people is broken with a great breach, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":17,"sectionNumber":5,"value":"with a very grievous wound. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":1,"value":"If I go out into the field, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":2,"value":"then, behold, the slain with the sword! "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":3,"value":"If I enter into the city, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":4,"value":"then, behold, those who are sick with famine! "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":5,"value":"For both the prophet and the priest go about in the land, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":6,"value":"and have no knowledge.’ ” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":14,"verseNumber":18,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":1,"value":"Have you utterly rejected Judah? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":2,"value":"Has your soul loathed Zion? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":3,"value":"Why have you struck us, and there is no healing for us? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":4,"value":"We looked for peace, but no good came; "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":19,"sectionNumber":5,"value":"and for a time of healing, and behold, dismay! "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":20,"sectionNumber":1,"value":"We acknowledge, Yahweh, our wickedness, "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":20,"sectionNumber":2,"value":"and the iniquity of our fathers; "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":20,"sectionNumber":3,"value":"for we have sinned against you. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":21,"sectionNumber":1,"value":"Do not abhor us, for your name’s sake. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":21,"sectionNumber":2,"value":"Do not disgrace the throne of your glory. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":21,"sectionNumber":3,"value":"Remember, and don’t break your covenant with us. "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":22,"sectionNumber":1,"value":"Are there any among the vanities of the nations that can cause rain? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":22,"sectionNumber":2,"value":"Or can the sky give showers? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":22,"sectionNumber":3,"value":"Aren’t you he, Yahweh our God? "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":22,"sectionNumber":4,"value":"Therefore we will wait for you; "},{"type":"line break"},{"type":"line text","chapterNumber":14,"verseNumber":22,"sectionNumber":5,"value":"for you have made all these things. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]