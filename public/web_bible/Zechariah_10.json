[{"type":"line text","chapterNumber":10,"verseNumber":17,"sectionNumber":1,"value":" "},{"type":"line text","chapterNumber":10,"verseNumber":1,"sectionNumber":1,"value":"Ask of Yahweh rain in the spring time, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":1,"sectionNumber":2,"value":"Yahweh who makes storm clouds, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":1,"sectionNumber":3,"value":"and he gives rain showers to everyone for the plants in the field. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":1,"value":"For the teraphim have spoken vanity, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":2,"value":"and the diviners have seen a lie; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":3,"value":"and they have told false dreams. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":4,"value":"They comfort in vain. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":5,"value":"Therefore they go their way like sheep. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":2,"sectionNumber":6,"value":"They are oppressed, because there is no shepherd. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":3,"sectionNumber":1,"value":"My anger is kindled against the shepherds, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":3,"sectionNumber":2,"value":"and I will punish the male goats; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":3,"sectionNumber":3,"value":"For Yahweh of Armies has visited his flock, the house of Judah, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":3,"sectionNumber":4,"value":"and will make them as his majestic horse in the battle. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":4,"sectionNumber":1,"value":"From him will come the cornerstone, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":4,"sectionNumber":2,"value":"from him the nail, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":4,"sectionNumber":3,"value":"from him the battle bow, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":4,"sectionNumber":4,"value":"from him every ruler together. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":5,"sectionNumber":1,"value":"They shall be as mighty men, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":5,"sectionNumber":2,"value":"treading down muddy streets in the battle; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":5,"sectionNumber":3,"value":"and they shall fight, because Yahweh is with them; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":5,"sectionNumber":4,"value":"and the riders on horses will be confounded. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":1,"value":"“I will strengthen the house of Judah, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":2,"value":"and I will save the house of Joseph, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":3,"value":"and I will bring them back; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":4,"value":"for I have mercy on them; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":5,"value":"and they will be as though I had not cast them off: "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":6,"sectionNumber":6,"value":"for I am Yahweh their God, and I will hear them. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":7,"sectionNumber":1,"value":"Ephraim will be like a mighty man, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":7,"sectionNumber":2,"value":"and their heart will rejoice as through wine; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":7,"sectionNumber":3,"value":"yes, their children will see it, and rejoice. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":7,"sectionNumber":4,"value":"Their heart will be glad in Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":8,"sectionNumber":1,"value":"I will signal for them, and gather them; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":8,"sectionNumber":2,"value":"for I have redeemed them; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":8,"sectionNumber":3,"value":"and they will increase as they have increased. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":9,"sectionNumber":1,"value":"I will sow them among the peoples; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":9,"sectionNumber":2,"value":"and they will remember me in far countries; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":9,"sectionNumber":3,"value":"and they will live with their children, and will return. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":10,"sectionNumber":1,"value":"I will bring them again also out of the land of Egypt, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":10,"sectionNumber":2,"value":"and gather them out of Assyria; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":10,"sectionNumber":3,"value":"and I will bring them into the land of Gilead and Lebanon; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":10,"sectionNumber":4,"value":"and there won’t be room enough for them. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":11,"sectionNumber":1,"value":"He will pass through the sea of affliction, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":11,"sectionNumber":2,"value":"and will strike the waves in the sea, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":11,"sectionNumber":3,"value":"and all the depths of the Nile will dry up; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":11,"sectionNumber":4,"value":"and the pride of Assyria will be brought down, "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":11,"sectionNumber":5,"value":"and the scepter of Egypt will depart. "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":12,"sectionNumber":1,"value":"I will strengthen them in Yahweh; "},{"type":"line break"},{"type":"line text","chapterNumber":10,"verseNumber":12,"sectionNumber":2,"value":"and they will walk up and down in his name,” says Yahweh. "},{"type":"line break"}]