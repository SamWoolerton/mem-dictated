[{"type":"paragraph start"},{"type":"paragraph text","chapterNumber":1,"verseNumber":1,"sectionNumber":1,"value":"How the city sits solitary, "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":1,"sectionNumber":2,"value":"that was full of people! "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":1,"sectionNumber":3,"value":"She has become as a widow, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":1,"sectionNumber":4,"value":"who was great among the nations! "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":1,"sectionNumber":5,"value":"She who was a princess among the provinces "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":1,"sectionNumber":6,"value":"has become a slave! "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":1,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":2,"sectionNumber":1,"value":"She weeps bitterly in the night. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":2,"sectionNumber":2,"value":"Her tears are on her cheeks. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":2,"sectionNumber":3,"value":"Among all her lovers "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":2,"sectionNumber":4,"value":"she has no one to comfort her. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":2,"sectionNumber":5,"value":"All her friends have dealt treacherously with her. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":2,"sectionNumber":6,"value":"They have become her enemies. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":2,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":3,"sectionNumber":1,"value":"Judah has gone into captivity because of affliction, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":3,"sectionNumber":2,"value":"and because of great servitude. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":3,"sectionNumber":3,"value":"She dwells among the nations. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":3,"sectionNumber":4,"value":"She finds no rest. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":3,"sectionNumber":5,"value":"All her persecutors overtook her within the straits. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":3,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":4,"sectionNumber":1,"value":"The roads to Zion mourn, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":4,"sectionNumber":2,"value":"because no one comes to the solemn assembly. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":4,"sectionNumber":3,"value":"All her gates are desolate. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":4,"sectionNumber":4,"value":"Her priests sigh. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":4,"sectionNumber":5,"value":"Her virgins are afflicted, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":4,"sectionNumber":6,"value":"and she herself is in bitterness. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":4,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":5,"sectionNumber":1,"value":"Her adversaries have become the head. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":5,"sectionNumber":2,"value":"Her enemies prosper; "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":5,"sectionNumber":3,"value":"for Yahweh has afflicted her for the multitude of her transgressions. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":5,"sectionNumber":4,"value":"Her young children have gone into captivity before the adversary. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":5,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":6,"sectionNumber":1,"value":"All majesty has departed from the daughter of Zion. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":6,"sectionNumber":2,"value":"Her princes have become like deer that find no pasture. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":6,"sectionNumber":3,"value":"They have gone without strength before the pursuer. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":6,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":7,"sectionNumber":1,"value":"Jerusalem remembers in the days of her affliction and of her miseries "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":7,"sectionNumber":2,"value":"all her pleasant things that were from the days of old; "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":7,"sectionNumber":3,"value":"when her people fell into the hand of the adversary, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":7,"sectionNumber":4,"value":"and no one helped her. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":7,"sectionNumber":5,"value":"The adversaries saw her. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":7,"sectionNumber":6,"value":"They mocked at her desolations. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":7,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":8,"sectionNumber":1,"value":"Jerusalem has grievously sinned. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":8,"sectionNumber":2,"value":"Therefore she has become unclean. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":8,"sectionNumber":3,"value":"All who honored her despise her, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":8,"sectionNumber":4,"value":"because they have seen her nakedness. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":8,"sectionNumber":5,"value":"Yes, she sighs, and turns backward. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":8,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":9,"sectionNumber":1,"value":"Her filthiness was in her skirts. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":9,"sectionNumber":2,"value":"She didn’t remember her latter end. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":9,"sectionNumber":3,"value":"Therefore she has come down astoundingly. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":9,"sectionNumber":4,"value":"She has no comforter. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":9,"sectionNumber":5,"value":"“See, Yahweh, my affliction; "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":9,"sectionNumber":6,"value":"for the enemy has magnified himself.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":9,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":10,"sectionNumber":1,"value":"The adversary has spread out his hand on all her pleasant things; "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":10,"sectionNumber":2,"value":"for she has seen that the nations have entered into her sanctuary, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":10,"sectionNumber":3,"value":"concerning whom you commanded that they should not enter into your assembly. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":10,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":11,"sectionNumber":1,"value":"All her people sigh. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":11,"sectionNumber":2,"value":"They seek bread. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":11,"sectionNumber":3,"value":"They have given their pleasant things for food to refresh their soul. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":11,"sectionNumber":4,"value":"“Look, Yahweh, and see; "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":11,"sectionNumber":5,"value":"for I have become despised.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":11,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":12,"sectionNumber":1,"value":"“Is it nothing to you, all you who pass by? "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":12,"sectionNumber":2,"value":"Look, and see if there is any sorrow like my sorrow, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":12,"sectionNumber":3,"value":"which is brought on me, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":12,"sectionNumber":4,"value":"with which Yahweh has afflicted me in the day of his fierce anger. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":12,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":13,"sectionNumber":1,"value":"“From on high has he sent fire into my bones, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":13,"sectionNumber":2,"value":"and it prevails against them. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":13,"sectionNumber":3,"value":"He has spread a net for my feet. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":13,"sectionNumber":4,"value":"He has turned me back. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":13,"sectionNumber":5,"value":"He has made me desolate and I faint all day long. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":13,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":14,"sectionNumber":1,"value":"“The yoke of my transgressions is bound by his hand. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":14,"sectionNumber":2,"value":"They are knit together. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":14,"sectionNumber":3,"value":"They have come up on my neck. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":14,"sectionNumber":4,"value":"He made my strength fail. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":14,"sectionNumber":5,"value":"The Lord has delivered me into their hands, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":14,"sectionNumber":6,"value":"against whom I am not able to stand. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":14,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":15,"sectionNumber":1,"value":"“The Lord has set at nothing all my mighty men within me. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":15,"sectionNumber":2,"value":"He has called a solemn assembly against me to crush my young men. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":15,"sectionNumber":3,"value":"The Lord has trodden the virgin daughter of Judah as in a wine press. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":15,"sectionNumber":4,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":16,"sectionNumber":1,"value":"“For these things I weep. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":16,"sectionNumber":2,"value":"My eye, my eye runs down with water, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":16,"sectionNumber":3,"value":"because the comforter who should refresh my soul is far from me. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":16,"sectionNumber":4,"value":"My children are desolate, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":16,"sectionNumber":5,"value":"because the enemy has prevailed.” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":16,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":17,"sectionNumber":1,"value":"Zion spreads out her hands. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":17,"sectionNumber":2,"value":"There is no one to comfort her. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":17,"sectionNumber":3,"value":"Yahweh has commanded concerning Jacob, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":17,"sectionNumber":4,"value":"that those who are around him should be his adversaries. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":17,"sectionNumber":5,"value":"Jerusalem is among them as an unclean thing. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":17,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":18,"sectionNumber":1,"value":"“Yahweh is righteous; "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":18,"sectionNumber":2,"value":"for I have rebelled against his commandment. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":18,"sectionNumber":3,"value":"Please hear all you peoples, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":18,"sectionNumber":4,"value":"and see my sorrow. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":18,"sectionNumber":5,"value":"My virgins and my young men have gone into captivity. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":18,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":19,"sectionNumber":1,"value":"“I called for my lovers, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":19,"sectionNumber":2,"value":"but they deceived me. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":19,"sectionNumber":3,"value":"My priests and my elders gave up the spirit in the city, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":19,"sectionNumber":4,"value":"while they sought food for themselves to refresh their souls. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":19,"sectionNumber":5,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":20,"sectionNumber":1,"value":"“Look, Yahweh; for I am in distress. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":20,"sectionNumber":2,"value":"My heart is troubled. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":20,"sectionNumber":3,"value":"My heart turns over within me, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":20,"sectionNumber":4,"value":"for I have grievously rebelled. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":20,"sectionNumber":5,"value":"Abroad, the sword bereaves. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":20,"sectionNumber":6,"value":"At home, it is like death. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":20,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":21,"sectionNumber":1,"value":"“They have heard that I sigh. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":21,"sectionNumber":2,"value":"There is no one to comfort me. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":21,"sectionNumber":3,"value":"All my enemies have heard of my trouble. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":21,"sectionNumber":4,"value":"They are glad that you have done it. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":21,"sectionNumber":5,"value":"You will bring the day that you have proclaimed, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":21,"sectionNumber":6,"value":"and they will be like me. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":1,"verseNumber":21,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":1,"verseNumber":22,"sectionNumber":1,"value":"“Let all their wickedness come before you. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":22,"sectionNumber":2,"value":"Do to them as you have done to me for all my transgressions. "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":22,"sectionNumber":3,"value":"For my sighs are many, "},{"type":"line break"},{"type":"line text","chapterNumber":1,"verseNumber":22,"sectionNumber":4,"value":"and my heart is faint. "},{"type":"line break"},{"type":"stanza end"},{"type":"paragraph start"}]