[{"type":"paragraph text","chapterNumber":45,"verseNumber":1,"sectionNumber":1,"value":"Yahweh says to his anointed, to Cyrus, whose right hand I have held, to subdue nations before him, and strip kings of their armor; to open the doors before him, and the gates shall not be shut: "},{"type":"paragraph end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":1,"sectionNumber":2,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":2,"sectionNumber":1,"value":"“I will go before you "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":2,"sectionNumber":2,"value":"and make the rough places smooth. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":2,"sectionNumber":3,"value":"I will break the doors of bronze in pieces "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":2,"sectionNumber":4,"value":"and cut apart the bars of iron. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":3,"sectionNumber":1,"value":"I will give you the treasures of darkness "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":3,"sectionNumber":2,"value":"and hidden riches of secret places, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":3,"sectionNumber":3,"value":"that you may know that it is I, Yahweh, who call you by your name, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":3,"sectionNumber":4,"value":"even the God of Israel. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":4,"sectionNumber":1,"value":"For Jacob my servant’s sake, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":4,"sectionNumber":2,"value":"and Israel my chosen, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":4,"sectionNumber":3,"value":"I have called you by your name. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":4,"sectionNumber":4,"value":"I have given you a title, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":4,"sectionNumber":5,"value":"though you have not known me. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":5,"sectionNumber":1,"value":"I am Yahweh, and there is no one else. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":5,"sectionNumber":2,"value":"Besides me, there is no God. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":5,"sectionNumber":3,"value":"I will strengthen you, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":5,"sectionNumber":4,"value":"though you have not known me, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":6,"sectionNumber":1,"value":"that they may know from the rising of the sun, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":6,"sectionNumber":2,"value":"and from the west, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":6,"sectionNumber":3,"value":"that there is no one besides me. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":6,"sectionNumber":4,"value":"I am Yahweh, and there is no one else. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":7,"sectionNumber":1,"value":"I form the light "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":7,"sectionNumber":2,"value":"and create darkness. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":7,"sectionNumber":3,"value":"I make peace "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":7,"sectionNumber":4,"value":"and create calamity. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":7,"sectionNumber":5,"value":"I am Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":7,"sectionNumber":6,"value":"who does all these things. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":7,"sectionNumber":7,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":8,"sectionNumber":1,"value":"Rain, you heavens, from above, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":8,"sectionNumber":2,"value":"and let the skies pour down righteousness. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":8,"sectionNumber":3,"value":"Let the earth open, that it may produce salvation, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":8,"sectionNumber":4,"value":"and let it cause righteousness to spring up with it. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":8,"sectionNumber":5,"value":"I, Yahweh, have created it. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":8,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":9,"sectionNumber":1,"value":"Woe to him who strives with his Maker— "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":9,"sectionNumber":2,"value":"a clay pot among the clay pots of the earth! "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":9,"sectionNumber":3,"value":"Shall the clay ask him who fashions it, ‘What are you making?’ "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":9,"sectionNumber":4,"value":"or your work, ‘He has no hands?’ "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":10,"sectionNumber":1,"value":"Woe to him who says to a father, ‘What have you become the father of?’ "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":10,"sectionNumber":2,"value":"or to a mother, ‘What have you given birth to?’ ” "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":10,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":11,"sectionNumber":1,"value":"Yahweh, the Holy One of Israel "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":11,"sectionNumber":2,"value":"and his Maker says: "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":11,"sectionNumber":3,"value":"“You ask me about the things that are to come, concerning my sons, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":11,"sectionNumber":4,"value":"and you command me concerning the work of my hands! "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":12,"sectionNumber":1,"value":"I have made the earth, and created man on it. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":12,"sectionNumber":2,"value":"I, even my hands, have stretched out the heavens. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":12,"sectionNumber":3,"value":"I have commanded all their army. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":13,"sectionNumber":1,"value":"I have raised him up in righteousness, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":13,"sectionNumber":2,"value":"and I will make all his ways straight. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":13,"sectionNumber":3,"value":"He shall build my city, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":13,"sectionNumber":4,"value":"and he shall let my exiles go free, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":13,"sectionNumber":5,"value":"not for price nor reward,” says Yahweh of Armies. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":13,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":1,"value":"Yahweh says: “The labor of Egypt, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":2,"value":"and the merchandise of Ethiopia, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":3,"value":"and the Sabeans, men of stature, will come over to you, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":4,"value":"and they will be yours. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":5,"value":"They will go after you. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":6,"value":"They shall come over in chains. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":7,"value":"They will bow down to you. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":8,"value":"They will make supplication to you: "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":9,"value":"‘Surely God is in you; and there is no one else. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":14,"sectionNumber":10,"value":"There is no other god. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":15,"sectionNumber":1,"value":"Most certainly you are a God who has hidden yourself, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":15,"sectionNumber":2,"value":"God of Israel, the Savior.’ ” "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":16,"sectionNumber":1,"value":"They will be disappointed, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":16,"sectionNumber":2,"value":"yes, confounded, all of them. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":16,"sectionNumber":3,"value":"Those who are makers of idols will go into confusion together. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":17,"sectionNumber":1,"value":"Israel will be saved by Yahweh with an everlasting salvation. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":17,"sectionNumber":2,"value":"You will not be disappointed nor confounded to ages everlasting. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":17,"sectionNumber":3,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":18,"sectionNumber":1,"value":"For Yahweh who created the heavens, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":18,"sectionNumber":2,"value":"the God who formed the earth and made it, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":18,"sectionNumber":3,"value":"who established it and didn’t create it a waste, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":18,"sectionNumber":4,"value":"who formed it to be inhabited says: "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":18,"sectionNumber":5,"value":"“I am Yahweh. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":18,"sectionNumber":6,"value":"There is no other. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":19,"sectionNumber":1,"value":"I have not spoken in secret, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":19,"sectionNumber":2,"value":"in a place of the land of darkness. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":19,"sectionNumber":3,"value":"I didn’t say to the offspring of Jacob, ‘Seek me in vain.’ "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":19,"sectionNumber":4,"value":"I, Yahweh, speak righteousness. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":19,"sectionNumber":5,"value":"I declare things that are right. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":19,"sectionNumber":6,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":20,"sectionNumber":1,"value":"“Assemble yourselves and come. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":20,"sectionNumber":2,"value":"Draw near together, you who have escaped from the nations. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":20,"sectionNumber":3,"value":"Those have no knowledge who carry the wood of their engraved image, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":20,"sectionNumber":4,"value":"and pray to a god that can’t save. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":1,"value":"Declare and present it. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":2,"value":"Yes, let them take counsel together. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":3,"value":"Who has shown this from ancient time? "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":4,"value":"Who has declared it of old? "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":5,"value":"Haven’t I, Yahweh? "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":6,"value":"There is no other God besides me, a just God and a Savior. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":7,"value":"There is no one besides me. "},{"type":"line break"},{"type":"stanza end"},{"type":"stanza start"},{"type":"line text","chapterNumber":45,"verseNumber":21,"sectionNumber":8,"value":" "},{"type":"line text","chapterNumber":45,"verseNumber":22,"sectionNumber":1,"value":"“Look to me, and be saved, all the ends of the earth; "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":22,"sectionNumber":2,"value":"for I am God, and there is no other. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":23,"sectionNumber":1,"value":"I have sworn by myself. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":23,"sectionNumber":2,"value":"The word has gone out of my mouth in righteousness, and will not be revoked, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":23,"sectionNumber":3,"value":"that to me every knee shall bow, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":23,"sectionNumber":4,"value":"every tongue shall take an oath. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":24,"sectionNumber":1,"value":"They will say of me, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":24,"sectionNumber":2,"value":"‘There is righteousness and strength only in Yahweh.’ ” "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":24,"sectionNumber":3,"value":"Even to him will men come. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":24,"sectionNumber":4,"value":"All those who raged against him will be disappointed. "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":25,"sectionNumber":1,"value":"All the offspring of Israel will be justified in Yahweh, "},{"type":"line break"},{"type":"line text","chapterNumber":45,"verseNumber":25,"sectionNumber":2,"value":"and will rejoice! "},{"type":"line break"}]